<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="user_rating"
			label="COM_REDSHOP_RATING"
			class="btn-group"
			required="true"
			type="radio">
			<option value="0">0</option>
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
		</field>
		<field
				name="username"
				type="text"
				class="inputbox"
				label="COM_REDSHOP_USER_FULLNAME"
				required="true" />
		<field
				name="title"
				type="text"
				class="inputbox"
				label="COM_REDSHOP_RATING_TITLE"
				required="true" />
		<field name="comment"
			   type="textarea"
			   cols="40"
			   rows="10"
			   label="COM_REDSHOP_COMMENT"
			   filter="safehtml"
			   required="true"
				/>
	</fieldset>
</form>
