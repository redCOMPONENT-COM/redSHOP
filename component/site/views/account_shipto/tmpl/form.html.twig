{% set disabled = isEdit == 1 ? 'disabled' : '' %}
<form action="{{ jroute(requestUrl) }}" method="post" name="adminForm" id="adminForm">
	<div id="divShipping">
		<fieldset class="adminform">
			<legend>{{ jtext('COM_REDSHOP_SHIPPING_ADDRESSES') }}</legend>
			{{ shippingTable }}
			<table cellspacing="3" cellpadding="0" border="0" width="100%">
				<tr>
					<td align="right"><input type="button" class="button btn" name="back"
					                         value="{{ jtext('COM_REDSHOP_CANCEL') }}"
								{{ disabled }}
								             onclick="javascript:cancelForm(this.form);"></td>
					<td align="left"><input type="submit" class="button btn btn-primary" name="submitbtn"
								{{ disabled }}
								            value="{{ jtext('COM_REDSHOP_SAVE') }}">
					</td>
				</tr>
			</table>
		</fieldset>
	</div>
	<input type="hidden" name="cid" value="{{ shippingAddresses.users_info_id }}"/>
	<input type="hidden" name="user_id" value="{{ billingAddresses.user_id }}"/>
	<input type="hidden" name="is_company" value="{{ billingAddresses.is_company }}"/>
	<input type="hidden" name="email" value="{{ billingAddresses.user_email }}"/>
	<input type="hidden" name="shopper_group_id" value="{{ billingAddresses.shopper_group_id }}"/>
	<input type="hidden" name="company_name" value="{{ billingAddresses.company_name }}"/>
	<input type="hidden" name="vat_number" value="{{ billingAddresses.vat_number }}"/>
	<input type="hidden" name="tax_exempt" value="{{ billingAddresses.tax_exempt }}"/>
	<input type="hidden" name="requesting_tax_exempt"
	       value="{{ billingAddresses.requesting_tax_exempt }}"/>
	<input type="hidden" name="tax_exempt_approved"
	       value="{{ billingAddresses.tax_exempt_approved }}"/>
	<input type="hidden" name="task" value="save"/>
	<input type="hidden" name="address_type" value="ST"/>
	<input type="hidden" name="view" value="account_shipto"/>
	<input type="hidden" name="Itemid" value="{{ itemId }}"/>
	<input type="hidden" name="option" value="com_redshop"/>
</form>