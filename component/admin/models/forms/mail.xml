<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
                name="mail_id"
                type="hidden"
        />
        <field
                name="mail_name"
                type="redshop.text"
                label="COM_REDSHOP_MAIL_NAME"
                description="COM_REDSHOP_TOOLTIP_MAIL_NAME"
                placeholder="COM_REDSHOP_TOOLTIP_MAIL_NAME"
                class="form-control"
                default=""
                required="true"
                table-sortable="1"
                table-inline="1"
                table-edit-link="1"
        />
        <field
                name="mail_subject"
                type="redshop.text"
                label="COM_REDSHOP_MAIL_SUBJECT"
                description="COM_REDSHOP_TOOLTIP_MAIL_SUBJECT"
                placeholder="COM_REDSHOP_TOOLTIP_MAIL_SUBJECT"
                class="form-control"
                default=""
                required="true"
                table-sortable="1"
                table-inline="1"
                table-width="25%"
        />
        <field
                name="mail_section"
                type="redshop.mail_section"
                label="COM_REDSHOP_MAIL_SECTION"
                description="COM_REDSHOP_TOOLTIP_MAIL_SECTION"
                placeholder="COM_REDSHOP_TOOLTIP_MAIL_SECTION"
                class="form-control"
                onchange="mail_select(this);"
                default=""
                required="true"
                table-sortable="1"
                table-width="25%"
        />
        <field
                name="mail_order_status"
                type="orderstatus"
                label="COM_REDSHOP_MAIL_ORDER_STATUS"
                description="COM_REDSHOP_MAIL_ORDER_STATUS"
                placeholder="COM_REDSHOP_MAIL_ORDER_STATUS"
                class="form-control"
                default=""
                showon="mail_section:order_status"
                table-hide="1">
                <option value="">COM_REDSHOP_SELECT</option>
        </field>
        <field
                name="mail_bcc"
                type="redshop.text"
                label="COM_REDSHOP_MAIL_BCC"
                description="COM_REDSHOP_TOOLTIP_MAIL_BCC"
                placeholder="COM_REDSHOP_TOOLTIP_MAIL_BCC"
                class="form-control"
                default=""
                table-hide="1"
        />
        <field
                name="published"
                type="redshop.radio"
                label-class="radio-inline"
                default="1"
                label="COM_REDSHOP_PUBLISHED"
                required="true"
                table-sortable="1"
                table-width="5%">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="mail_body"
                type="editor"
                label="COM_REDSHOP_BODY"
                description="COM_REDSHOP_BODY"
                width="300"
                filter="safehtml"
                table-hide="1"
        />
    </fieldset>
</form>
