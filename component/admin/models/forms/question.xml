<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
                name="id"
                type="hidden"
                />
        <field
                id="product_id"
                name="product_id"
                type="Rproducts"
                label="COM_REDSHOP_QUESTION_PRODUCT_NAME"
                description="COM_REDSHOP_QUESTION_PRODUCT_NAME_DESC"
                class="form-control"
                default=""
                required="true"
                />
        <field
                id="user_name"
                name="user_name"
                type="hidden"
                />
        <field
                id="user_email"
                name="user_email"
                type="hidden"
                />
        <field
                id="telephone"
                name="telephone"
                type="redshop.text"
                label="COM_REDSHOP_QUESTION_TELEPHONE"
                description="COM_REDSHOP_QUESTION_TELEPHONE_DESC"
                placeholder="COM_REDSHOP_QUESTION_TELEPHONE_DESC"
                size="80"
                class="form-control"
                default=""
                />
        <field
                id="address"
                name="address"
                type="redshop.text"
                label="COM_REDSHOP_QUESTION_USER_ADDRESS"
                description="COM_REDSHOP_QUESTION_USER_ADDRESS_DESC"
                placeholder="COM_REDSHOP_QUESTION_USER_ADDRESS_DESC"
                size="80"
                class="form-control"
                default=""
                />
        <field
                name="published"
                type="redshop.radio"
                label-class="radio-inline"
                default="1"
                label="COM_REDSHOP_QUESTION_PUBLISHED"
                description="COM_REDSHOP_QUESTION_PUBLISHED_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                id="question"
                name="question"
                type="editor"
                label="COM_REDSHOP_QUESTION_QUESTION"
                description="COM_REDSHOP_QUESTION_QUESTION"
                size="80"
                class="form-control"
                default=""
                required="false"
                />
        <field
                id="answer"
                name="answer"
                type="editor"
                label="COM_REDSHOP_QUESTION_ANSWER"
                description="COM_REDSHOP_QUESTION_ANSWER"
                size="80"
                class="text_area"
                default=""
                required="false"
                />
    </fieldset>
</form>
