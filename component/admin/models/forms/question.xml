<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
            name="id"
            type="hidden"
            />
        <field
            id="product_id"
            name="product_id"
            type="Rproducts"
            label="COM_REDSHOP_QUESTION_PRODUCT_NAME"
            description="COM_REDSHOP_QUESTION_PRODUCT_NAME"
            size="30"
            class="text_area"
            default=""
            required="true"
            />
        <field
            id="user_name"
            name="user_name"
            type="hidden" />
        <field
            id="user_email"
            name="user_email"
            type="hidden"
            />
        <field
            id="telephone"
            name="telephone"
            type="text"
            label="COM_REDSHOP_QUESTION_TELEPHONE"
            description="COM_REDSHOP_QUESTION_TELEPHONE"
            size="80"
            class="text_area"
            default=""
            required="false"
            />
        <field
            id="address"
            name="address"
            type="text"
            label="COM_REDSHOP_QUESTION_USER_ADRESS"
            description="COM_REDSHOP_QUESTION_USER_ADRESS"
            size="80"
            class="text_area"
            default=""
            required="false"
            />
        <field
            name="published"
            type="radio"
            class="btn-group btn-group-yesno"
            default="1"
            label="COM_REDSHOP_PUBLISHED">
                <option value="1">JPUBLISHED</option>
                <option value="0">JUNPUBLISHED</option>
        </field>
        <field
            id="question"
            name="question"
            type="editor"
            label="COM_REDSHOP_QUESTION_QUESTION"
            description="COM_REDSHOP_QUESTION_QUESTION"
            size="80"
            class="text_area"
            default=""
            required="false"
            />
         <field
            id="answer"
            name="answer"
            type="editor"
            label="COM_REDSHOP_QUESTION_ANSWER"
            description="COM_REDSHOP_QUESTION_ANSWER"
            size="80"
            class="text_area"
            default=""
            required="false"
            />
    </fieldset>
</form>
