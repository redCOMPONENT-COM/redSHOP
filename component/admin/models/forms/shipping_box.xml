<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
                name="shipping_box_id"
                type="hidden"
        />
        <field
                name="shipping_box_name"
                type="redshop.text"
                label="COM_REDSHOP_SHIPPING_BOX_NAME"
                description="COM_REDSHOP_SHIPPING_BOX_NAME_DESC"
                placeholder="COM_REDSHOP_SHIPPING_BOX_NAME_DESC"
                class="form-control"
                default=""
                required="true"
                table-sortable="1"
                table-inline="1"
                table-edit-link="1"
        />
        <field
                name="shipping_box_length"
                type="redshop.text"
                label="COM_REDSHOP_SHIPPING_BOX_LENGTH"
                description="COM_REDSHOP_SHIPPING_BOX_LENGTH_DESC"
                placeholder="COM_REDSHOP_SHIPPING_BOX_LENGTH_DESC"
                class="form-control"
                default=""
                required="true"
                filter="float"
                table-sortable="1"
                table-inline="1"
                table-width="10%"
        />
        <field
                name="shipping_box_width"
                type="redshop.text"
                label="COM_REDSHOP_SHIPPING_BOX_WIDTH"
                description="COM_REDSHOP_SHIPPING_BOX_WIDTH_DESC"
                placeholder="COM_REDSHOP_SHIPPING_BOX_WIDTH_DESC"
                class="form-control"
                default=""
                required="true"
                filter="float"
                table-sortable="1"
                table-inline="1"
                table-width="10%"
        />
        <field
                name="shipping_box_height"
                type="redshop.text"
                label="COM_REDSHOP_SHIPPING_BOX_HEIGHT"
                description="COM_REDSHOP_SHIPPING_BOX_HEIGHT_DESC"
                placeholder="COM_REDSHOP_SHIPPING_BOX_HEIGHT_DESC"
                class="form-control"
                default=""
                required="true"
                filter="float"
                table-sortable="1"
                table-inline="1"
                table-width="10%"
        />
        <field
                name="shipping_box_priority"
                type="redshop.text"
                label="COM_REDSHOP_SHIPPING_BOX_PRIORITY"
                description="COM_REDSHOP_SHIPPING_BOX_PRIORITY_DESC"
                placeholder="COM_REDSHOP_SHIPPING_BOX_PRIORITY_DESC"
                class="form-control"
                default=""
                filter="float"
                table-sortable="1"
                table-inline="1"
                table-width="5%"
        />
        <field
                name="published"
                type="redshop.radio"
                label-class="radio-inline"
                default="1"
                label="COM_REDSHOP_PUBLISHED"
                required="true"
                table-sortable="1"
                table-width="5%">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fieldset>
</form>
