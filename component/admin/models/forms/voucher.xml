<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="code"
                type="redshop.text"
                label="COM_REDSHOP_VOUCHER_CODE"
                description="COM_REDSHOP_VOUCHER_CODE_DESC"
                placeholder="COM_REDSHOP_VOUCHER_CODE"
                class="form-control"
                default=""
                required="true"
                table-sortable="1"
                table-inline="1"
                table-edit-link="1"
        />
        <field
                name="amount"
                type="redshop.text"
                label="COM_REDSHOP_VOUCHER_AMOUNT"
                description="COM_REDSHOP_VOUCHER_AMOUNT_DESC"
                placeholder="COM_REDSHOP_VOUCHER_AMOUNT"
                class="form-control"
                default="0.00"
                filter="float"
                table-sortable="1"
                table-inline="1"
                table-edit-link="1"
                table-width="15%"
        />
        <field
                name="type"
                type="redshop.radio"
                label="COM_REDSHOP_VOUCHER_TYPE"
                description="COM_REDSHOP_VOUCHER_TYPE_DESC"
                label-class="radio-inline"
                default="Total"
                table-sortable="1"
                table-width="5%">
            <option value="Total">COM_REDSHOP_VOUCHER_TYPE_OPTION_TOTAL</option>
            <option value="Percentage">COM_REDSHOP_VOUCHER_TYPE_OPTION_PERCENTAGE</option>
        </field>
        <field
                name="start_date"
                type="redshop.calendar"
                label="COM_REDSHOP_VOUCHER_START_DATE"
                description="COM_REDSHOP_VOUCHER_START_DATE_DESC"
                class="form-control"
                default=""
                table-sortable="1"
                table-width="10%"
        />
        <field
                name="end_date"
                type="redshop.calendar"
                label="COM_REDSHOP_VOUCHER_END_DATE"
                description="COM_REDSHOP_VOUCHER_END_DATE_DESC"
                class="form-control"
                default=""
                table-sortable="1"
                table-width="10%"
        />
        <field
                name="free_ship"
                type="redshop.radio"
                label="COM_REDSHOP_VOUCHER_FREE_SHIP"
                description="COM_REDSHOP_VOUCHER_FREE_SHIP_DESC"
                label-class="radio-inline"
                default="0"
                table-sortable="1"
                table-width="5%">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="published"
                type="redshop.radio"
                default="1"
                label-class="radio-inline"
                label="COM_REDSHOP_PUBLISHED"
                description="COM_REDSHOP_PUBLISHED"
                table-sortable="1"
                table-width="5%">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="voucher_left"
                type="redshop.text"
                label="COM_REDSHOP_VOUCHER_AMOUNT_LEFT"
                description="COM_REDSHOP_VOUCHER_AMOUNT_LEFT_DESC"
                placeholder="COM_REDSHOP_VOUCHER_AMOUNT_LEFT"
                class="form-control"
                default="0.00"
                filter="float"
                table-sortable="1"
                table-width="15%"
        />
    </fieldset>
</form>
