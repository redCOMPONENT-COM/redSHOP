<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="name"
                type="redshop.text"
                label="COM_REDSHOP_PLUGIN_NAME"
                description="COM_REDSHOP_PLUGIN_DESC"
                class="form-control"
                default=""
                required="true"
                table-sortable="1"
        />
        <field
                name="published"
                type="radio"
                default="1"
                layout="joomla.form.field.radio.switcher"
                label="COM_REDSHOP_PUBLISHED"
                description="COM_REDSHOP_PUBLISHED"
                table-sortable="1"
                table-width="5%">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
</form>
