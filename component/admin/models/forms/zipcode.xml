<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
                name="id"
                type="hidden"
        />
        <field
                id="city_name"
                name="city_name"
                type="text"
                label="COM_REDSHOP_CITY_NAME"
                description="COM_REDSHOP_CITY_NAME"
                size="30"
                class="text_area"
                default=""
                required="true"
                table-edit-link="1"
                table-sortable="1"
        />
        <field
                id="country_code"
                name="country_code"
                type="rcountry3code"
                label="COM_REDSHOP_COUNTRY_NAME"
                description="COM_REDSHOP_COUNTRY_NAME"
                class="form-control"
                default=""
                required="true"
                table-edit-link="1"
                onchange="getState2Code();"
                table-sortable="1"
        />
        <field
                id="state_code"
                name="state_code"
                type="rstate2code"
                label="COM_REDSHOP_STATE_NAME"
                description="COM_REDSHOP_STATE_NAME"
                size="30"
                class="text_area"
                default=""
                required="true"
                table-sortable="1"
        />
        <field
                id="zipcode"
                name="zipcode"
                type="text"
                label="COM_REDSHOP_ZIPCODE_FROM"
                description="COM_REDSHOP_FROM"
                size="80"
                class="text_area"
                default=""
                required="true"
                table-edit-link="1"
                table-sortable="1"
        />
        <field
                id="zipcodeto"
                name="zipcodeto"
                type="text"
                label="COM_REDSHOP_TO"
                description="COM_REDSHOP_TO"
                size="80"
                class="text_area"
                default=""
                required="false"
                table-hide="1"
        />
    </fieldset>
</form>