<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="redshop.text"
            label="COM_REDSHOP_FILTER_SEARCH_DESC"
            placeholder="JSEARCH_FILTER"
            class="js-enter-submits"
            />
        <field
                name="section"
                type="list"
                label="COM_REDSHOP_TEXT_SECTION"
                onchange="this.form.submit();">
            <option value="">COM_REDSHOP_TEXT_SECTION_OPTION_SELECT</option>
            <option value="product">COM_REDSHOP_TEXT_SECTION_OPTION_PRODUCT</option>
            <option value="category">COM_REDSHOP_TEXT_SECTION_OPTION_CATEGORY</option>
            <option value="newsletter">COM_REDSHOP_TEXT_SECTION_OPTION_NEWSLETTER</option>
        </field>
    </fields>
    <fields name="list">
        <field
            name="limit"
            type="limitbox"
            default="25"
            label="JGLOBAL_ORDERING_LIST_LIMIT"
            description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
            onchange="this.form.submit();"
            class="form-control"
            />
    </fields>
</form>