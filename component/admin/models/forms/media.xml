<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
                name="id"
                type="hidden"
                />
        <field
                id="media_name"
                name="media_name"
                type="hidden"
                />
        <field
                id="youtube_id"
                name="youtube_id"
                type="redshop.text"
                label="COM_REDSHOP_MEDIA_YOUTUBE_ID"
                description="COM_REDSHOP_MEDIA_YOUTUBE_ID_DESCRIPTION"
                placeholder="COM_REDSHOP_MEDIA_YOUTUBE_ID_DESCRIPTION"
                size="3"
                class="input-xs"
                default=""
                />
        <field
                id="youtube_content"
                name="youtube_content"
                type="redshop.youtube"
                label="COM_REDSHOP_MEDIA_YOUTUBE_CONTENT"
                description="COM_REDSHOP_MEDIA_YOUTUBE_CONTENT_DESCRIPTION"
                placeholder="COM_REDSHOP_MEDIA_YOUTUBE_CONTENT_DESCRIPTION"
                size="3"
                class="input-xs"
                default=""
                />
        <field
                id="video_content"
                name="video_content"
                type="redshop.video"
                label="COM_REDSHOP_MEDIA_VIDEO_CONTENT"
                description="COM_REDSHOP_MEDIA_VIDEO_CONTENT_DESCRIPTION"
                placeholder="COM_REDSHOP_MEDIA_VIDEO_CONTENT_DESCRIPTION"
                size="3"
                class="input-xs"
                default=""
                />
        <field
                name="media_alternate_text"
                type="redshop.text"
                label="COM_REDSHOP_MEDIA_ALTERNATE_TEXT"
                description="COM_REDSHOP_MEDIA_ALTERNATE_TEXT_DESCRIPTION"
                placeholder="COM_REDSHOP_MEDIA_ALTERNATE_TEXT_DESCRIPTION"
                size="3"
                class="input-xs"
                default=""
                required="true"
                />
        <field
                name="media_section"
                type="list"
                label-class="select-2"
                default="1"
                label="COM_REDSHOP_MEDIA_SECTION"
                disable="true"
                onchange="loadSectionId(this);"
                required="true">
            <option value="product">COM_REDSHOP_MEDIA_SECTION_PRODUCT</option>
            <option value="category">COM_REDSHOP_MEDIA_SECTION_CATEGORY</option>
            <option value="manufacturer">COM_REDSHOP_MEDIA_SECTION_MANUFACTURER</option>
            <option value="property">COM_REDSHOP_MEDIA_SECTION_ATTRIBUTE</option>
            <option value="subproperty">COM_REDSHOP_MEDIA_SECTION_SUBATTRIBUTE</option>
        </field>
        <field
                name="media_type"
                type="list"
                label-class="select-2"
                default="1"
                label="COM_REDSHOP_MEDIA_TYPE"
                disable="true"
                onchange="loadYoutubeFields();"
                required="true">
            <option value="images">COM_REDSHOP_MEDIA_TYPE_IMAGE</option>
            <option value="videos">COM_REDSHOP_MEDIA_TYPE_VIDEO</option>
            <option value="documents">COM_REDSHOP_MEDIA_TYPE_DOCUMENT</option>
            <option value="youtube">COM_REDSHOP_MEDIA_TYPE_YOUTUBE</option>
        </field>
        <field
                name="published"
                type="list"
                label-class="radio-inline"
                default="1"
                label="COM_REDSHOP_PUBLISHED"
                required="true">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field
                name="section_id"
                type="MediaSectionId"
                label-class="radio-inline"
                default="1"
                label="COM_REDSHOP_MEDIA_SECTION_ID"
                required="true">
        </field>
    </fieldset>
</form>
