<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
                name="template_id"
                type="hidden"
        />
        <field
                name="template_name"
                type="redshop.text"
                label="COM_REDSHOP_TEMPLATE_NAME"
                description="COM_REDSHOP_TEMPLATE_NAME_DESC"
                placeholder="COM_REDSHOP_TEMPLATE_NAME_DESC"
                class="form-control"
                default=""
                required="true"
                table-sortable="1"
                table-inline="1"
                table-edit-link="1"
        />
        <field
                name="template_section"
                type="redshop.template_section"
                label="COM_REDSHOP_TEMPLATE_SECTION"
                description="COM_REDSHOP_TEMPLATE_SECTION_DESC"
                placeholder="COM_REDSHOP_TEMPLATE_SECTION_DESC"
                class="form-control"
                default=""
                required="true"
                table-sortable="1"
                table-width="25%"
        />
        <field
                name="order_status"
                type="redshop.order_status"
                label="COM_REDSHOP_TEMPLATE_ORDER_STATUS"
                description="COM_REDSHOP_TEMPLATE_ORDER_STATUS_DESC"
                placeholder="COM_REDSHOP_TEMPLATE_ORDER_STATUS_DESC"
                class="form-control"
                default=""
                table-hide="1"
                multiple="true"
                showon="template_section:clicktell_sms_message"
        />
        <field
                name="payment_methods"
                type="redshop.payment_method"
                label="COM_REDSHOP_TEMPLATE_PAYMENT_METHOD"
                description="COM_REDSHOP_TEMPLATE_PAYMENT_METHOD_DESC"
                placeholder="COM_REDSHOP_TEMPLATE_PAYMENT_METHOD_DESC"
                class="form-control"
                default=""
                showon="template_section:clicktell_sms_message"
                multiple="true"
                table-hide="1"
        />
        <field
                name="shipping_methods"
                type="redshop.shipping_method"
                label="COM_REDSHOP_TEMPLATE_SHIPPING_METHOD"
                description="COM_REDSHOP_TEMPLATE_SHIPPING_METHOD_DESC"
                placeholder="COM_REDSHOP_TEMPLATE_SHIPPING_METHOD_DESC"
                class="form-control"
                default=""
                showon="template_section:clicktell_sms_message"
                multiple="true"
                table-hide="1"
        />
        <field
                name="published"
                type="redshop.radio"
                label-class="radio-inline"
                default="1"
                label="COM_REDSHOP_PUBLISHED"
                required="true"
                table-sortable="1"
                table-width="5%">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="template_desc"
                type="editor"
                editor="codemirror"
                label="COM_REDSHOP_DESCRIPTION"
                description="COM_REDSHOP_DESCRIPTION"
                class="form-control"
                rows="50"
                filter="safehtml"
                table-hide="1"
        />
    </fieldset>
</form>
