<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="redshop.text"
                label="COM_REDSHOP_FILTER_SEARCH_DESC"
                placeholder="JSEARCH_FILTER"
                class="js-enter-submits"
                />
        <field
                name="country_id"
                type="rcountries"
                label="COM_REDSHOP_COUNTRY"
                description="COM_REDSHOP_COUNTRY_DESC"
                class="form-control"
                onchange="this.form.submit();">
            <option value="">COM_REDSHOP_SELECT_COUNTRY</option>
        </field>
    </fields>

    <fields name="list">
        <field
                name="limit"
                type="limitbox"
                default="25"
                label="JGLOBAL_ORDERING_LIST_LIMIT"
                description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                class="form-control"
                />
    </fields>
</form>