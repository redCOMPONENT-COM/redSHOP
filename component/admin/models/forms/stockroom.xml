<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
                name="id"
                type="hidden"
        />
        <field
                id="name"
                name="name"
                type="text"
                label="COM_REDSHOP_NAME"
                class="form-control"
                required="true"
                table-sortable="1"
                table-width="10%"
        />
        <field
                id="min_stock_amount"
                name="min_stock_amount"
                type="text"
                label="COM_REDSHOP_MINIMUM_STOCK_AMOUNT"
                class="form-control"
                table-hide="1"
                table-sortable="1"
        />
        <field
                id="delivery_time"
                name="delivery_time"
                type="radio"
                layout="joomla.form.field.radio.switcher"
                label="COM_REDSHOP_DELIVERY_TIME_IN"
                default="1">
            <option value="Days">Days</option>
            <option value="Weeks">Weeks</option>
        </field>
        <field
                id="min_del_time"
                name="min_del_time"
                type="text"
                label="COM_REDSHOP_MINIMUM_DELIVERY_TIME"
                description="COM_REDSHOP_TOOLTIP_MINIMUM_DELIVERY_TIME"
                default="0"
        />
        <field
                id="max_del_time"
                name="max_del_time"
                type="text"
                label="COM_REDSHOP_MAXIMUM_DELIVERY_TIME"
                description="COM_REDSHOP_TOOLTIP_MAXIMUM_DELIVERY_TIME"
                default="0"
        />
        <field
                id="show_in_front"
                name="show_in_front"
                type="radio"
                layout="joomla.form.field.radio.switcher"
                label="COM_REDSHOP_SHOW_ON_STOCKLIST"
                default="1">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                id="published"
                name="published"
                type="radio"
                layout="joomla.form.field.radio.switcher"
                label="COM_REDSHOP_PUBLISHED"
                default="1">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                id="desc"
                name="desc"
                type="editor"
                label="COM_REDSHOP_DESCRIPTION"
                size="80"
                class="text_area"
                default=""
                required="false"
                table-hide="1"
        />
    </fieldset>
</form>
