<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="redshop.text"
                label="COM_REDSHOP_FILTER_SEARCH_DESC"
                placeholder="JSEARCH_FILTER"
                class="js-enter-submits"
                />
        <field
                name="customer_type"
                type="list"
                label="COM_REDSHOP_SHOPPER_GROUP_CUSTOMER_TYPE"
                class="form-control"
                default=""
                onchange="this.form.submit();">
            <option value="">COM_REDSHOP_SHOPPER_GROUP_CUSTOMER_TYPE</option>
            <option value="0">COM_REDSHOP_COMPANY</option>
            <option value="1">COM_REDSHOP_PRIVATE</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="limit"
                type="limitbox"
                default="25"
                label="JGLOBAL_ORDERING_LIST_LIMIT"
                description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                class="form-control"
                />
    </fields>
</form>