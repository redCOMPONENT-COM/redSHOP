<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="redshop.text"
                label="COM_REDSHOP_FILTER_SEARCH_DESC"
                placeholder="JSEARCH_FILTER"
                class="js-enter-submits"
                />
        <field
                name="product_id"
                type="rproducts"
                label="COM_REDSHOP_FILTER_PRODUCT"
                description="COM_REDSHOP_FILTER_PRODUCT_DESC"
                class="form-control"
                onchange="this.form.submit();">
            <option value="">COM_REDSHOP_SELECT_PRODUCT</option>
        </field>
        <field
                name="published"
                type="rpublished"
                onchange="this.form.submit();"
                label="JOPTION_SELECT_PUBLISHED"
                class="form-control"
                statuses="0,1">
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="limit"
                type="limitbox"
                class="form-control"
                default="25"
                label="JGLOBAL_ORDERING_LIST_LIMIT"
                description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>