<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details">
		<field
				name="id"
				type="hidden"
		/>
		<field
				id="email"
				name="email"
				type="hidden"
		/>
		<field
				id="company_name"
				name="company_name"
				type="hidden"
		/>
		<field
				id="images"
				name="images"
				type="hidden"
		/>
		<field
				id="title"
				name="title"
				type="text"
				label="COM_REDSHOP_RATING_TITLE"
				description="COM_REDSHOP_RATING_TITLE"
				size="30"
				class="text_area"
				default=""
				required="true"
				table-edit-link="1"
				table-sortable="1"
		/>
		<field
				id="comment"
				name="comment"
				type="textarea"
				label="COM_REDSHOP_COMMENT"
				description="COM_REDSHOP_COMMENT"
				size="30"
				class="text_area"
				default=""
				required="true"
				table-hide="1"
		/>
		<field
				id="product_id"
				name="product_id"
				type="rproducts"
				label="COM_REDSHOP_PRODUCT_NAME"
				description="COM_REDSHOP_PRODUCT_NAME"
				size="30"
				class="text_area"
				required="true"
				table-sortable="1"
		/>
		<field
				id="userid"
				name="userid"
				type="redshop.users"
				label="COM_REDSHOP_RATING_USERNAME"
				description="COM_REDSHOP_RATING_USERNAME"
				required="true"
				table-sortable="1"
		/>
		<field
				id="time"
				name="time"
				type="text"
				label="COM_REDSHOP_RATING_DATE"
				description="COM_REDSHOP_RATING_DATE"
				size="30"
				table-sortable="1"
		/>
		<field
				id="user_rating"
				name="user_rating"
				type="text"
				label="COM_REDSHOP_RATING"
				description="COM_REDSHOP_RATING"
				size="30"
				class="text_area"
				default=""
				required="true"
		/>
		<field
				name="favoured"
				type="redshop.radio"
				label-class="radio-inline"
				default="1"
				label="COM_REDSHOP_FAVOURED"
				required="true"
				table-width="5%">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field
				name="published"
				type="redshop.radio"
				label-class="radio-inline"
				default="1"
				label="COM_REDSHOP_PUBLISHED"
				required="true"
				table-sortable="1"
				table-width="5%">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
	</fieldset>
</form>