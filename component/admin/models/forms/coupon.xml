<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
			/>
		<field
			id="coupon_code"
			name="coupon_code"
			type="text"
			label="COM_REDSHOP_COUPON_CODE"
			description="COM_REDSHOP_COUPON_CODE"
			size="30"
			class="text_area"
			default=""
			required="true"
			/>
		<field 
			name="percent_or_total" 
			type="list" 
			default="0" 
			label="COM_REDSHOP_PERCENTAGE_OR_TOTAL" 
			description="">
		  	<option value="0">COM_REDSHOP_TOTAL</option>
		  	<option value="1">COM_REDSHOP_PERCENTAGE</option>
		</field>
		<field
			id="coupon_value"
			name="coupon_value"
			type="text"
			label="COM_REDSHOP_COUPON_VALUE"
			description="COM_REDSHOP_COUPON_VALUE"
			size="30"
			class="text_area"
			default="0.00"
			required="true"
			filter="float"
			/>
		<field
			name="start_date"
			type="calendar"
			default="NOW"
			label="COM_REDSHOP_COUPON_START_DATE"
			description="COM_REDSHOP_COUPON_START_DATE"
			format="%d-%m-%Y"
			filter="user_utc"
			/>
		<field
			name="end_date"
			type="calendar"
			default="NOW"
			label="COM_REDSHOP_COUPON_END_DATE"
			description="COM_REDSHOP_COUPON_END_DATE"
			format="%d-%m-%Y"
			filter="user_utc"
			/>
		<field 
			name="coupon_type" 
			type="list" 
			default="0" 
			label="COM_REDSHOP_COUPON_TYPE" 
			description="">
		  	<option value="0">COM_REDSHOP_GLOBAL</option>
		  	<option value="1">COM_REDSHOP_USER_SPECIFIC</option>
		</field>
		<field
			name="userid"
			type="rusers"
			default=""
			label="COM_REDSHOP_USER"
			description="COM_REDSHOP_USER"
			/>
		<field
			id="subtotal"
			name="subtotal"
			type="text"
			label="COM_REDSHOP_SUBTOTAL_LBL"
			description="COM_REDSHOP_SUBTOTAL_LBL"
			size="30"
			class="text_area"
			default="0.00"
			required="true"
			filter="float"
			/>
		<field
			name="free_shipping"
			type="radio"
			class="btn-group btn-group-yesno"
			default="1"
			label="COM_REDSHOP_FREE_SHIPPING">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>
		<field
			id="coupon_left"
			name="coupon_left"
			type="text"
			label="COM_REDSHOP_LBL_COUPON_LEFT"
			description="COM_REDSHOP_LBL_COUPON_LEFT"
			size="30"
			class="text_area"
			default="0"
			required="true"
			filter="integer"
			/>
		<field
			name="published"
			type="radio"
			class="btn-group btn-group-yesno"
			default="1"
			label="COM_REDSHOP_PUBLISHED">
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
		</field>
	</fieldset>
	
</form>
