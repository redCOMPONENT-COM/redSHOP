<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
			/>
		<field
			name="name"
			type="redshop.text"
			label="COM_REDSHOP_CATEGORY_NAME"
			description="COM_REDSHOP_TOOLTIP_CATEGORY_NAME"
			size="40"
			class="inputbox"
			required="true"
			/>
		<field
			name="parent_id"
			type="categorylist"
			label="COM_REDSHOP_CATEGORY_PARENT"
			description="COM_REDSHOP_TOOLTIP_CATEGORY_PARENT"
			>
			<option value="0">COM_REDSHOP_SELECT_CATEGORY</option>
		</field>
		<field
			name="template"
			type="template"
			label="COM_REDSHOP_CATEGORY_TEMPLATE"
			description="COM_REDSHOP_TOOLTIP_CATEGORY_TEMPLATE"
			required="true"
			>
			<option value="0">COM_REDSHOP_SELECT_TEMPLATE</option>
		</field>
		<field
			name="more_template"
			type="template"
			class="inputbox"
			label="COM_REDSHOP_CATEGORY_MORE_TEMPLATE"
			description="COM_REDSHOP_TOOLTIP_CATEGORY_TEMPLATE"
			multiple="multiple"
			>
		</field>
		<field
			name="compare_template_id"
			type="templatecompare"
			label="COM_REDSHOP_PRODUCT_COMPARE_TEMPLATE_FOR_CATEGORY"
			description="COM_REDSHOP_TOOLTIP_PRODUCT_COMPARE_TEMPLATE_FOR_CATEGORY_LABEL"
			>
			<option value="0">COM_REDSHOP_SELECT_TEMPLATE</option>
		</field>
		
		<field
			name="products_per_page"
			type="redshop.text"
			label="COM_REDSHOP_SHOW_PRODUCT_PER_PAGE"
			description="COM_REDSHOP_TOOLTIP_SHOW_PRODUCT_PER_PAGE"
			size="40"
			class="inputbox"
			default=""
			/>
		<field
			name="description"
			type="editor"
			label="COM_REDSHOP_DESCRIPTION"
			description="COM_REDSHOP_DESCRIPTION"
			default=""
			/>
		<field
			name="short_description"
			type="editor"
			label="COM_REDSHOP_SHORT_DESCRIPTION"
			description="COM_REDSHOP_SHORT_DESCRIPTION"
			default=""
			/>
		<field
			name="published"
			type="redshop.radio"
			class="btn-group"
			default="1"
			label-class="radio-inline"
			label="COM_REDSHOP_PUBLISHED"
			description="COM_REDSHOP_PUBLISHED">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		<field name="asset_id" type="hidden" filter="unset" />
		<field 
			name="rules" 
			type="rules" 
			label="JFIELD_RULES_LABEL"
			translate_label="false" 
			filter="rules"
			component="com_redshop" 
			section="category" 
			validate="rules"
		/>
		<field
			name="level"
			type="hidden"
			filter="unset"/>
		<field
			name="lft"
			type="hidden"
			filter="unset"/>

		<field
			name="rgt"
			type="hidden"
			filter="unset"/>
		<field 
            name="created_date" 
            type="calendar" 
            label="JGLOBAL_FIELD_CREATED_LABEL"
            description="JGLOBAL_FIELD_CREATED_DESC" 
            readonly="true"
            size="22"
            format="%Y-%m-%d %H:%M:%S" 
            filter="user_utc" />
        <field 
            name="created_by" 
            readonly="true"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL" 
            description="JGLOBAL_FIELD_CREATED_BY_DESC" />
        <field 
            name="modified_date" 
            type="calendar" 
            class="readonly"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            size="22" 
            readonly="true" 
            format="%Y-%m-%d %H:%M:%S" 
            filter="user_utc" />
        <field 
            name="modified_by" 
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            class="readonly"
            readonly="true"
            filter="unset"
         />
        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />
        <field 
            name="publish_up" 
            type="calendar"
            label="COM_REDSLIDER_FIELD_PUBLISH_UP_LABEL" description="COM_REDSLIDER_FIELD_PUBLISH_UP_DESC"
            format="%Y-%m-%d %H:%M:%S" size="22"
            filter="user_utc" />

        <field 
            name="publish_down" 
            type="calendar"
            label="COM_REDSLIDER_FIELD_PUBLISH_DOWN_LABEL" description="COM_REDSLIDER_FIELD_PUBLISH_DOWN_DESC"
            format="%Y-%m-%d %H:%M:%S" size="22"
            filter="user_utc" />
	</fieldset>
	<fieldset name="seo">
		<field
			name="append_to_global_seo"
			type="list"
			label="COM_REDSHOP_APPEND_TO_GLOBAL_SEO_LBL"
			description="COM_REDSHOP_TOOLTIP_APPEND_TO_GLOBAL_SEO_LBL"
			>
			<option value="append">COM_REDSHOP_APPEND_TO_GLOBAL_SEO</option>
			<option value="prepend">COM_REDSHOP_PREPEND_TO_GLOBAL_SEO</option>
			<option value="replace">COM_REDSHOP_REPLACE_TO_GLOBAL_SEO</option>
		</field>
		<field
			name="pagetitle"
			type="redshop.text"
			label="COM_REDSHOP_PAGE_TITLE"
			description="COM_REDSHOP_TOOLTIP_PAGE_TITLE"
			size="40"
			class="inputbox"
			default=""
			/>
		<field
			name="pageheading"
			type="redshop.text"
			label="COM_REDSHOP_PAGE_HEADING"
			description="COM_REDSHOP_TOOLTIP_PAGE_HEADING"
			size="40"
			class="inputbox"
			default=""
			/>
		<field
			name="sef_url"
			type="redshop.text"
			label="COM_REDSHOP_SEF_URL"
			description="COM_REDSHOP_TOOLTIP_SEF_URL"
			size="40"
			class="inputbox"
			default=""
			/>
		<field
			name="canonical_url"
			type="redshop.text"
			label="COM_REDSHOP_CANONICAL_URL_PRODUCT"
			description="COM_REDSHOP_TOOLTIP_CANONICAL_URL_PRODUCT"
			size="40"
			class="inputbox"
			default=""
			/>
		<field
			name="metakey"
			type="textarea"
			label="COM_REDSHOP_META_KEYWORDS"
			description="COM_REDSHOP_TOOLTIP_META_KEYWORDS"
			size="40"
			class="inputbox"
			default=""
			/>
		<field
			name="metadesc"
			type="textarea"
			label="COM_REDSHOP_META_DESCRIPTION"
			description="COM_REDSHOP_TOOLTIP_META_DESCRIPTION"
			size="40"
			class="inputbox"
			default=""
			/>
		<field
			name="metalanguage_setting"
			type="textarea"
			label="COM_REDSHOP_META_LANG_SETTING"
			description="COM_REDSHOP_TOOLTIP_META_LANG_SETTING"
			size="40"
			class="inputbox"
			default=""
			/>
		<field
			name="metarobot_info"
			type="textarea"
			label="COM_REDSHOP_META_ROBOT_INFO"
			description="COM_REDSHOP_TOOLTIP_META_ROBOT_INFO"
			size="40"
			class="inputbox"
			default=""
			/>
	</fieldset>
</form>
