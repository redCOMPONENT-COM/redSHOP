<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="name"
                type="redshop.text"
                label="COM_REDSHOP_CATEGORY_NAME"
                description="COM_REDSHOP_TOOLTIP_CATEGORY_NAME"
                maxlength="255"
                class="form-control"
                required="true"
                table-sortable="1"
                table-inline="1"
                table-edit-link="1"
                table-width="20%"
        />
        <field
                name="parent_id"
                type="categorylist"
                label="COM_REDSHOP_CATEGORY_PARENT"
                description="COM_REDSHOP_TOOLTIP_CATEGORY_PARENT"
                class="form-control"
                parent="1"
                table-hide="1"
                show_root="1"
        >
        </field>
        <field
                name="template"
                type="template"
                label="COM_REDSHOP_CATEGORY_TEMPLATE"
                description="COM_REDSHOP_TOOLTIP_CATEGORY_TEMPLATE"
                required="true"
                default=""
                table-hide="1"
        >
            <option value="">COM_REDSHOP_SELECT_TEMPLATE</option>
        </field>
        <field
                name="more_template"
                type="template"
                class="form-control"
                label="COM_REDSHOP_CATEGORY_MORE_TEMPLATE"
                description="COM_REDSHOP_TOOLTIP_CATEGORY_TEMPLATE"
                multiple="multiple"
                table-hide="1"
        >
        </field>
        <field
                name="compare_template_id"
                type="templatecompare"
                label="COM_REDSHOP_PRODUCT_COMPARE_TEMPLATE_FOR_CATEGORY"
                description="COM_REDSHOP_TOOLTIP_PRODUCT_COMPARE_TEMPLATE_FOR_CATEGORY_LABEL"
                default=""
                table-hide="1"
        >
            <option value="">COM_REDSHOP_SELECT_TEMPLATE</option>
        </field>
        <field
                name="products_per_page"
                type="number"
                label="COM_REDSHOP_SHOW_PRODUCT_PER_PAGE"
                description="COM_REDSHOP_TOOLTIP_SHOW_PRODUCT_PER_PAGE"
                size="40"
                class="form-control"
                min="0"
                required="true"
                table-hide="1"
        />
        <field
                name="description"
                type="editor"
                label="COM_REDSHOP_DESCRIPTION"
                description="COM_REDSHOP_DESCRIPTION"
                default=""
                table-sortable="1"
                table-width="50%"
                filter="safehtml"
        />
        <field
                name="short_description"
                type="editor"
                label="COM_REDSHOP_SHORT_DESCRIPTION"
                description="COM_REDSHOP_SHORT_DESCRIPTION"
                default=""
                table-hide="1"
                filter="safehtml"
        />
        <field
                name="published"
                type="redshop.radio"
                class="btn-group"
                default="1"
                label-class="radio-inline"
                label="COM_REDSHOP_PUBLISHED"
                description="COM_REDSHOP_PUBLISHED"
                table-sortable="1"
                table-width="5%">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field
                name="asset_id"
                type="hidden"
                filter="unset"
        />
        <field
                name="rules"
                type="rules"
                label="JFIELD_RULES_LABEL"
                translate_label="false"
                filter="rules"
                component="com_redshop"
                section="category"
                validate="rules"
                table-hide="1"
        />
        <field
                name="level"
                type="hidden"
                filter="unset"
        />
        <field
                name="lft"
                type="hidden"
                filter="unset"
        />
        <field
                name="rgt"
                type="hidden"
                filter="unset"
        />
        <field
                name="created_date"
                type="redshop.text"
                label="JGLOBAL_FIELD_CREATED_LABEL"
                description="JGLOBAL_FIELD_CREATED_DESC"
                readonly="true"
                table-hide="1"
        />
        <field
                name="created_by"
                readonly="true"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                description="JGLOBAL_FIELD_CREATED_BY_DESC"
                table-hide="1"
        />
        <field
                name="modified_date"
                type="redshop.text"
                class="readonly"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                size="22"
                readonly="true"
                table-hide="1"
        />
        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                class="readonly"
                readonly="true"
                filter="unset"
                table-hide="1"
        />
        <field name="checked_out" type="hidden" filter="unset"/>
        <field name="checked_out_time" type="hidden" filter="unset"/>
        <field
                name="publish_up"
                type="redshop.text"
                label="COM_REDSLIDER_FIELD_PUBLISH_UP_LABEL"
                description="COM_REDSLIDER_FIELD_PUBLISH_UP_DESC"
                table-hide="1"
        />
        <field
                name="publish_down"
                type="redshop.text"
                label="COM_REDSLIDER_FIELD_PUBLISH_DOWN_LABEL"
                description="COM_REDSLIDER_FIELD_PUBLISH_DOWN_DESC"
                table-hide="1"
        />
    </fieldset>
    <fieldset name="seo">
        <field
                name="append_to_global_seo"
                type="list"
                label="COM_REDSHOP_APPEND_TO_GLOBAL_SEO_LBL"
                description="COM_REDSHOP_TOOLTIP_APPEND_TO_GLOBAL_SEO_LBL"
        >
            <option value="append">COM_REDSHOP_APPEND_TO_GLOBAL_SEO</option>
            <option value="prepend">COM_REDSHOP_PREPEND_TO_GLOBAL_SEO</option>
            <option value="replace">COM_REDSHOP_REPLACE_TO_GLOBAL_SEO</option>
        </field>
        <field
                name="pagetitle"
                type="redshop.text"
                label="COM_REDSHOP_PAGE_TITLE"
                description="COM_REDSHOP_TOOLTIP_PAGE_TITLE"
                size="40"
                class="form-control"
                default=""
        />
        <field
                name="pageheading"
                type="redshop.text"
                label="COM_REDSHOP_PAGE_HEADING"
                description="COM_REDSHOP_TOOLTIP_PAGE_HEADING"
                size="40"
                class="form-control"
                default=""
        />
        <field
                name="sef_url"
                type="redshop.text"
                label="COM_REDSHOP_SEF_URL"
                description="COM_REDSHOP_TOOLTIP_SEF_URL"
                size="40"
                class="form-control"
                default=""
        />
        <field
                name="canonical_url"
                type="redshop.text"
                label="COM_REDSHOP_CANONICAL_URL_PRODUCT"
                description="COM_REDSHOP_TOOLTIP_CANONICAL_URL_PRODUCT"
                size="40"
                class="form-control"
                default=""
        />
        <field
                name="metakey"
                type="textarea"
                label="COM_REDSHOP_META_KEYWORDS"
                description="COM_REDSHOP_TOOLTIP_META_KEYWORDS"
                size="40"
                class="form-control"
                default=""
        />
        <field
                name="metadesc"
                type="textarea"
                label="COM_REDSHOP_META_DESCRIPTION"
                description="COM_REDSHOP_TOOLTIP_META_DESCRIPTION"
                size="40"
                class="form-control"
                default=""
        />
        <field
                name="metalanguage_setting"
                type="textarea"
                label="COM_REDSHOP_META_LANG_SETTING"
                description="COM_REDSHOP_TOOLTIP_META_LANG_SETTING"
                size="40"
                class="form-control"
                default=""
        />
        <field
                name="metarobot_info"
                type="textarea"
                label="COM_REDSHOP_META_ROBOT_INFO"
                description="COM_REDSHOP_TOOLTIP_META_ROBOT_INFO"
                size="40"
                class="form-control"
                default=""
        />
    </fieldset>
    <fields name="product_filter" label="COM_REDSHOP_PRODUCT_FILTERS">
        <fieldset name="filters">
            <field
                    name="enable"
                    type="redshop.radio"
                    default="0"
                    label="COM_REDSHOP_FILTER_ENABLE">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="product_attributes"
                    showon="enable:1"
                    type="productattributes"
                    product_ids=""
                    label="COM_REDSHOP_PRODUCT_ATTRIBUTES"
                    multiple="true"
            />
            <field
                    name="category_enable"
                    showon="enable:1"
                    type="redshop.radio"
                    default="0"
                    label="COM_REDSHOP_FILTER_ENABLE_CATEGORY"
                    description="COM_REDSHOP_FILTER_ENABLE_CATEGORY_NOTICE">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="manufacturer_enable"
                    showon="enable:1"
                    type="redshop.radio"
                    default="0"
                    label="COM_REDSHOP_FILTER_ENABLE_MANUFACTURER">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="price_enable"
                    showon="enable:1"
                    type="redshop.radio"
                    default="0"
                    label="COM_REDSHOP_FILTER_ENABLE_PRICE">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="customfield_enable"
                    showon="enable:1"
                    type="redshop.radio"
                    default="0"
                    label="COM_REDSHOP_FILTER_ENABLE_CUSTOM_FIELDS">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="customfields"
                    type="extrafields"
                    showon="enable:1[AND]customfield_enable:1"
                    section="1"
                    field_type="3,4,5,6"
                    multiple="true"
                    label="COM_REDSHOP_PRODUCT_CUSTOM_FIELDS"
                    description="COM_REDSHOP_PRODUCT_CUSTOM_FIELDS_FILTER_NOTICE">
            </field>
        </fieldset>
    </fields>
</form>
