<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
                name="id"
                type="hidden"
                />
        <field
                name="name"
                type="redshop.text"
                label="COM_REDSHOP_SUPPLIER_NAME"
                description="COM_REDSHOP_SUPPLIER_NAME"
                placeholder="COM_REDSHOP_SUPPLIER_NAME"
                class="form-control"
                default=""
                required="true"
                />
        <field
                name="email"
                type="redshop.text"
                label="COM_REDSHOP_SUPPLIER_EMAIL"
                description="COM_REDSHOP_SUPPLIER_EMAIL"
                placeholder="COM_REDSHOP_SUPPLIER_EMAIL"
                size="30"
                class="form-control"
                default=""
                required="false"
                />
        <field
                name="published"
                type="redshop.radio"
                label-class="radio-inline"
                default="1"
                label="COM_REDSHOP_PUBLISHED"
                required="true">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="description"
                type="editor"
                label="COM_REDSHOP_DESCRIPTION"
                description=""
                width="300"
                filter="safehtml"
                />
    </fieldset>
</form>
