<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="name"
                type="redshop.text"
                label="COM_REDSHOP_MANUFACTURER_NAME"
                description="COM_REDSHOP_MANUFACTURER_NAME_DESC"
                placeholder="COM_REDSHOP_MANUFACTURER_NAME_DESC"
                class="form-control"
                default=""
                required="true"
                table-sortable="1"
                table-inline="1"
                table-edit-link="1"
        />
        <field
                name="template_id"
                type="redshop.template"
                label="COM_REDSHOP_MANUFACTURER_TEMPLATE"
                description="COM_REDSHOP_MANUFACTURER_TEMPLATE_DESC"
                section="manufacturer_products"
                class="form-control"
                default=""
                required="true"
                table-hide="1">
            <option value="">COM_REDSHOP_MANUFACTURER_TEMPLATE_OPTION_SELECT</option>
        </field>
        <field
                name="media"
                type="redshop.media"
                label="COM_REDSHOP_MANUFACTURER_IMAGE"
                description="COM_REDSHOP_MANUFACTURER_IMAGE_DESC"
                table-sortable="0"
                table-inline="0"
                table-edit-link="0"
                table-width="10%"
                media-dom="manufacturer_image"
                media-alternate="1"
                media-type="manufacturer"
                media-section="manufacturer"
                media-gallery="0"
                media-newMediaPath="1"
        />
        <field
                name="excluding_category_list"
                type="hidden"
                label="COM_REDSHOP_MANUFACTURER_EXCLUDING_CATEGORY_LIST"
                description="COM_REDSHOP_MANUFACTURER_EXCLUDING_CATEGORY_LIST_DESC"
        />
        <field
                name="email"
                type="redshop.text"
                label="COM_REDSHOP_MANUFACTURER_EMAIL"
                description="COM_REDSHOP_MANUFACTURER_EMAIL_DESC"
                placeholder="COM_REDSHOP_MANUFACTURER_EMAIL_DESC"
                size="30"
                class="form-control"
                default=""
                validate="email"
                table-sortable="1"
                table-width="20%"
        />
        <field
                name="manufacturer_url"
                type="redshop.text"
                label="COM_REDSHOP_MANUFACTURER_URL"
                description="COM_REDSHOP_MANUFACTURER_URL_DESC"
                placeholder="COM_REDSHOP_MANUFACTURER_URL_DESC"
                class="form-control"
                validate="url"
                default=""
                table-hide="1"
        />
        <field
                name="product_per_page"
                type="number"
                label="COM_REDSHOP_MANUFACTURER_PRODUCT_PER_PAGE"
                description="COM_REDSHOP_MANUFACTURER_PRODUCT_PER_PAGE_DESC"
                placeholder="COM_REDSHOP_MANUFACTURER_PRODUCT_PER_PAGE_DESC"
                class="form-control"
                validate="number"
                default="12"
                table-hide="1"
        />
        <field
                name="published"
                type="redshop.radio"
                label-class="radio-inline"
                default="1"
                label="COM_REDSHOP_PUBLISHED"
                required="true"
                table-sortable="1"
                table-width="5%">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="description"
                type="editor"
                label="COM_REDSHOP_MANUFACTURER_DESCRIPTION"
                description="COM_REDSHOP_MANUFACTURER_DESCRIPTION_DESC"
                width="300"
                filter="safehtml"
                table-sortable="1"
                table-width="20%"
        />
    </fieldset>
    <fieldset name="seo">
        <field
                name="pagetitle"
                type="redshop.text"
                label="COM_REDSHOP_PAGE_TITLE"
                description="COM_REDSHOP_TOOLTIP_PAGE_TITLE"
                placeholder="COM_REDSHOP_TOOLTIP_PAGE_TITLE"
                class="form-control"
                default=""
                table-hide="1"
        />
        <field
                name="pageheading"
                type="redshop.text"
                label="COM_REDSHOP_PAGE_HEADING"
                description="COM_REDSHOP_TOOLTIP_PAGE_HEADING"
                placeholder="COM_REDSHOP_TOOLTIP_PAGE_HEADING"
                class="form-control"
                default=""
                table-hide="1"
        />
        <field
                name="sef_url"
                type="redshop.text"
                label="COM_REDSHOP_SEF_URL"
                description="COM_REDSHOP_TOOLTIP_SEF_URL"
                placeholder="COM_REDSHOP_TOOLTIP_SEF_URL"
                class="form-control"
                default=""
                table-hide="1"
        />
        <field
                name="metakey"
                type="redshop.text"
                label="COM_REDSHOP_META_KEYWORDS"
                description="COM_REDSHOP_TOOLTIP_META_KEYWORDS"
                placeholder="COM_REDSHOP_TOOLTIP_META_KEYWORDS"
                class="form-control"
                default=""
                table-hide="1"
        />
        <field
                name="metadesc"
                type="textarea"
                label="COM_REDSHOP_META_DESCRIPTION"
                description="COM_REDSHOP_TOOLTIP_META_DESCRIPTION"
                placeholder="COM_REDSHOP_TOOLTIP_META_DESCRIPTION"
                class="form-control"
                default=""
                table-hide="1"
                rows="4"
        />
        <field
                name="metalanguage_setting"
                type="textarea"
                label="COM_REDSHOP_META_LANG_SETTING"
                description="COM_REDSHOP_TOOLTIP_META_LANG_SETTING"
                placeholder="COM_REDSHOP_TOOLTIP_META_LANG_SETTING"
                class="form-control"
                default=""
                table-hide="1"
                rows="4"
        />
        <field
                name="metarobot_info"
                type="textarea"
                label="COM_REDSHOP_META_ROBOT_INFO"
                description="COM_REDSHOP_TOOLTIP_META_ROBOT_INFO"
                placeholder="COM_REDSHOP_TOOLTIP_META_ROBOT_INFO"
                class="form-control"
                default=""
                table-hide="1"
                rows="4"
        />
    </fieldset>
    <fieldset name="fields">
    </fieldset>
</form>
