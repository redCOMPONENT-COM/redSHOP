<?xml version="1.0" encoding="utf-8" ?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
	<name>MOD_REDFEATUREDPRODUCT</name>
	<version>1.3.3</version>
	<creationDate>April 2013</creationDate>
	<author>redCOMPONENT.com</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<copyright>redCOMPONENT.com</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>Featured Product Module for redSHOP</description>
	<files>
		<filename module="mod_redfeaturedproduct">mod_redfeaturedproduct.php</filename>
		<folder module="mod_redfeaturedproduct">images</folder>
		<folder module="mod_redfeaturedproduct">css</folder>
		<folder module="mod_redfeaturedproduct">js</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_redfeaturedproduct.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_redfeaturedproduct.sys.ini</language>
		<language tag="da-DK">language/da-DK/da-DK.mod_redfeaturedproduct.ini</language>
		<language tag="da-DK">language/da-DK/da-DK.mod_redfeaturedproduct.sys.ini</language>
		<language tag="it-IT">language/it-IT/it-IT.mod_redfeaturedproduct.ini</language>
		<language tag="it-IT">language/it-IT/it-IT.mod_redfeaturedproduct.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="pretext"
					type="textarea"
					default=""
					label="COM_REDSHOP_PRETEXT_LBL"
					description="COM_REDSHOP_PRETEXT"
				/>
				<field
					name="NumberOfProducts"
					type="text"
					default="5"
					label="COM_REDSHOP_NUMBER_OF_PRODUCT_LBL"
					description="COM_REDSHOP_NUMBER_OF_PRODUCT_DESC"
				/>
				<field
					name="ScrollSortMethod"
					type="radio"
					default="random"
					class="btn-group"
					label="COM_REDSHOP_SCROLL_SORT_METHOD_LBL"
					description="COM_REDSHOP_SCROLL_SORT_METHOD_DESC"
				>
					<option value="newest">COM_REDSHOP_NEWEST</option>
					<option value="oldest">COM_REDSHOP_OLDEST</option>
					<option value="random">COM_REDSHOP_RANDOM</option>
				</field>
				<field
					name="show_product_name"
					type="radio"
					default="1"
					label="COM_REDSHOP_SHOW_PRODUCT_NAME_LBL"
					description="COM_REDSHOP_SHOW_PRODUCT_NAME_DESC"
					class="btn-group btn-group-yesno"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="show_addtocart"
					type="radio"
					default="1"
					label="COM_REDSHOP_SHOW_ADD_TO_CART_LBL"
					description="COM_REDSHOP_SHOW_ADD_TO_CART_DESC"
					class="btn-group btn-group-yesno"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="show_price"
					type="radio"
					default="1"
					label="COM_REDSHOP_SHOW_PRICE_LBL"
					description="COM_REDSHOP_SHOW_PRICE_DESC"
					class="btn-group btn-group-yesno"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="show_vatprice"
					type="radio"
					default="1"
					label="COM_REDSHOP_SHOW_VATPRICE_LBL"
					description="COM_REDSHOP_SHOW_VATPRICE_DESC"
					class="btn-group btn-group-yesno"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="thumbwidth"
					type="text"
					size="10"
					label="COM_REDSHOP_THUMB_IMAGE_WIDTH"
					description="COM_REDSHOP_THUMB_IMAGE_WIDTH"
					default="100"
				/>
				<field
					name="thumbheight"
					type="text"
					size="10"
					label="COM_REDSHOP_THUMB_IMAGE_HEIGHT"
					description="COM_REDSHOP_THUMB_IMAGE_HEIGHT"
					default="100"
				/>
				<field
					name="scrollerheight"
					type="text"
					size="10"
					label="COM_REDSHOP_SCROLLER_HEIGHT"
					description="COM_REDSHOP_SCROLLER_HEIGHT"
					default="200"
				/>
				<field
					name="scrollerwidth"
					type="text"
					size="10"
					label="COM_REDSHOP_SCROLLER_WIDTH"
					description="COM_REDSHOP_SCROLLER_WIDTH"
					default="700"
				/>

				<field
					name="product_title_max_chars"
					type="text"
					size="10"
					label="COM_REDSHOP_PRODUCT_TITLE_MAX_CHARS"
					description="COM_REDSHOP_PRODUCT_TITLE_MAX_CHARS"
					default="20"
				/>
				<field
					name="product_title_end_suffix"
					type="text"
					size="10"
					label="COM_REDSHOP_PRODUCT_TITLE_END_SUFFIX"
					description="COM_REDSHOP_PRODUCT_TITLE_END_SUFFIX"
					default="...."
				/>
				<field
					name="show_discountpricelayout"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="COM_REDSHOP_SHOW_DISCOUNT_PRICE_LAYOUT"
					description="COM_REDSHOP_SHOW_DISCOUNT_PRICE_LAYOUT">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>

			<fieldset
				name="advanced">
				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>
				<field
					name="class_sfx"
					type="text"
					default=""
					label="COM_REDSHOP_MENU_CLASS_SFX"
					description="COM_REDSHOP_MENU_CLASS_SFX_DESC"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
