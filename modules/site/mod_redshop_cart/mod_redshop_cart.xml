<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
    <name>MOD_REDSHOP_CART</name>
    <version>1.5</version>
    <creationDate>April 2013</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <copyright>redCOMPONENT.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>Redshop Cart Module</description>
    <files>
        <filename module="mod_redshop_cart">mod_redshop_cart.php</filename>
        <filename module="mod_redshop_cart">tmpl/default.php</filename>
        <folder module="mod_redshop_cart">images</folder>
        <folder module="mod_redshop_cart">css</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_redshop_cart.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_redshop_cart.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="cart_output" type="list" default="0"
                       label="COM_REDSHOP_CART_OUTPUT" description="CART_OUTPUT">
                    <option value="simple">COM_REDSHOP_SIMPLE</option>
                    <option value="extended">COM_REDSHOP_EXTENDED</option>
                </field>
                <field name="moduleclass_sfx" type="text" default=""
                       label="COM_REDSHOP_PARAMMODULECLASSSUFFIX"
                       description="COM_REDSHOP_PARAMMODULECLASSSUFFIX_DESC"/>
                <field name="show_with_shipping" type="radio" default="0"
                       label="COM_REDSHOP_SHOW_WITH_SHIPPING" description="COM_REDSHOP_SHOW_WITH_SHIPPING">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="show_with_discount" type="radio" default="0"
                       label="COM_REDSHOP_SHOW_WITH_DISCOUNT" description="COM_REDSHOP_SHOW_WITH_DISCOUNT">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="show_with_vat" type="radio" default="0"
                       label="COM_REDSHOP_SHOW_WITH_VAT" description="COM_REDSHOP_SHOW_WITH_VAT">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="show_shipping_line" type="radio" default="0"
                       label="COM_REDSHOP_SHOW_SHIPPING_LINE" description="COM_REDSHOP_SHOW_SHIPPING_LINE">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="use_cookies_value" type="radio" default="0"
                       label="COM_REDSHOP_USE_COOKIE_VALUE" description="COM_REDSHOP_USE_COOKIE_VALUE">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="checkout_empty" type="list" default="1"
                       label="COM_REDSHOP_SHOW_CHECKOUT_BUTTON_WHEN_EMPTY_LBL"
                       description="COM_REDSHOP_SHOW_CHECKOUT_BUTTON_WHEN_EMPTY_LBL">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="button_text" type="text" default=""
                       label="COM_REDSHOP_CART_BUTTON_TEXT_LBL" description="COM_REDSHOP_CART_BUTTON_TEXT_DESC"/>
            </fieldset>
        </fields>
    </config>

</extension>