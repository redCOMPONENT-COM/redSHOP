<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
	<name>MOD_REDSHOP_SHOPPERGROUP_PRODUCT</name>
	<version>1.6</version>
	<redshop>2.0</redshop>
	<creationDate>Sep 2016</creationDate>
	<author>redCOMPONENT.com</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<copyright>redCOMPONENT.com</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>MOD_REDSHOP_SHOPPERGROUP_PRODUCT_DESC</description>
	<files>
		<filename module="mod_redshop_shoppergroup_product">mod_redshop_shoppergroup_product.php</filename>
		<folder>tmpl</folder>
		<folder>css</folder>
		<filename>index.html</filename>
		<filename>helper.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_redshop_shoppergroup_product.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_redshop_shoppergroup_product.sys.ini</language>
		<language tag="da-DK">language/da-DK/da-DK.mod_redshop_shoppergroup_product.ini</language>
		<language tag="da-DK">language/da-DK/da-DK.mod_redshop_shoppergroup_product.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default=""
					   label="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_CLASS_SUFFIX"
					   description="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_CLASS_SFX_DESC"/>
				<field name="count" type="text" default="5" size="10"
					   label="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_NUMBER_OF_PRODUCT"
					   description="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_NUMBER_OF_PRODUCT_DESC"/>
				<field name="image" type="radio" default="0"
					   class="btn-group btn-group-yesno"
					   label="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_IMAGE"
					   description="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_IMAGE_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="thumbwidth" type="text" size="10" label="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_THUMB_IMAGE_WIDTH"
					   description="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_THUMB_IMAGE_WIDTH" default="100"/>
				<field name="thumbheight" type="text" size="10" label="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_THUMB_IMAGE_HEIGHT"
					   description="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_THUMB_IMAGE_HEIGHT" default="100"/>

				<field name="show_price" type="radio" default="0"
					   class="btn-group btn-group-yesno"
					   label="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_PRICE"
					   description="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_PRICE_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="show_vat" type="radio" default="1"
					   class="btn-group btn-group-yesno"
					   label="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_VAT"
					   description="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_VAT_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="show_short_description" type="radio" default="1"
					   class="btn-group btn-group-yesno"
					   label="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_SHORT_DESCRIPTION"
					   description="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_SHORT_DESCRIPTION_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="show_readmore" type="radio" default="1"
					   class="btn-group btn-group-yesno"
					   label="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_READ_MORE"
					   description="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_READ_MORE_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="show_addtocart" type="radio" default="1"
					   class="btn-group btn-group-yesno"
					   label="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_ADD_TO_CART"
					   description="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_ADD_TO_CART_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="show_discountpricelayout" type="radio" default="1"
					   class="btn-group btn-group-yesno"
					   label="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_DISCOUNT_PRICE_LAYOUT"
					   description="MOD_REDSHOP_SHOPPERGROUP_PRODUCT_SHOW_DISCOUNT_PRICE_LAYOUT">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="layout"
						type="modulelayout"
						label="JFIELD_ALT_LAYOUT_LABEL"
						description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
