<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
	<name>MOD_REDMANUFACTURER</name>
	<version>1.5.1</version>
	<redshop>2.0</redshop>
	<creationDate>Sep 2016</creationDate>
	<author>redCOMPONENT.com</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<copyright>redCOMPONENT.com</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>MOD_REDMANUFACTURER_MODULE_DESC</description>
	<files>
		<filename module="mod_redmanufacturer">mod_redmanufacturer.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_redmanufacturer.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_redmanufacturer.sys.ini</language>
		<language tag="da-DK">language/da-DK/da-DK.mod_redmanufacturer.ini</language>
		<language tag="da-DK">language/da-DK/da-DK.mod_redmanufacturer.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="pretext" type="text" default="" label="MOD_REDMANUFACTURER_PRETEXT_LBL"
					   description="MOD_REDMANUFACTURER_PRETEXT"/>
				<field name="moduleclass_sfx" type="text" default=""
					   label="MOD_REDMANUFACTURER_CLASS_SUFFIX"
					   description="MOD_REDMANUFACTURER_CLASS_SFX_DESC"/>
				<field name="class_sfx" type="text" default=""
					   label="MOD_REDMANUFACTURER_MENU_SFX"
					   description="MOD_REDMANUFACTURER_MENU_SFX_DESC"/>
				<field name="PageLink" type="list" default="detail"
					   label="MOD_REDMANUFACTURER_IMG_LINK"
					   description="MOD_REDMANUFACTURER_IMG_LINK_DESC">
					<option value="detail">MOD_REDMANUFACTURER_MANUFACTURER_DETAIL</option>
					<option value="products">MOD_REDMANUFACTURER_MANUFACTURER_PRODUCT</option>
				</field>
				<field name="NumberOfProducts" type="text" default="2"
					   label="MOD_REDMANUFACTURER_NUMBER_OF_MANUFACTURER"
					   description="MOD_REDMANUFACTURER_NUMBER_OF_MANUFACTURER_DESC">
				</field>
				<field name="ScrollBehavior" type="text" default="1"
					   label="MOD_REDMANUFACTURER_SCROLL_BEHAVIOR"
					   description="MOD_REDMANUFACTURER_SCROLL_BEHAVIOR_DESC">
				</field>
				<field name="ScrollAuto" type="text" default="1"
					   label="MOD_REDMANUFACTURER_SCROLL_AUTO"
					   description="MOD_REDMANUFACTURER_SCROLL_AUTO_DESC">
				</field>
				<field name="ScrollWidth" type="text" default="500"
					   label="MOD_REDMANUFACTURER_SCROLL_WIDTH">
				</field>
				<field name="ImageWidth" type="text" default="200"
					   label="MOD_REDMANUFACTURER_THUMB_IMAGE_WIDTH"
					   description="MOD_REDMANUFACTURER_IMAGE_WIDTH_DESC">
				</field>
				<field name="ImageHeight" type="text" default="200"
					   label="MOD_REDMANUFACTURER_THUMB_IMAGE_HEIGHT"
					   description="MOD_REDMANUFACTURER_IMAGE_HEIGHT_DESC">
				</field>
				<field name="show_image" type="radio" default="1" label="MOD_REDMANUFACTURER_SHOW_IMAGE"
					   class="btn-group btn-group-yesno"
					   description="MOD_REDMANUFACTURER_SHOW_IMAGE_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="show_product_name" type="radio" default="0" label="MOD_REDMANUFACTURER_SHOW_PRODUCT_NAME"
					   class="btn-group btn-group-yesno"
					   description="MOD_REDMANUFACTURER_SHOW_PRODUCT_NAME_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="show_link_on_product_name" type="radio" default="0"
					   class="btn-group btn-group-yesno"
					   label="MOD_REDMANUFACTURER_SHOW_LINKON_PRODUCT_NAME"
					   description="MOD_REDMANUFACTURER_SHOW_LINKON_PRODUCT_NAME_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="ScrollDelay" type="list" default="fast"
					   class="btn-group btn-group-yesno"
					   label="MOD_REDMANUFACTURER_SCROLL_DELAY"
					   description="MOD_REDMANUFACTURER_SCROLL_DELAY_DESC">
					<option value="fast">MOD_REDMANUFACTURER_FAST</option>
					<option value="slow">MOD_REDMANUFACTURER_SLOW</option>
				</field>
				<field name="controlNav" type="radio" default="0"
					   class="btn-group btn-group-yesno"
					   label="MOD_REDMANUFACTURER_CONTROL_NAV_LBL"
					   description="MOD_REDMANUFACTURER_CONTROL_NAV_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="directionNav" type="radio" default="0"
					   class="btn-group btn-group-yesno"
					   label="MOD_REDMANUFACTURER_DIRECTION_NAV_LBL"
					   description="MOD_REDMANUFACTURER_DIRECTION_NAV_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="order_by" type="list" default="0"
					   class="btn-group btn-group-yesno"
					   label="MOD_REDMANUFACTURER_ORDER_BY"
					   description="MOD_REDMANUFACTURER_ORDER_BY_DESC">
					<option value="0">MOD_REDMANUFACTURER_ORDER_BY_DEFAULT</option>
					<option value="1">MOD_REDMANUFACTURER_ORDER_BY_ORDERING_ASC</option>
					<option value="2">MOD_REDMANUFACTURER_ORDER_BY_ORDERING_DESC</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field
						name="layout"
						type="modulelayout"
						label="JFIELD_ALT_LAYOUT_LABEL"
						description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>
