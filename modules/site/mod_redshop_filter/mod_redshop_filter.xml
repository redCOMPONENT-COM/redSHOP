<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
    <name>MOD_REDSHOP_FILTER</name>
    <version>1.0.1</version>
    <redshop>2.0.0.4</redshop>
    <creationDate>November 2016</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <copyright>redCOMPONENT.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>MOD_REDSHOP_FILTER_DESC</description>
    <files>
        <filename module="mod_redshop_filter">helper.php</filename>
        <filename module="mod_redshop_filter">mod_redshop_filter.php</filename>
        <folder module="mod_redshop_filter">tmpl</folder>
        <folder module="mod_redshop_filter">lib</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_redshop_filter.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_redshop_filter.sys.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.mod_redshop_filter.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.mod_redshop_filter.sys.ini</language>
    </languages>
    <config>
        <fields name="params" addfieldpath="/libraries/redshop/form/fields">
            <fieldset name="basic">
                <field 
                    name="moduleclass_sfx" 
                    type="text" default="" 
                    label="MOD_REDSHOP_FILTER_CLASS_SUFFIX"
                    description="MOD_REDSHOP_FILTER_CLASS_SUFFIX_DESC"/>
                <field 
                    name="template_id" 
                    type="sql" 
                    label="MOD_REDSHOP_FILTER_TEMPLATE"
                    query="SELECT template_id, template_name FROM #__redshop_template WHERE published = 1 AND template_section = 'redproductfinder'" 
                    key_field="template_id"
                    value_field="template_name"/>
                <field
                    name="root_category"
                    type="redshopcategory"
                    default=""
                    label="MOD_REDSHOP_FILTER_ROOT_CATEGORY"
                    required="true"
                    description="MOD_REDSHOP_FILTER_ROOT_CATEGORY_DESC"
                    multiple="false"
                    />
                <field
                    name="category_for_sale"
                    type="redshopcategory"
                    default=""
                    label="MOD_REDSHOP_FILTER_CATEGORY_FOR_SALE"
                    required="true"
                    description="MOD_REDSHOP_FILTER_CATEGORY_FOR_SALE_DESC"
                    multiple="false"
                    />
                <field
                    name="keyword"
                    type="radio"
                    class="btn-group"
                    default="0"
                    label="MOD_REDSHOP_FILTER_ENABLE_KEYWORD"
                    description="MOD_REDSHOP_FILTER_ENABLE_KEYWORD_DESC">
                        <option value="1">JYES</option>
                        <option value="0">JNO</option>
                </field>
                <field
                    name="category"
                    type="radio"
                    class="btn-group"
                    default="0"
                    label="MOD_REDSHOP_FILTER_ENABLE_CATEGORY"
                    description="MOD_REDSHOP_FILTER_ENABLE_CATEGORY_DESC">
                        <option value="1">JYES</option>
                        <option value="0">JNO</option>
                </field>
                <field
                    name="manufacturer"
                    type="radio"
                    class="btn-group"
                    default="0"
                    label="MOD_REDSHOP_FILTER_ENABLE_MANUFACTURER"
                    description="MOD_REDSHOP_FILTER_ENABLE_MANUFACTURER_DESC">
                        <option value="1">JYES</option>
                        <option value="0">JNO</option>
                </field>
                <field
                    name="price"
                    type="radio"
                    class="btn-group"
                    default="0"
                    label="MOD_REDSHOP_FILTER_ENABLE_PRICE"
                    description="MOD_REDSHOP_FILTER_ENABLE_PRICE_DESC">
                        <option value="1">JYES</option>
                        <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
