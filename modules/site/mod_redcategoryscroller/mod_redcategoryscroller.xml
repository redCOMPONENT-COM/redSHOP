<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.5.0" client="site" method="upgrade">
    <name>MOD_REDCATEGORYSCROLLER</name>
    <version>2.0.0</version>
    <redshop>2.0.0</redshop>
    <creationDate>May 2017</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <copyright>redCOMPONENT.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>redSHOP Main Category Scroller Module</description>
    <files>
        <filename module="mod_redcategoryscroller">helper.php</filename>
        <filename module="mod_redcategoryscroller">mod_redcategoryscroller.php</filename>
        <filename>index.html</filename>
        <folder>language</folder>
        <folder>tmpl</folder>
    </files>
    <scriptfile>install.php</scriptfile>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="pretext"
                        type="text"
                        default=""
                        label="MOD_REDCATEGORYSCROLLER_PRETEXT_LBL"
                        description="MOD_REDCATEGORYSCROLLER_PRETEXT"/>
                <field
                        name="NumberOfCategory"
                        type="text"
                        default="5"
                        label="MOD_REDCATEGORYSCROLLER_NUMBER_OF_CATEGORY_LBL"
                        description="MOD_REDCATEGORYSCROLLER_NUMBER_OF_CATEGORY_DESC"
                        />
                <field name="thumbwidth" type="text" size="10" label="MOD_REDCATEGORYSCROLLER_THUMB_IMAGE_WIDTH"
                       description="MOD_REDCATEGORYSCROLLER_THUMB_IMAGE_WIDTH" default="100"/>
                <field name="thumbheight" type="text" size="10" label="MOD_REDCATEGORYSCROLLER_THUMB_IMAGE_HEIGHT"
                       description="MOD_REDCATEGORYSCROLLER_THUMB_IMAGE_HEIGHT" default="100"/>
                <field name="boxwidth" type="text" size="10" label="MOD_REDCATEGORYSCROLLER_BOX_WIDTH"
                       description="MOD_REDCATEGORYSCROLLER_BOX_WIDTH" default="100"/>
                <field name="ScrollSortMethod" type="radio" default="random"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_SORT_METHOD_LBL"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_SORT_METHOD_DESC">
                    <option value="newest">MOD_REDCATEGORYSCROLLER_NEWEST</option>
                    <option value="oldest">MOD_REDCATEGORYSCROLLER_OLDEST</option>
                    <option value="random">MOD_REDCATEGORYSCROLLER_RANDOM</option>
                </field>
                <field name="show_category_name" type="radio" default="yes"
                       label="MOD_REDCATEGORYSCROLLER_SHOW_CATEGORY_NAME_LBL"
                       description="MOD_REDCATEGORYSCROLLER_SHOW_CATEGORY_NAME_DESC">
                    <option value="yes">JYES</option>
                    <option value="no">JNO</option>
                </field>

                <field name="ScrollHeight" type="text" default="125"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_HEIGHT" description="MOD_REDCATEGORYSCROLLER_SCROLL_HEIGHT_DESC"/>
                <field name="ScrollWidth" type="text" default="150"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_WIDTH" description="MOD_REDCATEGORYSCROLLER_SCROLL_WIDTH_DESC"/>
                <field name="ScrollBehavior" type="list" default="scroll"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_BEHAVIOR"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_BEHAVIOR_DESC">
                    <option value="scroll">MOD_REDCATEGORYSCROLLER_SCROLL</option>
                    <option value="slide">MOD_REDCATEGORYSCROLLER_SLIDE</option>
                    <option value="alternate">MOD_REDCATEGORYSCROLLER_ALTERNATE</option>
                </field>
                <field name="ScrollDirection" type="list" default="up"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_DIRECTION"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_DIRECTION_DESC">
                    <option value="up">MOD_REDCATEGORYSCROLLER_SCROLL_UP</option>
                    <option value="down">MOD_REDCATEGORYSCROLLER_SCROLL_DOWN</option>
                    <option value="left">MOD_REDCATEGORYSCROLLER_SCROLL_LEFT</option>
                    <option value="right">MOD_REDCATEGORYSCROLLER_SCROLL_RIGHT</option>
                </field>
                <field name="ScrollAmount" type="list" default="scroll"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_AMOUNT"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_AMOUNT_DESC">
                    <option value="1">1 line</option>
                    <option value="2">2 lines</option>
                    <option value="3">3 lines</option>
                    <option value="4">4 lines</option>
                    <option value="5">5 lines</option>
                </field>
                <field name="ScrollDelay" type="text" default="80"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_DELAY"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_DELAY_DESC"/>
                <field name="ScrollAlign" type="list" default="left"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_ALIGN"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_ALIGN_DESC">
                    <option value="left">MOD_REDCATEGORYSCROLLER_LEFT_ALIGN</option>
                    <option value="right">MOD_REDCATEGORYSCROLLER_RIGHT_ALIGN</option>
                    <option value="center">MOD_REDCATEGORYSCROLLER_CENTER_ALIGN</option>
                    <option value="justify">MOD_REDCATEGORYSCROLLER_JUSTIFY_ALIGN</option>
                </field>
                <field name="ScrollSpaceChar" type="text" default="&amp;nbsp;"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_SPACECHAR"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_SPACECHAR_DESC"/>
                <field name="ScrollSpaceCharTimes" type="list" default="5"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_SPACECHAR_TIMES"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_SPACECHAR_TIMES_DESC">
                    <option value="1">1 time</option>
                    <option value="2">2 times</option>
                    <option value="3">3 times</option>
                    <option value="4">4 times</option>
                    <option value="5">5 times</option>
                    <option value="6">6 times</option>
                    <option value="7">7 times</option>
                    <option value="8">8 times</option>
                    <option value="9">9 times</option>
                    <option value="10">10 times</option>
                </field>
                <field name="ScrollLineChar" type="list" default="&lt;br /&gt;"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_LINECHAR"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_LINECHAR_DESC">
                    <option value="&lt;br /&gt;">MOD_REDCATEGORYSCROLLER_HTML_BREAK</option>
                    <option value="&lt;hr /&gt;">MOD_REDCATEGORYSCROLLER_HTML_HORIZONTAL_RULE</option>
                </field>
                <field name="ScrollLineCharTimes" type="list" default="2"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_LINECHAR_TIMES"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_LINECHAR_TIMES_DESC">
                    <option value="1">1 time</option>
                    <option value="2">2 times</option>
                    <option value="3">3 times</option>
                    <option value="4">4 times</option>
                    <option value="5">5 times</option>
                    <option value="6">6 times</option>
                    <option value="7">7 times</option>
                    <option value="8">8 times</option>
                    <option value="9">9 times</option>
                    <option value="10">10 times</option>
                </field>
                <field name="ScrollCSSOverride" type="list" default="no"
                       label="MOD_REDCATEGORYSCROLLER_OVERRIDE_CSS"
                       description="MOD_REDCATEGORYSCROLLER_OVERRIDE_CSS_DESC">
                    <option value="yes">JYES</option>
                    <option value="no">JNO</option>
                </field>
                <field name="ScrollTextAlign" type="list" default="left"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_TEXT_ALIGN"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_TEXT_ALIGN_DESC">
                    <option value="left">MOD_REDCATEGORYSCROLLER_LEFT_ALIGN</option>
                    <option value="right">MOD_REDCATEGORYSCROLLER_RIGHT_ALIGN</option>
                    <option value="center">MOD_REDCATEGORYSCROLLER_CENTER_ALIGN</option>
                    <option value="justify">MOD_REDCATEGORYSCROLLER_JUSTIFY_ALIGN</option>
                </field>
                <field name="ScrollTextWeight" type="list" default="normal"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_TEXT_WEIGHT" description="MOD_REDCATEGORYSCROLLER_SCROLL_TEXT_WEIGHT_DESC">
                    <option value="normal">MOD_REDCATEGORYSCROLLER_NORMAL</option>
                    <option value="bold">MOD_REDCATEGORYSCROLLER_BOLD</option>
                    <option value="bolder">MOD_REDCATEGORYSCROLLER_BOLDER</option>
                    <option value="lighter">MOD_REDCATEGORYSCROLLER_LIGHTER</option>
                </field>
                <field name="ScrollTextSize" type="list" default="10"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_TEXT_SIZE"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_TEXT_SIZE_DESC">
                    <option value="7">7 px</option>
                    <option value="8">8 px</option>
                    <option value="9">9 px</option>
                    <option value="10">10 px</option>
                    <option value="11">11 px</option>
                    <option value="12">12 px</option>
                    <option value="13">13 px</option>
                    <option value="14">14 px</option>
                    <option value="15">15 px</option>
                    <option value="16">16 px</option>
                    <option value="17">17 px</option>
                    <option value="18">18 px</option>
                </field>
                <field name="ScrollTextColor" type="text" default="#000000"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_TEXT_COLOR"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_TEXT_COLOR_DESC"/>
                <field name="ScrollBGColor" type="text" default="transparent"
                       label="MOD_REDCATEGORYSCROLLER_SCROLL_BACKGROUND_COLOR"
                       description="MOD_REDCATEGORYSCROLLER_SCROLL_BACKGROUND_COLOR_DESC"/>
                <field name="moduleclass_sfx" type="text" default=""
                       label="MOD_REDCATEGORYSCROLLER_PARAMMODULECLASSSUFFIX"
                       description="MOD_REDCATEGORYSCROLLER_PARAMMODULECLASSSUFFIX_DESC"/>
                <field name="class_sfx" type="text" default=""
                       label="MOD_REDCATEGORYSCROLLER_MENU_CLASS"
                       description="MOD_REDCATEGORYSCROLLER_MENU_CLASS_DESC"/>
            </fieldset>
        </fields>
    </config>
</extension>
