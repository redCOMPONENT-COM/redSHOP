<?xml version="1.0" encoding="iso-8859-1"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
    <name>MOD_ICETABS</name>
    <version>1.3.3</version>
    <creationDate>April 2013</creationDate>
    <author>IceTheme</author>
    <copyright>GNU / GPL</copyright>
    <authorEmail>info@icetheme.com</authorEmail>
    <authorUrl>http://www.icetheme.com</authorUrl>
    <description>
        <![CDATA[
		<h2>IceTabs Module</h2>IceTabs module can display any content/banner/images/K2/VirtueMart information with a smooth and nice interface based on a tabular interface.<br><br><ul><li><a href="http://icetheme.com/Joomla-Extensions/icetabs.html">IceTabs Page</a></li><li><a target="_blank" href="http://icetheme.com/Forums/IceTabs/">Get Support</a></li></ul></li></ul>
		]]>
    </description>
    <files>
        <filename module="mod_icetabs">mod_icetabs.php</filename>
        <filename module="mod_icetabs">helper.php</filename>
        <filename module="mod_icetabs">index.html</filename>
        <filename module="mod_icetabs">CHANGELOG.php</filename>
        <filename module="mod_icetabs">LICENSE.php</filename>
        <folder module="mod_icetabs">libs</folder>
        <folder module="mod_icetabs">assets</folder>
        <folder module="mod_icetabs">themes</folder>
    </files>

    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_icetabs.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_icetabs.sys.ini</language>
    </languages>
    <config>
        <fields name="params" addfieldpath="/modules/mod_icetabs/libs/elements">
            <fieldset name="basic">

                <field name="theme" type="folderlist" hide_none="true" hide_default="true" default="default-white"
                       label="SELECT_THEME" description="SELECT_THEME_DESC" directory="modules/mod_icetabs/themes"
                       filter="" exclude="" stripext=""/>
                <field name="module_width" type="text" default="auto" label="MODULE_WIDTH"
                       description="MODULE_WIDTH_DESC" size="8"></field>
                <field name="module_height" type="text" default="auto" label="MODULE_HEIGHT"
                       description="MODULE_HEIGHT_DESC" size="8"></field>


                <field name="spacer1" type="spacer" hr="true"/>


                <field name="main_width" type="text" default="600" label="DISPLAY_MAIN_WIDTH"
                       description="DISPLAY_MAIN_WIDTH_DESC" size="8"></field>
                <field name="main_height" type="text" default="300" label="DISPLAY_MAIN_HEIGHT"
                       description="DISPLAY_MAIN_HEIGHT_DESC" size="8"></field>


                <field name="imagemain_width" type="text" default="160" label="IMAGE_MAIN_WIDTH"
                       description="IMAGE_MAIN_WIDTH_DESC" size="8"></field>
                <field name="imagemain_height" type="text" default="220" label="IMAGE_MAIN_HEIGHT"
                       description="IMAGE_MAIN_HEIGHT_DESC" size="8"></field>


                <field name="spacer2" type="spacer" hr="true"/>


                <field name="limit_items" type="text" default="5" label="LIMIT_ITEMS" description="LIMIT_ITEMS_DESC"
                       size="5"/>

                <field name="display_button" type="radio" default="1" label="DISPLAY_BUTTON"
                       description="DISPLAY_BUTTON_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>


                <field name="show_readmore" type="radio" default="1" label="SHOW_READMORE"
                       description="SHOW_READMORE_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>

                <field name="auto_strip_tags" type="radio" default="0" label="STRIP_TAGS" description="STRIP_TAGS_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="description_max_chars" type="text" default="100" label="DESCIPTION_MAX_CHARS"
                       description="DESCIPTION_MAX_CHARS_DESC" size="8"/>


                <field name="title_2" type="lofspacer" text="Module Mode Settings" label="" description=""/>

                <field name="group" type="folderlist" hide_default="true" hide_none="true" default="content"
                       label="SELECT_GROUP" directory="modules/mod_icetabs/libs/groups/" filter="" exclude=""
                       stripext=""/>

                <field type="fgroup" title="START_GROUP" label="" description="" name="cotnentgroup" group="start"
                       for="content"/>
                <field name="source" type="radio" default="content_category" label="SOURCE_FROM"
                       description="SOURCE_FROM_DESC">
                    <option value="content_category">CATEGORY</option>
                    <option value="article_ids">ARTICLES_IDS</option>
                </field>
                <field name="article_ids" type="text" default="" label="ARTICLES_IDS" description="ARTICLES_IDS_DESC"
                       size="70"/>
                <field name="content_category" type="lofcategory" default="" label="CATEGORIES_SELECTION"
                       description="CATEGORIES_SELECTION_DESC"/>
                <field name="ordering" type="list" default="created_asc" label="ARTCILES_SORTED_BY"
                       description="ARTCILES_SORTED_BY_DESC">
                    <option value="ordering_asc">ORDERING_ASCENDING</option>
                    <option value="ordering_desc">ORDERING_DESCENDING</option>
                    <option value="hits_asc">HIT_ASCENDING</option>
                    <option value="hits_desc">HIT_DESCENDING</option>
                    <option value="created_desc">DATE_ASCENDING</option>
                    <option value="created_asc">DATE_DESCENDING</option>
                    <option value="rand_">RANDOM</option>
                </field>
                <field name="encontentgroup" label="" description="" type="fgroup" title="" group="end"/>
                <field type="fgroup" title="START_GROUP_IMAGE" label="" description="" name="imagegroup" group="start"
                       for="image"/>
                <field name="image_folder" type="text" default="images/sampledata/fruitshop" size="40"
                       label="IMAGE_FOLDER_PATH" description="IMAGE_FOLDER_PATH_DESC"></field>
                <field name="image_category" type="category" extension="com_content" default="" label="IMAGE_CATEGORY"
                       description="IMAGE_CATEGORY_DESC">
                    <option value="">-Select one-</option>
                </field>
                <field name="image_ordering" type="list" default="" label="IMAGE_SORTED_BY"
                       description="IMAGE_SORTED_BY_DESC">
                    <option value="">NAME</option>
                    <option value="random">RANDOM</option>
                </field>
                <field type="fgroup" group="end" name="imagegroupend" label="" description=""/>
                <field type="fgroup" title="START_GROUP_K2" label="" description="" name="k2group" group="start"
                       for="k2"/>
                <field name="k2_source" type="radio" default="k2_category" label="K2_SOURCE_FROM"
                       description="K2_SOURCE_FROM_DESC">
                    <option value="k2_category">CATEGORY</option>
                    <option value="k2_items_ids">K2_ITEM_IDS</option>
                </field>
                <field name="k2_items_ids" type="text" default="" label="K2_ITEMS_IDS" description="ARTICLES_IDS_DESC"
                       size="70"/>
                <field name="k2_category" type="k2category" default="" label="K2_CATEGORIES_SELECTION"
                       description="CATEGORIES_SELECTION_DESC"/>
                <field name="featured_items_show" type="list" default="1" label="Featured Items Show"
                       description="FEATURED_ITEMS_SHOW_DESC">
                    <option value="0">Hide</option>
                    <option value="1">SHow</option>
                    <option value="2">Only Featured Items</option>
                </field>
                <field name="k2_ordering" type="list" default="created_asc" label="ARTCILES_SORTED_BY"
                       description="ARTCILES_SORTED_BY_DESC">
                    <option value="ordering_asc">ORDERING_ASCENDING</option>
                    <option value="ordering_desc">ORDERING_DESCENDING</option>
                    <option value="hits_asc">HIT_ASCENDING</option>
                    <option value="hits_desc">HIT_DESCENDING</option>
                    <option value="created_desc">DATE_ASCENDING</option>
                    <option value="created_asc">DATE_DESCENDING</option>
                </field>
                <field type="fgroup" name="k2groupend" label="" description="" group="end"/>
                <field type="fgroup" title="START_GROUP_BANNER" label="" description="" name="bannergroup" group="start"
                       for="banner"/>
                <field name="clientids" type="bannerclient" default="" label="Banner client"
                       description="BANNER_CLIENT"/>
                <field name="banner_category" type="category" default="" extension="com_banner" multiple="true" size="5"
                       label="CATEGORIES_SELECTION" description="CATEGORIES_SELECTION_DESC">
                    <option value="">JOPTION_ALL_CATEGORIES</option>
                </field>
                <field name="banner_ordering" type="list" default="ordering_desc" label="BANNERS_SORTED_BY"
                       description="BANNERS_SORTED_BY_DESC">
                    <option value="ordering_asc">ORDERING_ASCENDING</option>
                    <option value="ordering_desc">ORDERING_DESCENDING</option>
                    <option value="rand_">RANDOM</option>
                </field>
                <field type="fgroup" name="bannergroupend" label="" description="" group="end"/>
                <field type="fgroup" title="START_GROUP_VIRTUEMART" label="" description="" name="virtuemartgroup"
                       group="start" for="virtuemart"/>
                <field name="vm_source" type="radio" default="vm_category" label="VM_SOURCE_FROM"
                       description="VM_SOURCE_FROM_DESC">
                    <option value="vm_category">CATEGORY</option>
                    <option value="vm_items_ids">VM_ITEM_IDS</option>
                </field>
                <field name="vm_items_ids" type="text" default="" label="VM_ITEM_IDS" description="VM_ITEM_IDS_DESC"
                       size="70"/>
                <field name="vm_category" type="vmcategory" default="" label="CATEGORIES_SELECTION"
                       description="CATEGORIES_SELECTION_DESC"/>
                <field name="vm_ordering" type="list" default="ordering_desc" label="VM_SORTED_BY"
                       description="VM_SORTED_BY_DESC">
                    <option value="cdate_asc">CREATION_DATE_ASCENDING</option>
                    <option value="cdate_desc">CREATION_DATE_DESCENDING</option>
                    <option value="sales_asc">SALES_ASCENDING</option>
                    <option value="sales_desc">SALES_DESCENDING</option>
                    <option value="rand_">RANDOM</option>
                </field>
                <field type="fgroup" label="" name="vmgroupend" title="" group="end"/>

                <!-- Start Redshop Configuration-->
                <field type="fgroup" title="START_GROUP_REDSHOP" label="" description="" name="redshopgroup"
                       group="start" for="redshop"/>
                <field name="redshop_source" type="radio" default="redshop_category" label="RD_SOURCE_FROM"
                       description="RD_SOURCE_FROM_DESC">
                    <option value="redshop_category">CATEGORY</option>
                    <option value="redshop_items_ids">REDSHOP_ITEM_IDS</option>
                </field>
                <field name="redshop_items_ids" type="text" default="" label="REDSHOP_ITEM_IDS"
                       description="RD_ITEM_IDS_DESC" size="70"/>
                <field name="redshop_category" type="redshopcategory" default="" label="CATEGORIES_SELECTION"
                       description="CATEGORIES_SELECTION_DESC"/>
                <field name="redshop_ordering" type="list" default="ordering_desc" label="RD_SORTED_BY"
                       description="RD_SORTED_BY_DESC">
                    <option value="cdate_asc">CREATION_DATE_ASCENDING</option>
                    <option value="cdate_desc">CREATION_DATE_DESCENDING</option>
                    <option value="ordering_asc">SALES_ASCENDING</option>
                    <option value="ordering_desc">SALES_DESCENDING</option>
                    <option value="rand_">RANDOM</option>
                </field>
                <field type="fgroup" label="" name="rdgroupend" title="" group="end"/>
                <!-- End Redshop Configuration-->

                <field name="title_1" type="lofspacer" text="Navigation_Settings" label="" description=""/>

                <field name="navigator_pos" type="list" default="right" label="NAVIGATOR_POSITION"
                       description="NAVIGATOR_POSITION_DESC">
                    <option value="0">DISABLE</option>
                    <option value="left">LEFT</option>
                    <option value="right">RIGHT</option>
                    <option value="top">TOP</option>
                    <option value="bottom">BOTTOM</option>
                </field>
                <field name="navitem_width" type="text" default="290" label="NAVIGATOR_ITEM_WIDTH"
                       description="NAVIGATOR_ITEM_WIDTH_DESC" size="8"></field>
                <field name="navitem_height" type="text" default="100" label="NAVIGATOR_ITEM_HEIGHT"
                       description="NAVIGATOR_ITEM_HEIGHT_DESC" size="8"></field>
                <field name="max_items_display" type="text" default="3" label="MAX_ITEMS_DISPLAY"
                       description="MAX_ITEMS_DISPLAY_DESC" size="4"></field>

                <field name="spacer3" type="spacer" hr="true"/>

                <field name="auto_renderthumb" type="radio" default="1" label="RENDER_THUMBNAIL"
                       description="RENDER_THUMBNAIL_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field
                        name="image_quanlity"
                        type="text"
                        default="100"
                        label="IMAGE_QUANLITY"
                        description="IMAGE_QUANLITY_DESC"/>
                <field name="thumbnail_width" type="text" default="60" label="THUMBNAIL_WIDTH"
                       description="THUMBNAIL_WIDTH_DESC" size="8"/>
                <field name="thumbnail_height" type="text" default="60" label="THUMBNAIL_HEIGHT"
                       description="THUMBNAIL_HEIGHT_DESC" size="8"/>

                <field name="spacer4" type="spacer" hr="true"/>

                <!--<field name="replacer" type="text" default="..." label="REPLACER" description="REPLACER_DESC" />-->
                <field name="title_max_chars" type="text" default="100" label="TITLE_MAX_CHARS"
                       description="TITLE_MAX_CHARS_DESC" size="8"/>


                <field text="OTHER_SETTINGS" type="lofspacer"/>

                <field name="layout_style" type="list" default="vrdown" label="PLAY_STYLE"
                       description="PLAY_STYLE_DESC">
                    <option value="hrleft">HORIZONTAL_RIGHT_TO_LEFT</option>
                    <option value="hrright">HORIZONTAL_LEFT_TO_RIGHT</option>
                    <option value="vrup">VERTICAL_DOWN_TO_UP</option>
                    <option value="vrdown">VERTICAL_UP_TO_DOWN</option>
                    <option value="opacity">OPACITY</option>
                </field>
                <field name="interval" type="text" default="2000" label="INTERVAL" description="INTERVAL_DESC"/>
                <field name="duration" type="text" default="700" label="ANIMATION_DURATION"
                       description="ANIMATION_DURATION_DESC"/>
                <field name="effect" type="list" default="Fx.Transitions.Sine.easeInOut" label="ANIMATION_TRANSITION"
                       description="ANIMATION_TRANSITION_DESC">
                    <option value="Fx.Transitions.linear">linear</option>
                    <option value="Fx.Transitions.quartOut">QuartOut</option>
                    <option value="Fx.Transitions.Quad.easeIn">Quad.easeIn</option>
                    <option value="Fx.Transitions.Quad.easeOut">Quad.easeOut</option>
                    <option value="Fx.Transitions.Quad.easeInOut">Quad.easeInOut</option>
                    <option value="Fx.Transitions.Cubic.easeIn">Cubic.easeIn</option>
                    <option value="Fx.Transitions.Cubic.easeOut">Cubic.easeOut</option>
                    <option value="Fx.Transitions.Cubic.easeInOut">Cubic.easeInOut</option>
                    <option value="Fx.Transitions.Quart.easeIn">Quart.easeIn</option>
                    <option value="Fx.Transitions.Quart.easeOut">Quart.easeOut</option>
                    <option value="Fx.Transitions.Quart.easeInOut">Quart.easeInOut</option>
                    <option value="Fx.Transitions.Quint.easeIn">Quint.easeIn</option>
                    <option value="Fx.Transitions.Quint.easeOut">Quint.easeOut</option>
                    <option value="Fx.Transitions.Quint.easeInOut">Quint.easeInOut</option>
                    <option value="Fx.Transitions.Pow.easeIn">Pow.easeIn</option>
                    <option value="Fx.Transitions.Pow.easeOut">Pow.easeOut</option>
                    <option value="Fx.Transitions.Pow.easeInOut">Pow.easeInOut</option>
                    <option value="Fx.Transitions.Expo.easeIn">Expo.easeIn</option>
                    <option value="Fx.Transitions.Expo.easeOut">Expo.easeOut</option>
                    <option value="Fx.Transitions.Expo.easeInOut">Expo.easeInOut</option>
                    <option value="Fx.Transitions.Circ.easeIn">Circ.easeIn</option>
                    <option value="Fx.Transitions.Circ.easeOut">Circ.easeOut</option>
                    <option value="Fx.Transitions.Circ.easeInOut">Circ.easeInOut</option>
                    <option value="Fx.Transitions.Sine.easeIn">Sine.easeIn</option>
                    <option value="Fx.Transitions.Sine.easeOut">Sine.easeOut</option>
                    <option value="Fx.Transitions.Sine.easeInOut">Sine.easeInOut</option>
                    <option value="Fx.Transitions.Back.easeIn">Back.easeIn</option>
                    <option value="Fx.Transitions.Back.easeOut">Back.easeOut</option>
                    <option value="Fx.Transitions.Back.easeInOut">Back.easeInOut</option>
                    <option value="Fx.Transitions.Bounce.easeIn">Bounce.easeIn</option>
                    <option value="Fx.Transitions.Bounce.easeOut">Bounce.easeOut</option>
                    <option value="Fx.Transitions.Bounce.easeInOut">Bounce.easeInOut</option>
                    <option value="Fx.Transitions.Elastic.easeIn">Elastic.easeIn</option>
                    <option value="Fx.Transitions.Elastic.easeOut">Elastic.easeOut</option>
                    <option value="Fx.Transitions.Elastic.easeInOut">Elastic.easeInOut</option>
                </field>
                <field name="auto_start" type="radio" default="1" label="AUTO_START" description="AUTO_START_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
            </fieldset>
            <fieldset
                    name="advanced">

                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                       description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>

                <field name="spacer5" type="spacer" hr="true"/>

                <field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL"
                       description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                       description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
                <field name="cachemode" type="hidden" default="static">
                    <option value="static"></option>
                </field>

            </fieldset>
        </fields>
    </config>
</extension>
