<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
	<name>RedShop Login Module</name>
	<version>1.1.5</version>
	<creationDate>10-04-2012</creationDate>
	<author>redweb.dk</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<copyright>redCOMPONENT.com</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>Custom redSHOP version of Joomla Login Module</description>
	<files>
		<filename module="mod_redshop_login">mod_redshop_login.php</filename>
		<filename module="mod_redshop_login">helper.php</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_redshop_login.ini</language>
		<language tag="da-DK">language/da-DK/da-DK.mod_redshop_login.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.mod_redshop_login.ini</language>
		<language tag="it-IT">language/it-IT/it-IT.mod_redshop_login.ini</language>
  	</languages>
	<config><fields name="params"><fieldset name="basic">
		<field name="cache" type="list" default="1" label="COM_REDSHOP_CACHING_LBL" description="COM_REDSHOP_CACHING_DESC">
			<option value="0">Never</option>
		</field>
		<field name="@spacer" type="spacer" default="" label="" description="" />
		<field name="moduleclass_sfx" type="text" default="" label="COM_REDSHOP_PARAMMODULECLASSSUFFIX" description="COM_REDSHOP_PARAMMODULECLASSSUFFIX" />
		<field name="pretext" type="textarea" cols="30" rows="5" default="" label="COM_REDSHOP_PARAMPRETEXT_LBL" description="COM_REDSHOP_PARAMPRETEXT" />
		<field name="posttext" type="textarea" cols="30" rows="5" label="COM_REDSHOP_PARAMPOSTTEXT_LBL" description="COM_REDSHOP_PARAMPOSTTEXT" />
		<field name="login" type="menuitem" default="" disable="separator" label="COM_REDSHOP_PARAMLOGINREDIRECTURL_LBL" description="COM_REDSHOP_PARAMLOGINREDIRECTURL" ><option value="">JDEFAULT</option></field>
		<field name="logout" type="menuitem" default="" disable="separator" label="COM_REDSHOP_PARAMLOGOUTREDIRECTURL_LBL" description="COM_REDSHOP_PARAMLOGOUTREDIRECTURL" ><option value="">JDEFAULT</option></field>
		<field name="greeting" type="radio" default="1" label="COM_REDSHOP_GREETING_LBL" description="COM_REDSHOP_GREETING_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field name="name" type="list" default="0" label="COM_REDSHOP_NAME_LBL">
			<option value="0">Username</option>
			<option value="1">Name</option>
		</field>
		<field name="registrationitemid" type="text" default="" label="COM_REDSHOP_REGISTRATIONITEMID_LBL" description="COM_REDSHOP_REGISTRATIONITEMID" />
		<field name="usesecure" type="radio" default="0" label="COM_REDSHOP_ENCRYPT_LOGIN_FORM_LBL" description="COM_REDSHOP_ENCRYPT_LOGIN_FORM_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field name="layout" type="radio" default="0" label="COM_REDSHOP_LAYOUT_LBL" description="COM_REDSHOP_LAYOUT_DESC">
			<option value="0">Vertical</option>
			<option value="1">Horizontal</option>
		</field>
		<field name="forgot_password" type="radio" default="0" label="COM_REDSHOP_FORGOTPASSWORDLINKTIP_LBL" description="COM_REDSHOP_FORGOTPASSWORDLINKTIP">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field name="forgot_username" type="radio" default="0" label="COM_REDSHOP_FORGOTUSERNAMELINKTIP_LBL" description="COM_REDSHOP_FORGOTUSERNAMELINKTIP">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field name="creat_account" type="radio" default="0" label="COM_REDSHOP_CREATEACCOUNTLINKTIP_LBL" description="COM_REDSHOP_CREATEACCOUNTLINKTIP">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field name="remember_me" type="radio" default="0" label="COM_REDSHOP_REMEBERMELINKTIP_LBL" description="COM_REDSHOP_REMEBERMELINKTIP">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
	</fieldset></fields></config>
</extension>