<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/module-install.dtd">
<install type="module" version="1.5.0" method="upgrade">
	<name>RedSHOP Category Scroller</name>
	<version>1.1.4</version>
	<creationDate>21-07-2011</creationDate>
	<author>redweb.dk</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<copyright>redCOMPONENT.com</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>REDSHOP_CATEGORY_SCROLLER</description>
	<files>
		<filename module="mod_redshop_category_scroller">mod_redshop_category_scroller.php</filename>
		<folder module="mod_redshop_category_scroller">tmpl</folder>
		<folder module="mod_redshop_category_scroller">css</folder>
		<folder module="mod_redshop_category_scroller">images</folder>
		<folder module="mod_redshop_category_scroller">js</folder>
	</files>
	<languages>
    	<language tag="en-GB">language/en-GB/en-GB.mod_redshop_category_scroller.ini</language>
    	<language tag="da-DK">language/da-DK/da-DK.mod_redshop_category_scroller.ini</language>
  	</languages>	
	<params>
		<param name="pretext" type="text" default="" label="PRETEXT_LBL" description="PRETEXT" />
		<param name="NumberOfProducts" type="text" default="5" label="NUMBER_OF_PRODUCT_LBL" description="NUMBER_OF_PRODUCT_DESC" />		
		<param name="ScrollSortMethod" type="radio" default="random" label="SCROLL_SORT_METHOD_LBL" description="SCROLL_SORT_METHOD_DESC">
			<option value="newest">NEWEST</option>
			<option value="oldest">OLDEST</option>
			<option value="random">RANDOM</option>
			<option value="mostsold">MOSTSOLD</option> 
		</param>
		<!-- <param name="defaultCategory" type="categoryscroller" label="DEFAULT_CATEGORY_LBL" description="DEFAULT_CATEGORY_DESC" /> -->		
		<param name="show_product_name" type="radio" default="1" label="SHOW_PRODUCT_NAME_LBL" description="SHOW_PRODUCT_NAME_DESC">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="show_price" type="radio" default="1" label="SHOW_PRICE_LBL" description="SHOW_PRICE_DESC">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="show_image" type="radio" default="1" label="SHOW_IMAGE_LBL" description="SHOW_IMAGE_DESC">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="show_readmore" type="radio" default="1" label="SHOW_READMORE_LBL" description="SHOW_READMORE_DESC">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="show_addtocart" type="radio" default="1" label="SHOW_ADD_TO_CART_LBL" description="SHOW_ADD_TO_CART_DESC">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>	
		<param name="thumbwidth" type="text" size="10" label="THUMB_IMAGE_WIDTH" description="THUMB_IMAGE_WIDTH" default="100" />
		<param name="thumbheight" type="text" size="10" label="THUMB_IMAGE_HEIGHT" description="THUMB_IMAGE_HEIGHT" default="100" />
		<param name="scrollerheight" type="text" size="10" label="SCROLLER_HEIGHT" description="SCROLLER_HEIGHT" default="200" />
		<param name="scrollerwidth" type="text" size="10" label="SCROLLER_WIDTH" description="SCROLLER_WIDTH" default="800" />
		
		<param name="product_title_max_chars" type="text" size="10" label="PRODUCT_TITLE_MAX_CHARS" description="PRODUCT_TITLE_MAX_CHARS" default="10" />
		<param name="product_title_end_suffix" type="text" size="10" label="PRODUCT_TITLE_END_SUFFIX" description="PRODUCT_TITLE_END_SUFFIX" default="..." />	
		<param name="show_discountpricelayout" type="radio" default="1" label="SHOW_DISCOUNT_PRICE_LAYOUT" description="SHOW_DISCOUNT_PRICE_LAYOUT">
			<option value="1">YES</option>
			<option value="0">NO</option>
			</param>
		<param name="moduleclass_sfx" type="text" default="" label="MODULE_CLASS_SFX" description="MODULE_CLASS_SFX_DESC" />
		<param name="class_sfx" type="text" default="" label="MENU_CLASS_SFX" description="MENU_CLASS_SFX_DESC" />
	</params>
</install>
