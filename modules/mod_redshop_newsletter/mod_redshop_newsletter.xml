<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="module" method="upgrade">
	<name>Redshop Newsletter Module</name>
	<version>1.1.5</version>
	<creationDate>10-04-2012</creationDate>
	<author>redweb.dk</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<copyright>redCOMPONENT.com</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>Redshop Newsletter Subscription Module</description>
	<files>
		<filename module="mod_redshop_newsletter">mod_redshop_newsletter.php</filename>
		<filename module="mod_redshop_newsletter">index.html</filename>
		<filename module="mod_redshop_newsletter">tmpl/default.php</filename>
		<filename module="mod_redshop_newsletter">tmpl/index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_redshop_newsletter.ini</language>
		<language tag="da-DK">language/da-DK/da-DK.mod_redshop_newsletter.ini</language>
		<language tag="it-IT">language/it-IT/it-IT.mod_redshop_newsletter.ini</language>
  	</languages>
  	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="COM_REDSHOP_PARAMMODULECLASSSUFFIX" description="COM_REDSHOP_PARAMMODULECLASSSUFFIX" />
				<field name="redirectpage" type="menuitem" default="" disable="separator" label="Newsletter Subscription Redirection URL" description="COM_REDSHOP_PARAMNEWSLETTERREDIRECTURL" />
			</fieldset>
		</fields>
	</config>
</extension>