<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
	<name>redMASSCART</name>
	<version>1.1.1</version>
	<creationDate>10-04-2012</creationDate>
	<author>redweb.dk</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<copyright>redCOMPONENT.com</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>redMASSCART module places multiple product in the cart with Product Number.</description>
	<files>
		<filename module="mod_redshop_masscart">mod_redshop_masscart.php</filename>
		<filename module="mod_redshop_masscart">index.html</filename>
		<filename module="mod_redshop_masscart">css/style.css</filename>
		<filename module="mod_redshop_masscart">tmpl/default.php</filename>
		<filename module="mod_redshop_masscart">tmpl/index.html</filename>
	</files>
	<languages>
	    <language tag="en-GB">language/en-GB/en-GB.mod_redshop_masscart.ini</language>
	    <language tag="da-DK">language/da-DK/da-DK.mod_redshop_masscart.ini</language>
	</languages>
	<config><fields name="params"><fieldset name="basic">
		<field name="cache" type="list" default="1" label="COM_REDSHOP_CACHING_LBL" description="COM_REDSHOP_CACHING_DESC">
			<option value="0">Never</option>
		</field>
		<field name="@spacer" type="spacer" default="" label="" description="" />
		<field name="moduleclass_sfx" type="text" default="" label="COM_REDSHOP_PARAMMODULECLASSSUFFIX" description="COM_REDSHOP_PARAMMODULECLASSSUFFIX" />


		<field name="cartbtntitle" type="text" default="add to cart" label="COM_REDSHOP_PARAMMODCARTBTNTITLE" description="COM_REDSHOP_PARAMMODCARTBTNDESC" />
		<field name="chk_quantity" type="radio" default="0" label="COM_REDSHOP_PARAMMODPRODUCTQUANTITY" description="COM_REDSHOP_PARAMMODPRODUCTQUANTITYDESC" >
		<option value="1">YES</option>
		<option value="0">NO</option>
		</field>
		<field name="textwidth" type="text" default="150" label="COM_REDSHOP_PARAMMODWOATITLE" description="COM_REDSHOP_PARAMMODWOADESC" />
		<field name="textheight" type="text" default="100" label="COM_REDSHOP_PARAMMODHOATITLE" description="COM_REDSHOP_PARAMMODHOADESC" />


		<field name="title" type="text" default="Product Number" label="COM_REDSHOP_PARAMMODTITLEOFINPUT" description="COM_REDSHOP_PARAMMODDESCOFINPUT" />

		<field name="info" type="textarea" rows="3" cols="40" default="place product number per line." label="COM_REDSHOP_PARAMMODINSTITLE" description="COM_REDSHOP_PARAMMODINSDESC" />
	</fieldset></fields></config>
</extension>
