<?xml version="1.0" encoding="utf-8"?><install type="module" version="1.5.0" method="upgrade">	<name>Redshop Products Slide Show</name>	<version>1.1.2</version>	<creationDate>13-04-2011</creationDate>	<author>redweb.dk</author>	<authorEmail>email@redweb.dk</authorEmail>	<copyright>redCOMPONENT.com</copyright>	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>	<description>Redshop Products Slide Show</description>	<!--		Listing of all files that should be installed for the module to		function	-->	<files>		<!--			The "module" attribute signifies that this is the main controller			file		-->		<filename module="mod_redshop_products_slideshow">mod_redshop_products_slideshow.php</filename>		<filename module="mod_redshop_products_slideshow">index.html</filename>		<filename module="mod_redshop_products_slideshow">slideshow.swf</filename>		<filename module="mod_redshop_products_slideshow">AC_RunActiveContent.js</filename>	</files>	<params>		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling." />		<param name="class_sfx" type="text" default="" label="Menu Class Suffix" description="A suffix to be applied to the css class of the menu items." />		<param name="category_id" type="text" default="0" label="Category Id"			description="Enter comma seperated Category Id's you would like to display products related to a perticular Category. 0 for showing all products and all categories" />		<param name="load_curr" type="list" default="1"			label="Load current category images" description="Load current category images">			<option value="1">yes</option>			<option value="2">no</option>		</param>		<param name="loadtype" type="list" default="random"			label="Product load by" description="Product loading type">			<option value="">Select</option>			<option value="newest">Newest Product</option>			<option value="random">Random Products</option>			<option value="mostsold">Most sold Products</option>			<option value="special">Special Products</option>		</param>		<param name="bannerWidth" type="text" default="670"			label="Gallery Width (px)" description="Width of object ." />		<param name="bannerHeight" type="text" default="210"			label="Gallery Height (px)" description="Height of object " />		<param name="backgroundColor" type="text" default="#ffffff"			label="Object Background color"			description="For example: #ffffff. Slect wmode transperant if you dont want background color" />		<param name="images_path" type="text"			default="components/com_redshop/helpers/thumb.php?filename=product/" label="Images Path"			description="Contains the relative path to the images folder, which will be used by the final Flash. ex. images/stories/images/ " />		<param name="imageWidth" type="text" default="200" label="Image Width (px)"			description="Width of Image ." />		<param name="imageHeight" type="text" default="100"			label="Image Height (px)" description="Height of Image " />		<param name="numbproduct" type="text" default="5"			label="Number of Products" description="Number of Products display" />		<param name="wmode" type="list" default="window" label="wmode"			description="Select the wmode of flash">			<option value="opaque">opaque</option>			<option value="transparent">transparent</option>			<option value="window">window</option>		</param>		<param name="roundCorner" type="text" default="0" label="Round Corner"			description="0,1,2,3...,10(most often used),11..." />		<param name="autoPlayTime" type="text" default="8" label="Auto Play Time"			description="Auto Play Time" />		<param name="isHeightQuality" type="list" default="no"			label="Height Quality" description="Height Quality">			<option value="yes">yes</option>			<option value="no">no</option>		</param>		<param name="blendMode" type="text" default="normal" label="Blend Mode"			description="Round Corner" />		<param name="transDuration" type="text" default="1"			label="Transition Duration" description="Transition Duration" />		<param name="windowOpen" type="list" default="_blank" label="Target"			description="Window Open Target parameter">			<option value="_self">_self</option>			<option value="_blank">_blank</option>			<option value="_parent">_parent</option>		</param>		<param name="btnSetMargin" type="text" default="auto 5 5 auto"			label="Button Set Margin" description="Button Set Margin" />		<param name="btnDistance" type="text" default="20" label="Button Distance"			description="Button Distance" />		<param name="titleBgColor" type="text" default="0x000000"			label="Title Background Color" description="Title Background Color" />		<param name="titleTextColor" type="text" default="0xffffff"			label="Title Text Color" description="Title Text Color" />		<param name="titleBgAlpha" type="text" default=".4"			label="Title Background Alpha" description="Title Background Alpha" />		<param name="titleMoveDuration" type="text" default="1"			label="Title Move Duration" description="Title Move Duration" />		<param name="btnAlpha" type="text" default=".4" label="Button Alpha"			description="Button Alpha" />		<param name="btnTextColor" type="text" default="0xffffff"			label="Button Text Color" description="Button Text Color" />		<param name="btnDefaultColor" type="text" default="0x1B3433"			label="Button Default Color" description="Button Default Color" />		<param name="btnHoverColor" type="text" default="0xff9900"			label="Button Hover Color" description="Button Hover Color" />		<param name="btnFocusColor" type="text" default="0xff6600"			label="Button Focus Color" description="Button Focus Color" />		<param name="changImageMode" type="list" default="click"			label="Change Image Mode" description="Change Image Mode">			<option value="click">click</option>			<option value="hover">hover</option>		</param>		<param name="isShowBtn" type="list" default="yes" label="Show Button"			description="Show Button">			<option value="yes">yes</option>			<option value="no">no</option>		</param>		<param name="isShowTitle" type="list" default="yes" label="Show Title"			description="Show Title">			<option value="yes">yes</option>			<option value="no">no</option>		</param>		<param name="scaleMode" type="list" default="noScale" label="Scale Mode"			description="Scale Mode">			<option value="showAll">showAll</option>			<option value="exactFit">exactFit</option>			<option value="noScale">noScale</option>			<option value="noBorder">noBorder</option>		</param>		<param name="transform" type="list" default="blur" label="Transform"			description="Transform">			<option value="blur">blur</option>			<option value="alpha">alpha</option>			<option value="left">left</option>			<option value="right">right</option>			<option value="top">top</option>			<option value="bottom">bottom</option>			<option value="breathe">breathe</option>			<option value="breathBlur">breathBlur</option>		</param>		<param name="isShowAbout" type="list" default="no" label="Show About"			description="Show About">			<option value="yes">yes</option>			<option value="no">no</option>		</param>		<param name="titleFont" type="text" default="Tahoma" label="Title Font"			description="Title Font" />		<param name="show_price" type="list" default="yes" label="Show Price"			description="Select yes or no to show or hide price">			<option value="yes">yes</option>			<option value="no">no</option>		</param>		<param name="currency" type="text" default="$" label="Currency Symbol"			description="Currency Symbol" />		<param name="pricetax" type="list" default="yes"			label="Display prices with tax" description="Display prices with tax">			<option value="yes">yes</option>			<option value="no">no</option>		</param>	</params></install>