<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>RedSHOP cart module</name>
	<version>1.1.12</version>
	<creationDate>19-07-2010</creationDate>
	<author>redweb.dk</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<copyright>redCOMPONENT.com</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>Redshop Cart Module</description>
	<files>
		<filename module="mod_redshop_cart">mod_redshop_cart.php</filename>
		<filename module="mod_redshop_cart">tmpl/default.php</filename>
		<folder module="mod_redshop_cart">images</folder>
		<folder module="mod_redshop_cart">css</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_redshop_cart.ini</language>
		<language tag="da-DK">language/da-DK/da-DK.mod_redshop_cart.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.mod_redshop_cart.ini</language>
		<language tag="it-IT">language/it-IT/it-IT.mod_redshop_cart.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.mod_redshop_cart.ini</language>
  	</languages>
  	<params>
		<param name="cart_output" type="list" default="0" label="CART_OUTPUT" description="CART_OUTPUT">
			<option value="simple">SIMPLE</option>
			<option value="extended">EXTENDED</option>
		</param>
	  	<param name="moduleclass_sfx" type="text" default=""
			label="Module Class Suffix"
			description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" />
		<param name="show_with_shipping" type="radio" default="0" label="SHOW_WITH_SHIPPING" description="SHOW_WITH_SHIPPING">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="show_with_discount" type="radio" default="0" label="SHOW_WITH_DISCOUNT" description="SHOW_WITH_DISCOUNT">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="show_with_vat" type="radio" default="0" label="SHOW_WITH_VAT" description="SHOW_WITH_VAT">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="show_shipping_line" type="radio" default="0" label="SHOW_SHIPPING_LINE" description="SHOW_SHIPPING_LINE">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="use_cookies_value" type="radio" default="0" label="USE_COOKIE_VALUE" description="USE_COOKIE_VALUE">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="checkout_empty" type="list" default="1" label="show checkout button when empty" description="show checkout button when empty">
			<option value="0">No</option>
			<option value="1">Yes</option>			 
	  	</param>
		<param name="button_text" type="text" default="" label="Cart Button Text" description="Display Button Text in cart Module" />	
	</params>
	
</install>
