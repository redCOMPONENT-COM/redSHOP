<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
	<name>Redshop Letter Search Module</name>
	<version>1.1.1</version>
	<creationDate>10-04-2012</creationDate>
	<author>redweb.dk</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<copyright>redCOMPONENT.com</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>Redshop Letter Search  Module</description>
	<files>
		<filename module="mod_redshop_lettersearch">mod_redshop_lettersearch.php</filename>
		<filename module="mod_redshop_lettersearch">index.html</filename>
		<filename module="mod_redshop_lettersearch">tmpl/default.php</filename>
		<filename module="mod_redshop_lettersearch">tmpl/index.html</filename>
		<filename module="mod_redshop_lettersearch" >helper.php</filename>
	</files>
	<languages>
    	<language tag="en-GB">language/en-GB/en-GB.mod_redshop_lettersearch.ini</language>
    	<language tag="da-DK">language/da-DK/da-DK.mod_redshop_lettersearch.ini</language>
  	</languages>
	<config><fields name="params"><fieldset name="basic">
		<field name="moduleclass_sfx" type="text" default="" label="COM_REDSHOP_CLASS_SUFFIX" description="COM_REDSHOP_CLASS_SUFFIX" />
		<field name="list_of_fields"  type="sql" query="SELECT field_id AS st_value, field_title AS st_title FROM #__redshop_fields WHERE  field_section =1"   key_field="st_value" value_field="st_title" label="COM_REDSHOP_SELECT_FIELDS" description="COM_REDSHOP_SELECT_FIELDS_DESC" />
		<field name="number_of_columns" type="text" default="6" label="COM_REDSHOP_NUMBER_OF_COLUMNS" description="COM_REDSHOP_NUMBER_OF_COLUMNS_DESC" />
		<field name="lettersearchtemplate"  type="sql" query="SELECT template_id AS st_value, template_name AS st_title  FROM #__redshop_template WHERE template_section = 'searchletter' AND published=1 ORDER BY template_name"   key_field="st_value" value_field="st_title"  default="" label="COM_REDSHOP_LETTER_SEARCH_TEMPLATE" description="COM_REDSHOP_LETTER_SEARCH_TEMPLATE"></field>
	</fieldset></fields></config>
</extension>