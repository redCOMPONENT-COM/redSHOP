<form action="" method="POST" class="form-inline" id="redshop-login-form">
    <div class="form-group">
        <label class="label" for="username">{{ jtext('COM_REDSHOP_USERNAME') }}</label>
        <input class="form-control" type="text" id="username" name="username" value=""/>
    </div>
    <div class="form-group">
        <label class="label" for="password">{{ jtext('COM_REDSHOP_PASSWORD') }}</label>
        <input class="form-control" type="password" id="password" name="password" value=""/>
    </div>
    <button class="button btn btn-primary" name="submitbtn">{{ jtext('COM_REDSHOP_LOGIN') }}</button>
    <input type="hidden" name="l" value="1">
    <input type="hidden" name="return" value="{{ returnUrl }}"/>
    <input type="hidden" name="Itemid" value="{{ itemId }}"/>
    <input type="hidden" name="task" value="setlogin"/>
    <input type="hidden" name="option" value="com_redshop"/>
    <input type="hidden" name="view" value="login"/>
    <a href="{{ jroute('index.php?option=com_users&view=reset', false) }}">
        {{ jtext('COM_REDSHOP_FORGOT_PWD_LINK') }}
    </a>
</form>
