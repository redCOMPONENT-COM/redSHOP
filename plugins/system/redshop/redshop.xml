				       default="1"
				       class="btn-group btn-group-yesno"
				       description="PLG_SYSTEM_REDSHOP_NAME_ENABLE_TWIG_DESC"
				       label="PLG_SYSTEM_REDSHOP_NAME_ENABLE_TWIG_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
