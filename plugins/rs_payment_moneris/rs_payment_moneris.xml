<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="redshop_payment"
	method="upgrade">
	<name>Moneris Payments</name>
	<version>1.1.3</version>
	<creationDate>12-08-2011</creationDate>
	<author>RedTeam</author>
	<authorEmail>info@redhost.com</authorEmail>
	<authorUrl>http://www.redcomponent.com</authorUrl>
	<copyright>redCOMPONENT.com</copyright>
	<license>GNU General Public License v2</license>
	<description>This plugin enables standard Moneris payments
	</description>

	<files>
		<filename plugin="rs_payment_moneris">rs_payment_moneris.php</filename>
		<folder>rs_payment_moneris</folder>

	</files>
	<params addpath="/administrator/components/com_redshop/elements">
		<param name="payment_oprand" type="text" size="10" default="-"
			label="Payment operand" description="Payment Operand" />
		<param name="payment_price" type="text" size="30" default=""
			label="Payment price" description="Payment price" />
		<param name="payment_discount_is_percent" type="radio" default="1"
			label="Discount Type: " description="Discount Type">
			<option value="1">Percentage </option>
			<option value="0">Total</option>
		</param>
		<param name="accepted_credict_card" type="creditcards" default="0"
			label="Select Credit Cards" description="Displays the selected category product" />
		<param name="moneris_store_id" type="text" default=""
			label="Moneris Store  Id" description="Moneris Store Id" />
		<param name="moneris_api_token" type="text" default=""
			label="Moneris Api Token" description="Moneris Api Token" />
		<param name="moneris_test_store_id" type="text" default=""
			label="Moneris test Store  Id" description="Moneris test Store  Id" />
		<param name="moneris_test_api_token" type="text" default=""
			label="Moneris test Api Token" description="Moneris test Api Token" />
		<param name="moneris_check_creditcard_code" type="list" default="1"
			label="Moneris Check Credit Card Code" description="Moneris Check Credit Card Code">
			<option value="1">Yes</option>
			<option value="0 ">No </option>
		</param>
		<param name="moneris_check_avs" type="list" default="1"
			label="Moneris Check AVS" description="Moneris Check Avs">
			<option value="1">Yes</option>
			<option value="0 ">No </option>
		</param>
		<param name="moneris_test_status" type="list" default="0"
			label="Moneris test status " description="Select Moneris test status">
			<option value="1">Yes</option>
			<option value="0 ">No </option>
		</param>
	</params>
	<params group="advanced">
		<param name="verify_status" type="sql"
			query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
			key_field="st_value" value_field="st_title" default="C"
			label="Order Status for successful transactions"
			description="Select the order status to which the actual order is set, if the payment transaction was successful.">
		</param>
		<param name="invalid_status" type="sql"
			query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
			key_field="st_value" value_field="st_title" default="P"
			label="Order Status for failed transactions" description="Select an order status for failed payment transactions.">
		</param>
		<param name="capture_status" type="sql"
			query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
			key_field="st_value" value_field="st_title" default="S"
			label="Capture Payment Status" description="Select an capture status for capturing payment."></param>
		<param name="private_person" type="radio" default="1"
			label="Show on Private Person" description="Show on Private Person">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="business" type="radio" default="1" label="Show on Business"
			description="Show on Business">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="is_creditcard" type="hidden" default="1" value="1" />
		<param name="economic_payment_terms_id" type="text" default=""
			label="Enter E-conomic Payment Conditions ID" />
		<param name="economic_design_layout" type="text" default=""
			label="Enter E-conomic Design and Layout ID" />
		<param name="shopper_group_id" type="plugins" default="0"
			label="Select Shopper Group" description="Displays the shopper groups" />
	</params>
</install>