<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="redshop_payment"
	method="upgrade">
	<name>DIBS Payments</name>
	<version>1.1.3</version>
	<creationDate>20-07-2011</creationDate>
	<author>RedTeam</author>
	<authorEmail>info@redhost.com</authorEmail>
	<authorUrl>http://www.redcomponent.com</authorUrl>
	<copyright>redCOMPONENT.com</copyright>
	<license>GNU General Public License v2</license>
	<description>This plugin enables standard DIBS payments</description>

	<files>
		<filename plugin="rs_payment_dibs">rs_payment_dibs.php</filename>
		<folder>rs_payment_dibs</folder>
	</files>
	<params addpath="/administrator/components/com_redshop/elements">
		<param name="payment_oprand" type="text" size="10" default="-"
			label="Payment operand" description="Payment Operand" />
		<param name="payment_price" type="text" size="30" default=""
			label="Payment price" description="Payment price" />
		<param name="payment_discount_is_percent" type="radio" default="1"
			label="Discount Type: " description="Discount Type">
			<option value="1">Percentage </option>
			<option value="0">Total</option>
		</param>
		<param name="seller_id" type="text" default=""
			label="dibs.com Seller/Vendor ID: " description="DIBS Seller or Vendot ID" />
		<param name="dibs_currency" type="list" default="1" label="Currecy: "
			description="Currency">
			<option value="DKK" selected="selected">Danish Kroner (DKK)</option>
			<option value="EUR">Euro (EUR)</option>
			<option value="USD">US Dollar $ (USD)</option>
			<option value="GBP">English Pound Â£ (GBP)</option>
			<option value="SEK">Swedish Kroner (SEK)</option>
			<option value="AUD">Australian Dollar (AUD)</option>
			<option value="CAD">Canadian Dollar (CAD)</option>
			<option value="ISK">Icelandic Kroner (ISK)</option>
			<option value="JPY">Japanese Yen (JPY)</option>
			<option value="NZD">New Zealand Dollar (NZD)</option>
			<option value="NOK">Norwegian Kroner (NOK)</option>
			<option value="CHF">Swiss Franc (CHF)</option>
			<option value="TRY">Turkish Lire (TRY)</option>
		</param>
		<param name="is_test" type="radio" default="1" label="Test mode?"
			description="Test Mode ">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="dibs_pay_type" type="text" default="FlexWin"
			label="DIBS Pay Type: " description="DIBS Pay Type" />
		<param name="dibs_languages" type="list" default="1"
			label="FlexWin Language:" description="Select language for DIBS flexwin">
			<option value="Auto" selected="selected">Auto</option>
			<option value="da">Danish</option>
			<option value="sv">Swedish</option>
			<option value="no">Norwegian</option>
			<option value="en">English</option>
			<option value="nl">Dutch</option>
			<option value="de">German </option>
			<option value="fr">French</option>
			<option value="fi">Finnish</option>
			<option value="es">Spanish</option>
			<option value="it">Italian</option>
			<option value="pl">Polish</option>
			<option value="fo">Faroese</option>
		</param>
		<param name="dibs_color" type="list" default="1" label="FlexWin  Color:"
			description="The Basic color theme for flexwin.">
			<option value="sand" selected="selected">Sand</option>
			<option value="grey">Grey</option>
			<option value="blue">Blue</option>
		</param>
		<param name="dibs_uniqueid" type="list" default="0"
			label="Unique Order ID:"
			description="Select Yes if you want to use this feature. If this parameter is defined, the orderid field must be unique, i.e., there is no existing transaction in DIBS with the same order number. If such a transaction already exists, payment will be rejected with reason=7. We strongly urge you to use this parameter, unless of course you are unable to generate unique order numbers. Note: If you use the MD5 control parameter 'md5key', you have to use 'uniqueoid'.">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</param>
		<param name="dibs_flexwin_decorator" type="list" default="0"
			label="FlexWin Decorator:" description="Specifies which DIBS decorator (design in FlexWin) to use.">
			<option selected="selected" value="default">Default</option>
			<option value="basal">Basal</option>
			<option value="rich">Rich</option>
			<option value="Own Decorator">Own Decorator</option>
		</param>
		<param name="dibs_md5key1" type="text" default="" label="MD5Key1:" />
		<param name="dibs_md5key2" type="text" default="" label="MD5Key2:" />
		<param name="dibs_forcecurrency" type="text" default=""
			label="Force Currency:" />
		<param name="verify_status" type="sql"
			query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
			key_field="st_value" value_field="st_title" default="C"
			label="Order Status for successful transactions"
			description="Select the order status to which the actual order is set, if the payment transaction was successful.">
		</param>
		<param name="invalid_status" type="sql"
			query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
			key_field="st_value" value_field="st_title" default="P"
			label="Order Status for failed transactions" description="Select an order status for failed payment transactions.">
		</param>
		<param name="capture_status" type="sql"
			query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
			key_field="st_value" value_field="st_title" default="S"
			label="Capture Payment Status" description="Select an capture status for capturing payment."></param>
		<param type="spacer" />
	</params>
	<params group="advanced">
		<param name="private_person" type="radio" default="1"
			label="Show on Private Person" description="Show on Private Person">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="business" type="radio" default="1" label="Show on Business"
			description="Show on Business">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="is_creditcard" type="hidden" default="0" value="0" />
		<param name="economic_payment_terms_id" type="text" default=""
			label="Enter E-conomic Payment Conditions ID" />
		<param name="economic_design_layout" type="text" default=""
			label="Enter E-conomic Design and Layout ID" />
		<param name="shopper_group_id" type="plugins" default="0"
			label="Select Shopper Group" description="Displays the shopper groups" />
	</params>
</install>
