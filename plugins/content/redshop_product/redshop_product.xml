<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" client="site" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_REDSHOP_PRODUCT</name>
    <version>1.5.3</version>
    <redshop>2.0</redshop>
    <creationDate>Sep 2016</creationDate>
    <author>redCOMPONENT.com</author>
    <copyright>redCOMPONENT.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>PLG_CONTENT_REDSHOP_PRODUCT_DESC</description>
    <files>
        <filename plugin="redshop_product">redshop_product.php</filename>
        <filename>index.html</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_redshop_product.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_redshop_product.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="show_price" type="radio" default="0" label="PLG_CONTENT_REDSHOP_PRODUCT_SHOW_PRICE"
                       class="btn-group btn-group-yesno"
                       description="PLG_CONTENT_REDSHOP_PRODUCT_SHOW_PRICE_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="show_discountpricelayout" type="radio" default="1"
                       class="btn-group btn-group-yesno"
                       label="PLG_CONTENT_REDSHOP_PRODUCT_SHOW_DISCOUNT_PRICE_LAYOUT">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="show_price_with_vat" type="radio" default="1" label="PLG_CONTENT_REDSHOP_PRODUCT_SHOW_PRICE_WITH_VAT"
                       class="btn-group btn-group-yesno"
                       description="PLG_CONTENT_REDSHOP_PRODUCT_SHOW_PRICE_WITH_VAT_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="product_template" type="sql"
                       query="SELECT template_id AS tm_value, template_name AS tm_title FROM #__redshop_template WHERE template_section='product_content_template'"
                       key_field="tm_value" value_field="tm_title" default="product"
                       label="PLG_CONTENT_REDSHOP_PRODUCT_PRODUCT_TEMPLATE">
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
