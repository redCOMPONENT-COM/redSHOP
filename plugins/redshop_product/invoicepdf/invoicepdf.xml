<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="redshop_product" method="upgrade">
	<name>PLG_REDSHOP_PRODUCT_INVOICEPDF</name>
	<author>redCOMPONENT.com</author>
	<version>1.5</version>
	<redshop>1.5</redshop>
	<creationDate>April 2013</creationDate>
	<copyright>redCOMPONENT.com</copyright>
	<license>GNU/GPL</license>
	<authorEmail>email@redcomponent.com</authorEmail>
	<authorUrl>www.redweb.dk</authorUrl>
	<description>PLG_REDSHOP_PRODUCT_INVOICEPDF_DESC</description>
	<files>
		<filename plugin="invoicepdf">invoicepdf.php</filename>
		<folder>fields</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_redshop_product_invoicepdf.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_redshop_product_invoicepdf.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="shippment_invoice_template"
					type="editor"
					required="true"
					default="This is a example string for PDF template. Create your own template from available tags."
					label="PLG_REDSHOP_PRODUCT_INVOICEPDF_SHIPPMENT_INVOICE_TEMPLATE"
					description="PLG_REDSHOP_PRODUCT_INVOICEPDF_SHIPPMENT_INVOICE_TEMPLATE_DESC"
				/>
			</fieldset>
			<fieldset name="shippment_invoice_template_hint">
				<field
					name="templateTags"
					type="note"
					class="alert alert-info"
					label="PLG_REDSHOP_PRODUCT_INVOICEPDF_SHIPPMENT_INVOICE_TEMPLATE_HINT"
					description="PLG_REDSHOP_PRODUCT_INVOICEPDF_SHIPPMENT_INVOICE_TEMPLATE_HINT_DESC"
				/>
			</fieldset>
			<fieldset name="shippment_invoice_template_sample"
				addfieldpath="plugins/redshop_product/invoicepdf/fields/">
				<field
					name="sampleTemplate"
					type="sample"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
