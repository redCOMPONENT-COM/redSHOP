<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="redshop_product" method="upgrade">
	<name>PLG_REDSHOP_PRODUCT_ORDERCSV</name>
	<author>redCOMPONENT.com</author>
	<version>1.2.2</version>
	<creationDate>April 2013</creationDate>
	<copyright>redCOMPONENT.com</copyright>
	<license>GNU/GPL</license>
	<authorEmail>email@redcomponent.com</authorEmail>
	<authorUrl>www.redweb.dk</authorUrl>
	<description>PLG_REDSHOP_PRODUCT_ORDERCSV_DESC</description>
	<files>
		<filename plugin="ordercsv">ordercsv.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_redshop_product_ordercsv.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_redshop_product_ordercsv.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="send_email_from"
					type="text"
					default=""
					label="PLG_REDSHOP_PRODUCT_ORDERCSV_EMAIL_FROM_LBL"
					description="PLG_REDSHOP_PRODUCT_ORDERCSV_EMAIL_FROM_DESC"
				/>
				<field
					name="from_name"
					type="text"
					default=""
					label="PLG_REDSHOP_PRODUCT_ORDERCSV_SENDER"
					description="PLG_REDSHOP_PRODUCT_ORDERCSV_SENDER_DESC"
				/>
				<field
					type="spacer"
					name="space"
					hr="true"
				/>
				<field
					name="send_email_to"
					type="text"
					default=""
					label="PLG_REDSHOP_PRODUCT_ORDERCSV_EMAIL_TO"
					description="PLG_REDSHOP_PRODUCT_ORDERCSV_EMAIL_TO_DESC"
				/>
				<field
					name="email_subject"
					type="text"
					default=""
					label="PLG_REDSHOP_PRODUCT_ORDERCSV_EMAIL_SUBJECT"
					description="PLG_REDSHOP_PRODUCT_ORDERCSV_EMAIL_SUBJECT_DESC"
				/>
				<field
					type="spacer"
					name="myspacer"
					hr="true"
				/>
				<field
					name="email_message"
					type="editor"
					default="Please find the attachment."
					label="PLG_REDSHOP_PRODUCT_ORDERCSV_EMAIL_BODY"
					description="PLG_REDSHOP_PRODUCT_ORDERCSV_EMAIL_BODY_DESC"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
