<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7.0"  client="site"  type="plugin" group="redshop_shipping" method="upgrade">
	<name>Redshop - Shipping GLS</name>
	<version>1.1.1</version>
	<creationDate>22-12-2011</creationDate>
	<author>redweb.dk</author>
	<copyright>redCOMPONENT.com</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin enables standard Shipping</description>
	
	<files>
		<filename plugin="default_shipping_GLS">default_shipping_GLS.php</filename>
	</files>
	 <config addfieldpath="/administrator/components/com_redshop/elements">
 	 <fields name="params" >
	   <fieldset name="basic">
			 <field name="is_shipper" type="hidden" default="1" value="1" />
			 <field name="extrafield_shipping"  type="extrafieldshipping" label="Select Extra Field" description="Displays on checkout" />
	   </fieldset>	
	 </fields>
    </config>
</extension>
