<?xml version="1.0" encoding="ISO-8859-1"?>
<extension version="2.5" client="site" type="plugin" group="xmap" method="upgrade">
	<name>PLG_XMAP_REDSHOP</name>
	<author>redCOMPONENT.com</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<authorUrl>http://www.redcomponent.com</authorUrl>
	<version>1.5</version>
	<redschop>1.5</redschop>
	<creationDate>April 2013</creationDate>
	<copyright>redCOMPONENT.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<description>PLG_XMAP_REDSHOP_DESCRIPTION</description>
	<files>
		<filename plugin="com_redshop">com_redshop.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_xmap_com_redshop.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_xmap_com_redshop.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="include_products" type="list" default="1"
					   label="PLG_XMAP_REDSHOP_INCLUDE_PRODUCTS_LBL"
					   description="PLG_XMAP_REDSHOP_INCLUDE_PRODUCTS_DESC">
					<option value="0">PLG_XMAP_REDSHOP_NEVER</option>
					<option value="1">PLG_XMAP_REDSHOP_ALWAYS</option>
					<option value="2">PLG_XMAP_REDSHOP_IN_XML_SITEMAP_ONLY</option>
					<option value="3">PLG_XMAP_REDSHOP_IN_HTML_SITEMAP_ONLY</option>
				</field>
				<field name="max_product" type="text" default="0"
					   label="PLG_XMAP_REDSHOP_MAX_PRODUCT_LBL"
					   description="PLG_XMAP_REDSHOP_MAX_PRODUCT_DESC" />
				<field type="spacer"/>
				<field name="cat_priority" type="list" default="0.5"
					   label="PLG_XMAP_REDSHOP_CAT_PRIORITY_LBL"
					   description="PLG_XMAP_REDSHOP_CAT_PRIORITY_DESC">
					<option value="-1">PLG_XMAP_REDSHOP_USE_PARENT_MENU_SETTINGS</option>
					<option value="0.0">0.0</option>
					<option value="0.1">0.1</option>
					<option value="0.2">0.2</option>
					<option value="0.3">0.3</option>
					<option value="0.4">0.4</option>
					<option value="0.5">0.5</option>
					<option value="0.6">0.6</option>
					<option value="0.7">0.7</option>
					<option value="0.8">0.8</option>
					<option value="0.9">0.9</option>
					<option value="1">1</option>
				</field>
				<field name="cat_changefreq" type="list" default="weekly"
					   label="PLG_XMAP_REDSHOP_CAT_CHANGEFREQ_LBL"
					   description="PLG_XMAP_REDSHOP_CAT_CHANGEFREQ_DESC">
					<option value="-1">PLG_XMAP_REDSHOP_USE_PARENT_MENU_SETTINGS</option>
					<option value="always">PLG_XMAP_REDSHOP_ALWAYS</option>
					<option value="hourly">PLG_XMAP_REDSHOP_HOURLY</option>
					<option value="daily">PLG_XMAP_REDSHOP_DAILY</option>
					<option value="weekly">PLG_XMAP_REDSHOP_WEEKLY</option>
					<option value="monthly">PLG_XMAP_REDSHOP_MONTHLY</option>
					<option value="yearly">PLG_XMAP_REDSHOP_YEARLY</option>
					<option value="never">PLG_XMAP_REDSHOP_NEVER</option>
				</field>
				<field name="prod_priority" type="list" default="0.5"
					   label="PLG_XMAP_REDSHOP_PROD_PRIORITY_LBL"
					   description="PLG_XMAP_REDSHOP_PROD_PRIORITY_DESC">
					<option value="-1">PLG_XMAP_REDSHOP_USE_PARENT_MENU_SETTINGS</option>
					<option value="0.0">0.0</option>
					<option value="0.1">0.1</option>
					<option value="0.2">0.2</option>
					<option value="0.3">0.3</option>
					<option value="0.4">0.4</option>
					<option value="0.5">0.5</option>
					<option value="0.6">0.6</option>
					<option value="0.7">0.7</option>
					<option value="0.8">0.8</option>
					<option value="0.9">0.9</option>
					<option value="1">1</option>
				</field>
				<field name="prod_changefreq" type="list" default="weekly"
					   label="PLG_XMAP_REDSHOP_PROD_CHANGEFREQ_LBL"
					   description="PLG_XMAP_REDSHOP_PROD_CHANGEFREQ_DESC">
					<option value="-1">PLG_XMAP_REDSHOP_USE_PARENT_MENU_SETTINGS</option>
					<option value="always">PLG_XMAP_REDSHOP_ALWAYS</option>
					<option value="hourly">PLG_XMAP_REDSHOP_HOURLY</option>
					<option value="daily">PLG_XMAP_REDSHOP_DAILY</option>
					<option value="weekly">PLG_XMAP_REDSHOP_WEEKLY</option>
					<option value="monthly">PLG_XMAP_REDSHOP_MONTHLY</option>
					<option value="yearly">PLG_XMAP_REDSHOP_YEARLY</option>
					<option value="never">PLG_XMAP_REDSHOP_NEVER</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>