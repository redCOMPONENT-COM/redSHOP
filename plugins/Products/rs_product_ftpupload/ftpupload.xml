<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="redshop_product" method="upgrade">
   <name>redSHOP Ftp upload plugin</name>
   <author>Redweb.dk</author>
   <creationDate>23 november 2011</creationDate>
   <copyright>redCOMPONENT.com</copyright>
   <license>GNU/GPL</license>
   <authorEmail>email@redweb.dk</authorEmail>
   <authorUrl>www.redweb.dk</authorUrl>	
   <version>1.1</version>
   <description>Upload file from redshop to remote server</description>
   <files>
       <filename plugin="ftpupload">ftpupload.php</filename>
   </files>
   <params> 
		<param name="path_for_sharing_folder" type="text"   default="" label="Enter Path for sharing folder" />   
		<param name="ftp_host" type="text"   default="" label="Enter Host for ftp" />   
		<param name="ftp_username" type="text"   default="" label="Enter Username for ftp" />   
		<param name="ftp_password" type="text"   default="" label="Enter Password for ftp" /> 
		<param name="ftp_port" type="text"   default="" label="Enter ftp port" />             
   </params>
</install>