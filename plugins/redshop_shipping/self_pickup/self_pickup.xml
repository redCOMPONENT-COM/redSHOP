<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" client="site" type="plugin" group="redshop_shipping" method="upgrade">
    <name>PLG_RS_SHIPPING_SELF_PICKUP</name>
    <version>1.5</version>
    <redshop>1.5</redshop>
    <creationDate>April 2013</creationDate>
    <author>redCOMPONENT.com</author>
    <copyright>redCOMPONENT.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>PLG_REDSHOP_SHIPPING_SELF_PICKUP_DESC</description>
    <files>
        <filename plugin="self_pickup">self_pickup.php</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_shipping_self_pickup.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_shipping_self_pickup.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="is_shipper" type="hidden" default="0" value="0"/>
                <field
                    name="allowPacsoftLabel"
                    type="radio"
                    class="btn-group"
                    default="0"
                    label="PLG_DEFAULT_SHIPPING_ALLOW_PACSOFT_LABEL"
                    description="PLG_DEFAULT_SHIPPING_ALLOW_PACSOFT_LABEL_DESC"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="shipper_location" type="hidden" default="1" value="1"/>
            </fieldset>
        </fields>
    </config>
</extension>
