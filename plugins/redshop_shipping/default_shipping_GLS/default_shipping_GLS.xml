<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" client="site" type="plugin" group="redshop_shipping" method="upgrade">
    <name>Redshop - Shipping GLS</name>
    <version>1.2</version>
    <creationDate>April 2013</creationDate>
    <author>redCOMPONENT.com</author>
    <copyright>redCOMPONENT.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>This plugin enables standard GLS shipping</description>
    <files>
        <filename plugin="default_shipping_GLS">default_shipping_GLS.php</filename>
    </files>
    <config addfieldpath="/administrator/components/com_redshop/elements">
        <fields name="params">
            <fieldset name="basic">
                <field name="is_shipper" type="hidden" default="1" value="1"/>
                <field name="extrafield_shipping" type="extrafieldshipping" label="Select Extra Field"
                       description="Displays on checkout"/>
            </fieldset>
        </fields>
    </config>
</extension>
