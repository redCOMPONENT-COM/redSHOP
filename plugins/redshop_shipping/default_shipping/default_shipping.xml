<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" client="site" type="plugin" group="redshop_shipping" method="upgrade">
    <name>REDSHOP_SHIPPING</name>
    <version>1.2</version>
    <creationDate>April 2013</creationDate>
    <author>redCOMPONENT.com</author>
    <copyright>redCOMPONENT.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>This plugin enables standard Shipping</description>

    <files>
        <filename plugin="default_shipping">default_shipping.php</filename>

    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_shipping_default_shipping.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_shipping_default_shipping.sys.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.plg_redshop_shipping_default_shipping.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.plg_redshop_shipping_default_shipping.sys.ini</language>
    </languages>
    <config addfieldpath="/administrator/components/com_redshop/elements">
        <fields name="params">
            <fieldset name="basic">
                <field name="is_shipper" type="hidden" default="1" value="1"/>
                <field name="extrafield_shipping" type="extrafieldshipping" label="Select Extra Field"
                       description="Displays on checkout"/>
            </fieldset>
        </fields>
    </config>
</extension>
