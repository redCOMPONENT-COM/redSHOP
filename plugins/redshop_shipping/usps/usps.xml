<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" client="site" type="plugin" group="redshop_shipping" method="upgrade">
    <name>USPS</name>
    <version>1.3.3</version>
    <creationDate>April 2013</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>http://www.redcomponent.com</authorUrl>
    <copyright>redCOMPONENT.com</copyright>
    <license>GNU General Public License v2</license>
    <description>This plugin enables standard USPS shipping</description>
    <shipping_class>usps</shipping_class>
    <shipping_method_code>usps</shipping_method_code>
    <files>
        <filename plugin="usps">usps.php</filename>
        <filename plugin="usps">usps.cfg.php</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_shipping_usps.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_shipping_usps.sys.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.plg_redshop_shipping_usps.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.plg_redshop_shipping_usps.sys.ini</language>
    </languages>
    <config addfieldpath="/administrator/components/com_redshop/elements">
        <fields name="params">
            <fieldset name="basic">
                <field name="extrafield_shipping" type="extrafieldshipping" label="Select Extra Field"
                       description="Displays on checkout"/>
            </fieldset>
        </fields>
    </config>
</extension>
