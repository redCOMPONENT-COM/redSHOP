<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8" client="site" type="plugin" group="twig" method="upgrade">
	<name>PLG_TWIG_DEBUG</name>
	<version>1.0.0</version>
	<redshop>2.1.5</redshop>
	<creationDate>January 2020</creationDate>
	<author>redCOMPONENT.com</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<authorUrl>www.redcomponent.com</authorUrl>
	<copyright>(C) 2020 redCOMPONENT.com</copyright>
	<license>GNU General Public License version 2 or later, see LICENSE.</license>
	<description>PLG_TWIG_DEBUG_DESC</description>
	<files>
		<folder>language</folder>
		<filename plugin="debug">debug.php</filename>
		<filename>debug.xml</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="mode"
					type="list"
					label="PLG_TWIG_DEBUG_PARAM_MODE"
					description="PLG_TWIG_DEBUG_PARAM_MODE_DESC"
					default="auto"
					>
					<option value="auto">PLG_TWIG_DEBUG_PARAM_MODE_OPTION_AUTO</option>
					<option value="always">PLG_TWIG_DEBUG_PARAM_MODE_OPTION_ALWAYS</option>
					<option value="never">PLG_TWIG_DEBUG_PARAM_MODE_OPTION_NEVER</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
