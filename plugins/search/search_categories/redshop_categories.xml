<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" client="site" type="plugin" group="search" method="upgrade">
    <name>Search Plugin - Redshop Categorysearch</name>
    <version>1.3.2</version>
    <creationDate>April 2013</creationDate>
    <author>redCOMPONENT.com</author>
    <copyright>redCOMPONENT.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>Allows Searching of Redshop categories</description>
    <files>
        <filename plugin="redshop_categories">redshop_categories.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="search_limit" type="text" size="5" default="50" label="Search Limit"
                       description="Number of Search items to return"/>
            </fieldset>
        </fields>
    </config>
</extension>
