                <field name="searchShortDesc"
                       type="radio"
                       default="0"
                       class="btn-group btn-group-yesno"
                       description="PLG_SEARCH_REDSHOP_PRODUCTS_SEARCH_SHORT_DESCRIPTION_DESC"
                       label="PLG_SEARCH_REDSHOP_PRODUCTS_SEARCH_SHORT_DESCRIPTION_LABEL">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="searchFullDesc"
                       type="radio"
                       default="0"
                       class="btn-group btn-group-yesno"
                       description="PLG_SEARCH_REDSHOP_PRODUCTS_SEARCH_FULL_DESCRIPTION_DESC"
                       label="PLG_SEARCH_REDSHOP_PRODUCTS_SEARCH_FULL_DESCRIPTION_LABEL">
                    <option value="0">JNO</option>
