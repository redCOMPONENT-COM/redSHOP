<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" client="site" type="plugin" group="redshop_payment"
           method="upgrade">
    <name>PLG_RS_PAYMENT_DIBS</name>
    <version>1.5</version>
    <redshop>1.5</redshop>
    <creationDate>April 2013</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>http://www.redcomponent.com</authorUrl>
    <copyright>redCOMPONENT.com</copyright>
    <license>GNU General Public License v2</license>
    <description>PLG_RS_PAYMENT_DIBS_DESC</description>

    <files>
        <filename plugin="rs_payment_dibs">rs_payment_dibs.php</filename>
        <filename>index.html</filename>
        <folder>rs_payment_dibs</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_dibs.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_dibs.sys.ini</language>
    </languages>
    <config addfieldpath="/administrator/components/com_redshop/elements">
        <fields name="params">
            <fieldset name="basic">
                <field name="payment_oprand" type="text" size="10" default="-"
                       label="PLG_RS_PAYMENT_DIBS_PAYMENT_OPRAND_LBL"/>
                <field name="payment_price" type="text" size="30" default=""
                       label="PLG_RS_PAYMENT_DIBS_PAYMENT_PRICE_LBL" />
                <field name="payment_discount_is_percent" type="radio" default="1"
                       class="btn-group"
                       label="PLG_RS_PAYMENT_DIBS_PAYMENT_DISCOUNT_IS_PERCENT_LBL">
                    <option value="1">PLG_RS_PAYMENT_DIBS_PERCENTAGE</option>
                    <option value="0">PLG_RS_PAYMENT_DIBS_TOTAL</option>
                </field>
                <field name="seller_id" type="text" default=""
                       label="PLG_RS_PAYMENT_DIBS_SELLER_ID_LBL" description="PLG_RS_PAYMENT_DIBS_SELLER_ID_DESC"/>
                <field name="dibs_currency" type="list" default="DKK" label="PLG_RS_PAYMENT_DIBS_CURRENCY_LBL">
                    <option value="DKK">PLG_RS_PAYMENT_DIBS_DKK</option>
                    <option value="EUR">PLG_RS_PAYMENT_DIBS_EUR</option>
                    <option value="USD">PLG_RS_PAYMENT_DIBS_USD</option>
                    <option value="GBP">PLG_RS_PAYMENT_DIBS_GBP</option>
                    <option value="SEK">PLG_RS_PAYMENT_DIBS_SEK</option>
                    <option value="AUD">PLG_RS_PAYMENT_DIBS_AUD</option>
                    <option value="CAD">PLG_RS_PAYMENT_DIBS_CAD</option>
                    <option value="ISK">PLG_RS_PAYMENT_DIBS_ISK</option>
                    <option value="JPY">PLG_RS_PAYMENT_DIBS_JPY</option>
                    <option value="NZD">PLG_RS_PAYMENT_DIBS_NZD</option>
                    <option value="NOK">PLG_RS_PAYMENT_DIBS_NOK</option>
                    <option value="CHF">PLG_RS_PAYMENT_DIBS_CHF</option>
                    <option value="TRY">PLG_RS_PAYMENT_DIBS_TRY</option>
                </field>
                <field name="is_test" type="radio" default="1" label="PLG_RS_PAYMENT_DIBS_IS_TEST_LBL"
                       class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="instant_capture" type="radio" default="1" label="PLG_RS_PAYMENT_DIBS_INSTANT_CAPTURE_LBL"
                       class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="dibs_pay_type" type="text" default="FlexWin"
                       label="PLG_RS_PAYMENT_DIBS_PAY_TYPE_LBL"/>
                <field name="dibs_languages" type="list" default="Auto"
                       label="PLG_RS_PAYMENT_DIBS_LANGUAGES_LBL" description="PLG_RS_PAYMENT_DIBS_LANGUAGES_DESC">
                    <option value="Auto">PLG_RS_PAYMENT_DIBS_AUTO</option>
                    <option value="da">PLG_RS_PAYMENT_DIBS_DA</option>
                    <option value="sv">PLG_RS_PAYMENT_DIBS_SV</option>
                    <option value="no">PLG_RS_PAYMENT_DIBS_NO</option>
                    <option value="en">PLG_RS_PAYMENT_DIBS_EN</option>
                    <option value="nl">PLG_RS_PAYMENT_DIBS_NL</option>
                    <option value="de">PLG_RS_PAYMENT_DIBS_DE</option>
                    <option value="fr">PLG_RS_PAYMENT_DIBS_FR</option>
                    <option value="fi">PLG_RS_PAYMENT_DIBS_FI</option>
                    <option value="es">PLG_RS_PAYMENT_DIBS_ES</option>
                    <option value="it">PLG_RS_PAYMENT_DIBS_IT</option>
                    <option value="pl">PLG_RS_PAYMENT_DIBS_PL</option>
                    <option value="fo">PLG_RS_PAYMENT_DIBS_FO</option>
                </field>
                <field name="dibs_color" type="list" default="sand" label="PLG_RS_PAYMENT_DIBS_COLOR_LBL"
                       description="PLG_RS_PAYMENT_DIBS_COLOR_DESC">
                    <option value="sand">PLG_RS_PAYMENT_DIBS_SAND</option>
                    <option value="grey">PLG_RS_PAYMENT_DIBS_GREY</option>
                    <option value="blue">PLG_RS_PAYMENT_DIBS_BLUE</option>
                </field>
                <field name="dibs_uniqueid" type="list" default="0"
                       label="PLG_RS_PAYMENT_DIBS_UNIQUEID_LBL"
                       description="PLG_RS_PAYMENT_DIBS_UNIQUEID_DESC">
                    <option value="yes">JYES</option>
                    <option value="no">JNO</option>
                </field>
                <field name="dibs_flexwin_decorator" type="list" default="default"
                       label="PLG_RS_PAYMENT_DIBS_FLEXWIN_DECORATOR_LBL"
                       description="PLG_RS_PAYMENT_DIBS_FLEXWIN_DECORATOR_DESC">
                    <option value="default">PLG_RS_PAYMENT_DIBS_DEFAULT</option>
                    <option value="basal">PLG_RS_PAYMENT_DIBS_BASAL</option>
                    <option value="rich">PLG_RS_PAYMENT_DIBS_RICH</option>
                    <option value="Own Decorator">PLG_RS_PAYMENT_DIBS_OWN_DECORATOR</option>
                </field>
                <field name="dibs_md5key1" type="text" default="" label="PLG_RS_PAYMENT_DIBS_MD5KEY1_LBL"/>
                <field name="dibs_md5key2" type="text" default="" label="PLG_RS_PAYMENT_DIBS_MD5KEY2_LBL"/>
                <field name="dibs_forcecurrency" type="text" default=""
                       label="PLG_RS_PAYMENT_DIBS_FORCECURRENCY_LBL"/>
                <field name="verify_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="C"
                       label="PLG_RS_PAYMENT_DIBS_VERIFY_STATUS_LBL"
                       description="PLG_RS_PAYMENT_DIBS_VERIFY_STATUS_DESC">
                </field>
                <field name="invalid_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="P"
                       label="PLG_RS_PAYMENT_DIBS_INVALID_STATUS_LBL"
                       description="PLG_RS_PAYMENT_DIBS_INVALID_STATUS_DESC">
                </field>
                <field name="capture_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="S"
                       label="PLG_RS_PAYMENT_DIBS_CAPTURE_STATUS_LBL" description="PLG_RS_PAYMENT_DIBS_CAPTURE_STATUS_DESC">
                </field>
                <field type="spacer"/>
            </fieldset>
            <fieldset name="advanced">
                <field name="private_person" type="radio" default="1"
                       class="btn-group btn-group-yesno"
                       label="PLG_RS_PAYMENT_DIBS_PRIVATE_PERSON_LBL">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="business" type="radio" default="1" label="PLG_RS_PAYMENT_DIBS_BUSINESS_LBL"
                       class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="is_creditcard" type="hidden" default="0" value="0"/>
                <field name="economic_payment_terms_id" type="text" default=""
                       label="PLG_RS_PAYMENT_DIBS_ECONOMIC_PAYMENT_TERMS_ID_LBL"/>
                <field name="economic_design_layout" type="text" default=""
                       label="PLG_RS_PAYMENT_DIBS_ECONOMIC_DESIGN_LAYOUT_LBL"/>
                <field name="shopper_group_id" type="shoppergrouplist" default="0"
                       label="PLG_RS_PAYMENT_DIBS_SHOPPER_GROUP_ID_LBL" description="PLG_RS_PAYMENT_DIBS_SHOPPER_GROUP_ID_DESC"/>
            </fieldset>
        </fields>
    </config>
</extension>
