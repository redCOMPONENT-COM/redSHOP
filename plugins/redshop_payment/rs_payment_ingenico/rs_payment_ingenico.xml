<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" client="site" type="plugin" group="redshop_payment" method="upgrade">
	<name>PLG_RS_PAYMENT_INGENICO</name>
	<version>1.5.2</version>
	<redshop>1.5</redshop>
	<creationDate>April 2013</creationDate>
	<author>redCOMPONENT.com</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<authorUrl>http://www.redcomponent.com</authorUrl>
	<copyright>redCOMPONENT.com</copyright>
	<license>GNU General Public License v2</license>
	<description>PLG_RS_PAYMENT_INGENICO_DESC</description>
	<files>
		<filename plugin="rs_payment_ingenico">rs_payment_ingenico.php</filename>
		<filename>index.html</filename>
		<folder>rs_payment_ingenico</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_ingenico.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_ingenico.sys.ini</language>
	</languages>
	<config addfieldpath="/libraries/redshop/form/fields">
		<fields name="params">
			<fieldset name="basic">
				<field
					name="is_test"
					type="list"
					default="1"
					label="PLG_RS_PAYMENT_INGENICO_IS_TEST_LBL"
					description="PLG_RS_PAYMENT_INGENICO_IS_TEST_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="ingenico_pspid"
					type="text"
					size="30"
					default=""
					label="PLG_RS_PAYMENT_INGENICO_INGENICO_PSPID_LBL"
					description="PLG_RS_PAYMENT_INGENICO_INGENICO_PSPID_DESC"
				/>
				<field
					name="ingenico_userid"
					type="text"
					size="30"
					default=""
					label="PLG_RS_PAYMENT_INGENICO_INGENICO_USERID_LBL"
				/>
				<field
					name="sha_in_pass_phrase"
					type="text"
					size="30"
					default=""
					label="PLG_RS_PAYMENT_INGENICO_SHA_IN_PASS_PHRASE_LBL"
				/>
				<field
					name="sha_out_pass_phrase"
					type="text"
					size="30"
					default=""
					label="PLG_RS_PAYMENT_INGENICO_SHA_OUT_PASS_PHRASE_LBL"
				/>
				<field
					name="opreation_mode"
					type="radio"
					class="btn-group"
					default="SAL"
					label="PLG_RS_PAYMENT_INGENICO_OPREATION_MODE_LBL"
				>
					<option value="RES">PLG_RS_PAYMENT_INGENICO_AUTHORIZE_ONLY</option>
					<option value="SAL">PLG_RS_PAYMENT_INGENICO_SALE</option>
				</field>
				<field
					name="currency"
					type="list"
					default="0"
					label="PLG_RS_PAYMENT_INGENICO_CURRENCY_LBL"
				>
					<option value="DKK">PLG_RS_PAYMENT_INGENICO_DKK</option>
					<option value="EUR">PLG_RS_PAYMENT_INGENICO_EUR</option>
					<option value="USD">PLG_RS_PAYMENT_INGENICO_USD</option>
					<option value="GBP">PLG_RS_PAYMENT_INGENICO_GBP</option>
					<option value="SEK">PLG_RS_PAYMENT_INGENICO_SEK</option>
					<option value="AUD">PLG_RS_PAYMENT_INGENICO_AUD</option>
					<option value="CAD">PLG_RS_PAYMENT_INGENICO_CAD</option>
					<option value="ISK">PLG_RS_PAYMENT_INGENICO_ISK</option>
					<option value="JPY">PLG_RS_PAYMENT_INGENICO_JPY</option>
					<option value="NZD">PLG_RS_PAYMENT_INGENICO_NZD</option>
					<option value="NOK">PLG_RS_PAYMENT_INGENICO_NOK</option>
					<option value="CHF">PLG_RS_PAYMENT_INGENICO_CHF</option>
					<option value="TRY">PLG_RS_PAYMENT_INGENICO_TRY</option>
				</field>
				<field
					name="language"
					type="list"
					default="0"
					label="PLG_RS_PAYMENT_INGENICO_LANGUAGE_LBL"
				>
					<option value="dk_DK">PLG_RS_PAYMENT_INGENICO_DANISH</option>
					<option value="nl_NL">PLG_RS_PAYMENT_INGENICO_DUTCH</option>
					<option value="nl_BE">PLG_RS_PAYMENT_INGENICO_FLEMISH</option>
					<option value="en_GB">PLG_RS_PAYMENT_INGENICO_ENGLISH_UK</option>
					<option value="en_US">PLG_RS_PAYMENT_INGENICO_ENGLISH_US</option>
					<option value="fr_CA">PLG_RS_PAYMENT_INGENICO_FRENCH_CANADA</option>
					<option value="es_LA">PLG_RS_PAYMENT_INGENICO_SPANISH</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="verify_status"
					type="sql"
					query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
					key_field="st_value"
					value_field="st_title"
					default="C"
					label="PLG_RS_PAYMENT_INGENICO_VERIFY_STATUS_LBL"
					description="PLG_RS_PAYMENT_INGENICO_VERIFY_STATUS_DESC">
				</field>
				<field
					name="invalid_status"
					type="sql"
					query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
					key_field="st_value"
					value_field="st_title"
					default="P"
					label="PLG_RS_PAYMENT_INGENICO_INVALID_STATUS_LBL"
					description="PLG_RS_PAYMENT_INGENICO_INVALID_STATUS_DESC">
				</field>
				<field
					name="capture_status"
					type="sql"
					query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
					key_field="st_value"
					value_field="st_title"
					default="S"
					label="PLG_RS_PAYMENT_INGENICO_CAPTURE_STATUS_LBL"
					description="PLG_RS_PAYMENT_INGENICO_CAPTURE_STATUS_DESC">
				</field>
				<field
					name="payment_oprand"
					type="text"
					size="10"
					default="-"
					label="PLG_RS_PAYMENT_INGENICO_PAYMENT_OPRAND_LBL"
				/>
				<field
					name="payment_price"
					type="text"
					size="30"
					default=""
					label="PLG_RS_PAYMENT_INGENICO_PAYMENT_PRICE_LBL"
				/>
				<field
					name="payment_discount_is_percent"
					type="radio"
					default="1"
					class="btn-group"
					label="PLG_RS_PAYMENT_INGENICO_PAYMENT_DISCOUNT_IS_PERCENT_LBL"
				>
					<option value="1">PLG_RS_PAYMENT_INGENICO_PERCENTAGE</option>
					<option value="0">PLG_RS_PAYMENT_INGENICO_TOTAL</option>
				</field>
				<field
					name="private_person"
					type="radio"
					default="1"
					class="btn-group btn-group-yesno"
					label="PLG_RS_PAYMENT_INGENICO_PRIVATE_PERSON_LBL"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="business"
					type="radio"
					default="1"
					label="PLG_RS_PAYMENT_INGENICO_BUSINESS_LBL"
					class="btn-group btn-group-yesno"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="is_creditcard"
					type="radio"
					default="0"
					class="btn-group btn-group-yesno"
					label="PLG_RS_PAYMENT_INGENICO_IS_CREDITCARD_LBL"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="economic_payment_terms_id"
					type="text"
					default="2"
					label="PLG_RS_PAYMENT_INGENICO_ECONOMIC_PAYMENT_TERMS_ID_LBL"
				/>
				<field
					name="economic_design_layout"
					type="text"
					default=""
					label="PLG_RS_PAYMENT_INGENICO_ECONOMIC_DESIGN_LAYOUT_LBL"
				/>
				<field
					name="shopper_group_id"
					type="shoppergrouplist"
					multiple="multiple"
					default="0"
					label="PLG_RS_PAYMENT_INGENICO_SHOPPER_GROUP_ID_LBL"
					description="PLG_RS_PAYMENT_INGENICO_SHOPPER_GROUP_ID_DESC"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
