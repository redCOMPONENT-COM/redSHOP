<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="redshop_payment" method="upgrade">
    <name>PLG_RS_PAYMENT_GOOGLECHECKOUT</name>
    <version>1.7.0</version>
    <redshop>2.0.0.6</redshop>
    <creationDate>DEC 2016</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>http://www.redcomponent.com</authorUrl>
    <copyright>redCOMPONENT.com</copyright>
    <license>GNU General Public License v2</license>
    <description>PLG_RS_PAYMENT_GOOGLECHECKOUT_DESC</description>

    <files>
        <filename plugin="rs_payment_googlecheckout">rs_payment_googlecheckout.php</filename>
        <folder>rs_payment_googlecheckout</folder>
        <folder>language</folder>
    </files>
    <scriptfile>install.php</scriptfile>

    <config addfieldpath="/libraries/redshop/form/fields">
        <fields name="params">
            <fieldset name="basic">

                <field name="payment_oprand" type="text" size="10" default="-"
                       label="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_OPERAND"
                       description="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_OPERAND_DESC"/>
                <field name="payment_price" type="text" size="30" default=""
                       label="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_PRICE" description="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_PRICE_DESC"/>
                <field name="payment_discount_is_percent" type="radio" default="1"
                       label="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_DISCOUNT_TYPE" description="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_DISCOUNT_TYPE">
                    <option value="1">PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_DISCOUNT_TYPE_PERCENTAGE</option>
                    <option value="0">PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_DISCOUNT_TYPE_TOTAL</option>
                </field>
                <field name="is_test" type="list" default="sandbox"
                       label="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_IS_TEST"
                       description="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_IS_TEST">
                    <option value="production">PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_IS_TEST_PRODUCTION</option>
                    <option value="sandbox">PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_IS_TEST_SANDBOX</option>
                </field>
                <field name="merchant_id" type="text" default=""
                       label="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_GOOGLE_MERCHANT_ID"
                       description="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_GOOGLE_MERCHANT_ID_DESC"/>
                <field name="merchant_key" type="text" default=""
                       label="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_GOOGLE_MERCHANT_KEY"
                       description="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_GOOGLE_MERCHANT_KEY_DESC"/>
                <field name="button_size" type="list" default="medium" label="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_GOOGLE_BUTTON_SIZE"
                       description="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_GOOGLE_BUTTON_SIZE_DESC">
                    <option value="large">PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_GOOGLE_BUTTON_SIZE_LARGE</option>
                    <option value="medium">PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_GOOGLE_BUTTON_SIZE_MEDIUM</option>
                    <option value="small">PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_GOOGLE_BUTTON_SIZE_SMALL</option>
                </field>
                <field name="button_style" type="list" default="white" label="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_GOOGLE_BUTTON_STYLE"
                       description="PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_GOOGLE_BUTTON_STYLE_DESC">
                    <option value=" white">PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_GOOGLE_BUTTON_STYLE_WHITE</option>
                    <option value="trans">PLG_RS_PAYMENT_GOOGLECHECKOUT_PAYMENT_GOOGLE_BUTTON_STYLE_COLORED</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="private_person" type="radio" default="1"
                       label="PLG_RS_PAYMENT_GOOGLECHECKOUT_PRIVATE_PERSON" description="PLG_RS_PAYMENT_GOOGLECHECKOUT_PRIVATE_PERSON_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="business" type="radio" default="1" label="PLG_RS_PAYMENT_GOOGLECHECKOUT_BUSINESS"
                       description="PLG_RS_PAYMENT_GOOGLECHECKOUT_BUSINESS_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="is_creditcard" type="hidden" default="0" value="0"/>
                <field name="economic_payment_terms_id" type="text" default="2"
                       label="PLG_RS_PAYMENT_GOOGLECHECKOUT_ECONOMIC_TERM_ID"
                       description="PLG_RS_PAYMENT_GOOGLECHECKOUT_ECONOMIC_TERM_ID_DESC"/>
                <field name="economic_design_layout" type="text" default=""
                       label="PLG_RS_PAYMENT_GOOGLECHECKOUT_ECONOMIC_DESGIN_ID" description="PLG_RS_PAYMENT_GOOGLECHECKOUT_ECONOMIC_DESGIN_ID_DESC"/>
                <field name="shopper_group_id" type="shoppergrouplist" multiple="multiple" default="0"
                       label="PLG_RS_PAYMENT_GOOGLECHECKOUT_SHOPPER_GROUP"
                       description="PLG_RS_PAYMENT_GOOGLECHECKOUT_SHOPPER_GROUP_DESC"/>
            </fieldset>
        </fields>
    </config>
</extension>
