<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" client="site" type="plugin" group="redshop_payment"
           method="upgrade">
    <name>PLG_RS_PAYMENT_GOOGLECHECKOUT</name>
    <version>1.1.3</version>
    <creationDate>11-10-2011</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>http://www.redcomponent.com</authorUrl>
    <copyright>redCOMPONENT.com</copyright>
    <license>GNU General Public License v2</license>
    <description>This plugin enables standard Google Checkout Payments for redSHOP</description>

    <files>
        <filename plugin="rs_payment_googlecheckout">rs_payment_googlecheckout.php</filename>
        <folder>rs_payment_googlecheckout</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_googlecheckout.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_googlecheckout.sys.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.plg_redshop_payment_rs_payment_googlecheckout.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.plg_redshop_payment_rs_payment_googlecheckout.sys.ini</language>
    </languages>
    <config addfieldpath="/administrator/components/com_redshop/elements">
        <fields name="params">
            <fieldset name="basic">

                <field name="payment_oprand" type="text" size="10" default="-"
                       label="Discount Payment Amount operand"
                       description="Discount Payment Amount operand For example '-','+'"/>
                <field name="payment_price" type="text" size="30" default=""
                       label="Discount Payment Amount Value" description="Discount Payment Amount Value"/>
                <field name="payment_discount_is_percent" type="radio" default="1"
                       label="Discount Type: " description="Discount Payment Type">
                    <option value="1">Percentage</option>
                    <option value="0">Total</option>
                </field>
                <field name="is_test" type="list" default="sandbox"
                       label="Select either the sandbox or live production environment"
                       description="Select either the sandbox or live production environment">
                    <option value="production">PRODUCTION</option>
                    <option value="sandbox">SANDBOX</option>
                </field>
                <field name="merchant_id" type="text" default=""
                       label="Google Merchant ID"
                       description="Your merchant ID is listed on the 'Integration' page under the 'Settings' tab "/>
                <field name="merchant_key" type="text" default=""
                       label="Google Merchant Key"
                       description="Your merchant KEY is listed on the 'Integration' page under the 'Settings' tab "/>
                <field name="button_size" type="list" default="medium" label="Button Size"
                       description="Google Checkout Button Size">
                    <option value="large">LARGE</option>
                    <option value="medium">MEDIUM</option>
                    <option value="small">SMALL</option>
                </field>
                <field name="button_style" type="list" default="white" label="Button Style"
                       description="Google Checkout Button Style My website has a WHITE or COLORED background ">
                    <option value="white">WHITE</option>
                    <option value="trans">COLORED</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="private_person" type="radio" default="1"
                       label="Show on Private Person" description="Display only for Private Person">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="business" type="radio" default="1" label="Show on Business"
                       description="Display only for Business/Company Person">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="is_creditcard" type="hidden" default="0" value="0"/>
                <field name="economic_payment_terms_id" type="text" default="2"
                       label="Enter E-conomic Terms of payment Id"
                       description="You can get it from E-conomic Sales Tab, Other Setup->Terms of payment View"/>
                <field name="economic_design_layout" type="text" default=""
                       label="Enter E-conomic Design and Layout ID"/>
                <field name="shopper_group_id" type="plugins" default="0"
                       label="Shopper Group"
                       description="Allow Plugin only for selected shopper groups. Select none for all."/>
            </fieldset>
        </fields>
    </config>
</extension>
