<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" client="site" type="plugin" group="redshop_payment"
           method="upgrade">
    <name>PLG_RS_PAYMENT_PAYSON</name>
    <version>1.1.5</version>
    <creationDate>27th July 2012</creationDate>
    <author>Redweb.dk</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>www.redweb.dk</authorUrl>
    <copyright>redCOMPONENT.com</copyright>
    <license>GNU General Public License v2</license>
    <description>This plugin enables standard Payson payments</description>
    <files>
        <filename plugin="rs_payment_payson">rs_payment_payson.php</filename>
        <folder>rs_payment_payson</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_payson.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_payson.sys.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.plg_redshop_payment_rs_payment_payson.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.plg_redshop_payment_rs_payment_payson.sys.ini</language>
    </languages>
    <config addfieldpath="/administrator/components/com_redshop/elements">
        <fields name="params">
            <fieldset name="basic">

                <field name="payment_oprand" type="text" size="10" default="-"
                       label="Payment operand" description="Payment Operand"/>
                <field name="payment_price" type="text" size="30" default=""
                       label="Payment price" description="Payment price"/>
                <field name="payment_discount_is_percent" type="radio" default="1"
                       label="Discount Type: " description="Discount Type">
                    <option value="1">Percentage</option>
                    <option value="0">Total</option>
                </field>
                <field name="testMode" type="radio" size="30" default="1"
                       label="Payson testMode" description="Paypal Payson testMode Desc">
                    <option value="1">yes</option>
                    <option value="0">no</option>
                </field>
                <field name="pays_agentid" type="text" size="30" default=""
                       label="Payson AgentId" description="Payson AgentId Desc"/>
                <field name="pays_md5" type="text" size="30" default=""
                       label="Payson MD5 key" description="Payson MD5 key Desc"/>
                <field name="pays_selleremail" type="text" size="30" default=""
                       label="Payson Seller Email" description="Payson Seller Email Desc"/>
                <field name="pays_seller_first_name" type="text" size="30"
                       default="" label="Payson Seller Firstname" description="Payson Seller Firstname Desc"/>
                <field name="pays_seller_last_name" type="text" size="30"
                       default="" label="Payson Seller Lastname" description="Payson Seller Lastname Desc"/>
                <field name="pays_purchase_url" type="text" size="30" default=""
                       label="Payson purchase url" description="Payson PurchaseURL Desc"/>
                <field name="pays_description" type="text" size="30" default=""
                       label="Payson Description" description="Payson Description Desc"/>
                <field name="pays_shipping_type" type="text" size="30" default=""
                       label="Payson Shipping Type" description="Payson shipping Type Desc"/>
                <field name="pays_shipping_mode" type="text" size="30" default=""
                       label="Payson Shipping Mode" description="Payson Shipping Mode Desc"/>
                <field name="pays_cust_receipt" type="radio" size="30" default="True"
                       label="Payson Customer Receipt" description="Payson Customer Receipt Desc">
                    <option value="True">yes</option>
                    <option value="False">no</option>
                </field>
                <field name="pays_method" type="list" size="30" default="0"
                       label="Payson Business Account Email" description="Paypal Business Account Email Desc">
                    <option value="0">All payment options</option>
                    <option value="1">Map</option>
                    <option value="2">Internetbank (SEB, SHB, Nordea and Swedbank)
                    </option>
                    <option value="3">Moderate to Payson Account...</option>
                    <option value="4">Online Resources for Payson + Account</option>
                </field>
                <field name="verify_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="C"
                       label="Order Status for successful transactions"
                       description="Select the order status to which the actual order is set, if the payment transaction was successful.">
                </field>
                <field name="invalid_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="P"
                       label="Order Status for failed transactions"
                       description="Select an order status for failed payment transactions.">
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="private_person" type="radio" default="1"
                       label="Show on Private Person" description="Show on Private Person">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="business" type="radio" default="1" label="Show on Business"
                       description="Show on Business">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <param name="is_creditcard" type="hidden" default="0" value="0"/>
                <field name="economic_payment_terms_id" type="text" default=""
                       label="Enter E-conomic Payment Conditions ID"/>
                <field name="economic_design_layout" type="text" default=""
                       label="Enter E-conomic Design and Layout ID"/>
                <field name="is_creditcard" type="hidden" default="0" value="0"/>
            </fieldset>
        </fields>
    </config>
</extension>
