<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" client="site" type="plugin" group="redshop_payment"
           method="upgrade">
    <name>PLG_RS_PAYMENT_EWAYUK</name>
    <version>1.5</version>
    <redschop>1.5</redschop>
    <creationDate>April 2013</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>http://www.redcomponent.com</authorUrl>
    <copyright>redCOMPONENT.com</copyright>
    <license>GNU General Public License v2</license>
    <description>PLG_RS_PAYMENT_EWAYUK_DESC</description>

    <files>
        <filename plugin="rs_payment_ewayuk">rs_payment_ewayuk.php</filename>
        <filename>index.html</filename>
        <folder>rs_payment_ewayuk</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_ewayuk.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_ewayuk.sys.ini</language>
    </languages>
    <config addfieldpath="/administrator/components/com_redshop/elements">
        <fields name="params">
            <fieldset name="basic">

                <field name="payment_oprand" type="text" size="10" default="-"
                       label="PLG_RS_PAYMENT_EWAYUK_PAYMENT_OPRAND_LBL"/>
                <field name="payment_price" type="text" size="30" default=""
                       label="PLG_RS_PAYMENT_EWAYUK_PAYMENT_PRICE_LBL"/>

                <field name="payment_discount_is_percent" type="radio" default="1"
                       class="btn-group"
                       label="PLG_RS_PAYMENT_EWAYUK_PAYMENT_DISCOUNT_IS_PERCENT_LBL">
                    <option value="1">PLG_RS_PAYMENT_EWAYUK_PERCENTAGE</option>
                    <option value="0">PLG_RS_PAYMENT_EWAYUK_TOTAL</option>
                </field>
                <field name="debug_mode" type="radio" default="1"
                       class="btn-group btn-group-yesno"
                       label="PLG_RS_PAYMENT_EWAYUK_DEBUG_MODE_LBL">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="customer_id" type="text" default="" label="PLG_RS_PAYMENT_EWAYUK_CUSTOMER_ID_LBL"
                       description="PLG_RS_PAYMENT_EWAYUK_CUSTOMER_ID_DESC"/>
                <field name="username" type="text" default="" label="PLG_RS_PAYMENT_EWAYUK_USERNAME_LBL"
                       description="PLG_RS_PAYMENT_EWAYUK_USERNAME_DESC"/>
                <field name="pagetitle" type="text" default="" label="PLG_RS_PAYMENT_EWAYUK_PAGETITLE_LBL"
                       description="PLG_RS_PAYMENT_EWAYUK_PAGETITLE_DESC"/>
                <field name="pagedescription" type="text" default=""
                       label="PLG_RS_PAYMENT_EWAYUK_PAGEDESCRIPTION_LBL"
                       description="PLG_RS_PAYMENT_EWAYUK_PAGEDESCRIPTION_DESC"/>
                <field name="pagefooter" type="text" default="" label="PLG_RS_PAYMENT_EWAYUK_PAGEFOOTER_LBL"
                       description="PLG_RS_PAYMENT_EWAYUK_PAGEFOOTER_DESC"/>
                <field name="ewayuk_language" type="list" default="EN"
                       label="PLG_RS_PAYMENT_EWAYUK_EWAYUK_LANGUAGE_LBL" description="PLG_RS_PAYMENT_EWAYUK_EWAYUK_LANGUAGE_DESC">
                    <option value="EN">PLG_RS_PAYMENT_EWAYUK_ENGLISH</option>
                    <option value="ES">PLG_RS_PAYMENT_EWAYUK_SPANISH</option>
                    <option value="FR">PLG_RS_PAYMENT_EWAYUK_FRENCH</option>
                    <option value="DE">PLG_RS_PAYMENT_EWAYUK_GERMAN</option>
                    <option value="NL">PLG_RS_PAYMENT_EWAYUK_DUTCH</option>
                </field>
                <field name="merchant_companyname" type="text" default=""
                       label="PLG_RS_PAYMENT_EWAYUK_MERCHANT_COMPANYNAME_LBL"
                       description="PLG_RS_PAYMENT_EWAYUK_MERCHANT_COMPANYNAME_DESC"/>
                <field name="verify_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="C"
                       label="PLG_RS_PAYMENT_EWAYUK_VERIFY_STATUS_LBL"
                       description="PLG_RS_PAYMENT_EWAYUK_VERIFY_STATUS_DESC">
                </field>
                <field name="invalid_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="P"
                       label="PLG_RS_PAYMENT_EWAYUK_INVALID_STATUS_LBL"
                       description="PLG_RS_PAYMENT_EWAYUK_INVALID_STATUS_DESC">
                </field>
                <field type="spacer"/>
                <field type="spacer"/>
                <field type="spacer"/>
            </fieldset>
            <fieldset name="advanced">
                <field name="private_person" type="radio" default="1"
                       label="PLG_RS_PAYMENT_EWAYUK_PRIVATE_PERSON_LBL"
                       class="btn-group btn-group-yesno"
                       description="PLG_RS_PAYMENT_EWAYUK_PRIVATE_PERSON_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="business" type="radio" default="1"
                       class="btn-group btn-group-yesno"
                       label="PLG_RS_PAYMENT_EWAYUK_BUSINESS_LBL">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="is_creditcard" type="hidden" default="0" value="0"/>
                <field name="economic_payment_terms_id" type="text" default=""
                       label="PLG_RS_PAYMENT_EWAYUK_ECONOMIC_PAYMENT_TERMS_ID_LBL"/>
                <field name="economic_design_layout" type="text" default=""
                       label="PLG_RS_PAYMENT_EWAYUK_ECONOMIC_DESIGN_LAYOUT_LBL"/>
                <field name="shopper_group_id" type="shoppergrouplist" multiple="multiple" default="0"
                       label="PLG_RS_PAYMENT_EWAYUK_SHOPPER_GROUP_ID_LBL"
                       description="PLG_RS_PAYMENT_EWAYUK_SHOPPER_GROUP_ID_DESC"/>
            </fieldset>
        </fields>
    </config>
</extension>
