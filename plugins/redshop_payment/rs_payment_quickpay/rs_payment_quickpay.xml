<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="redshop_payment" method="upgrade" client="site">
	<name>PLG_RS_PAYMENT_QUICKPAY</name>
	<version>1.5.2</version>
	<redshop>1.5</redshop>
	<creationDate>April 2013</creationDate>
	<author>redCOMPONENT.com</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<authorUrl>http://www.redcomponent.com</authorUrl>
	<copyright>redCOMPONENT.com</copyright>
	<license>GNU General Public License v2</license>
	<description>PLG_RS_PAYMENT_QUICKPAY_DESC</description>

	<files>
		<filename plugin="rs_payment_quickpay">rs_payment_quickpay.php</filename>
		<folder>rs_payment_quickpay</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_quickpay.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_quickpay.sys.ini</language>
	</languages>

	<config addfieldpath="/libraries/redshop/form/fields">
		<fields name="params">
			<fieldset name="basic">
				<field name="payment_oprand" type="text" size="10" default="-"
					   label="PLG_RS_PAYMENT_QUICKPAY_PAYMENT_OPRAND_LBL"/>
				<field name="payment_price" type="text" size="30" default=""
					   label="PLG_RS_PAYMENT_QUICKPAY_PAYMENT_PRICE_LBL"/>
				<field name="debug_mode" type="radio" default="1"
					   class="btn-group btn-group-yesno"
					   label="PLG_RS_PAYMENT_QUICKPAY_DEBUG_MODE_LBL">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="payment_discount_is_percent" type="radio" default="1"
					   class="btn-group"
					   label="PLG_RS_PAYMENT_QUICKPAY_PAYMENT_DISCOUNT_IS_PERCENT_LBL">
					<option value="1">PLG_RS_PAYMENT_QUICKPAY_PERCENTAGE</option>
					<option value="0">PLG_RS_PAYMENT_QUICKPAY_TOTAL</option>
				</field>
				<field
						name="sendOrderId"
						type="radio"
						default="1"
						label="PLG_RS_PAYMENT_QUICKPAY_SEND_ORDER_ID"
						description="PLG_RS_PAYMENT_QUICKPAY_SEND_ORDER_ID_DESC"
						class="btn-group"
						>
					<option value="1">PLG_RS_PAYMENT_QUICKPAY_ORDER_ID</option>
					<option value="0">PLG_RS_PAYMENT_QUICKPAY_ORDER_NUMBER</option>
				</field>
				<field name="is_test" type="radio" default="1"
					   class="btn-group btn-group-yesno"
					   label="PLG_RS_PAYMENT_QUICKPAY_IS_TEST_LBL"
					   description="PLG_RS_PAYMENT_QUICKPAY_IS_TEST_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="quickpay_customer_id" type="text" default=""
					   label="PLG_RS_PAYMENT_QUICKPAY_QUICKPAY_CUSTOMER_ID_LBL"
					   description="PLG_RS_PAYMENT_QUICKPAY_QUICKPAY_CUSTOMER_ID_DESC"/>
				<field name="verify_status" type="sql"
					   query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
					   key_field="st_value" value_field="st_title" default="C"
					   label="PLG_RS_PAYMENT_QUICKPAY_VERIFY_STATUS_LBL"
					   description="PLG_RS_PAYMENT_QUICKPAY_VERIFY_STATUS_DESC">
				</field>
				<field name="invalid_status" type="sql"
					   query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
					   key_field="st_value" value_field="st_title" default="P"
					   label="PLG_RS_PAYMENT_QUICKPAY_INVALID_STATUS_LBL"
					   description="PLG_RS_PAYMENT_QUICKPAY_INVALID_STATUS_DESC">
				</field>
				<field name="autocapture" type="radio" default="0"
					   class="btn-group btn-group-yesno"
					   label="PLG_RS_PAYMENT_QUICKPAY_AUTOCAPTURE_LBL"
					   description="PLG_RS_PAYMENT_QUICKPAY_AUTOCAPTURE_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="refund" type="radio" default="1"
					   class="btn-group btn-group-yesno"
					   label="PLG_RS_PAYMENT_QUICKPAY_REFUND_LBL"
					   description="PLG_RS_PAYMENT_QUICKPAY_REFUND_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="capture_status" type="sql"
					   query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
					   key_field="st_value" value_field="st_title" default="S"
					   label="PLG_RS_PAYMENT_QUICKPAY_CAPTURE_STATUS_LBL"
					   description="PLG_RS_PAYMENT_QUICKPAY_CAPTURE_STATUS_DESC"/>
				<field name="cardtypes" type="cardtypes" default=""
					   label="PLG_RS_PAYMENT_QUICKPAY_CARDTYPES_LBL"
					   description="PLG_RS_PAYMENT_QUICKPAY_CARDTYPES_DESC"
					   addfieldpath="/libraries/redshop/form/fields"/>
				<field name="language" type="list" default="en"
					   label="PLG_RS_PAYMENT_QUICKPAY_LANGUAGE_LBL"
					   description="PLG_RS_PAYMENT_QUICKPAY_LANGUAGE_DESC">
					<option value="da">PLG_RS_PAYMENT_QUICKPAY_DANISH</option>
					<option value="en">PLG_RS_PAYMENT_QUICKPAY_ENGLISH</option>
					<option value="se">PLG_RS_PAYMENT_QUICKPAY_SWEDISH</option>
					<option value="no">PLG_RS_PAYMENT_QUICKPAY_NORWEGIAN</option>
					<option value="fo">PLG_RS_PAYMENT_QUICKPAY_FAEROESE</option>
					<option value="fr">PLG_RS_PAYMENT_QUICKPAY_FRENCH</option>
					<option value="it">PLG_RS_PAYMENT_QUICKPAY_ITALIAN</option>
					<option value="nl">PLG_RS_PAYMENT_QUICKPAY_DUTCH</option>
					<option value="pl">PLG_RS_PAYMENT_QUICKPAY_POLISH</option>
				</field>
				<field name="quickpay_paymentkey" type="text" size="30" default=""
					   label="PLG_RS_PAYMENT_QUICKPAY_QUICKPAY_PAYMENTKEY_LBL"
					   description="PLG_RS_PAYMENT_QUICKPAY_QUICKPAY_PAYMENTKEY_DESC"/>
				<field name="email_notification" type="radio" default="1"
					   class="btn-group btn-group-yesno"
					   label="PLG_RS_PAYMENT_QUICKPAY_EMAIL_NOTIFICATION_LBL">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="extrafield_payment" type="extrafields" field_section="18" multiple="multiple"
					   label="PLG_RS_PAYMENT_QUICKPAY_EXTRAFIELD_PAYMENT_LBL"
					   description="PLG_RS_PAYMENT_QUICKPAY_EXTRAFIELD_PAYMENT_DESC"/>
				<field type="spacer"/>
			</fieldset>
			<fieldset name="advanced">
				<field name="private_person" type="radio" default="1"
					   class="btn-group btn-group-yesno"
					   label="PLG_RS_PAYMENT_QUICKPAY_PRIVATE_PERSON_LBL">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="business" type="radio" default="1"
					   class="btn-group btn-group-yesno"
					   label="PLG_RS_PAYMENT_QUICKPAY_BUSINESS_LBL">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="is_creditcard" type="hidden" default="0" value="0"/>
				<field name="economic_payment_terms_id" type="text" default=""
					   label="PLG_RS_PAYMENT_QUICKPAY_ECONOMIC_PAYMENT_TERMS_ID_LBL"/>
				<field name="economic_design_layout" type="text" default=""
					   label="PLG_RS_PAYMENT_QUICKPAY_ECONOMIC_DESIGN_LAYOUT_LBL"/>
				<field name="shopper_group_id" type="shoppergrouplist" multiple="multiple" default="0"
					   label="PLG_RS_PAYMENT_QUICKPAY_SHOPPER_GROUP_ID_LBL"
					   description="PLG_RS_PAYMENT_QUICKPAY_SHOPPER_GROUP_ID_DESC"
					   addfieldpath="/libraries/redshop/form/fields"/>
			</fieldset>
		</fields>
	</config>
</extension>
