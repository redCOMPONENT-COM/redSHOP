<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" client="site" type="plugin" group="redshop_payment" method="upgrade">
    <name>PLG_RS_PAYMENT_SAGEPAY</name>
    <version>1.5</version>
    <redshop>1.5</redshop>
    <creationDate>April 2013</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>http://www.redcomponent.com</authorUrl>
    <copyright>redCOMPONENT.com</copyright>
    <license>GNU General Public License v2</license>
    <description>PLG_RS_PAYMENT_SAGEPAY_DESK</description>

    <files>
        <filename plugin="rs_payment_sagepay">rs_payment_sagepay.php</filename>
        <folder>rs_payment_sagepay</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_sagepay.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_sagepay.sys.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.plg_redshop_payment_rs_payment_sagepay.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.plg_redshop_payment_rs_payment_sagepay.sys.ini</language>
    </languages>
    <config addfieldpath="/administrator/components/com_redshop/elements">
        <fields name="params">
            <fieldset name="basic">

                <field name="payment_oprand" type="text" size="10" default="-"
                       label="PLG_RS_PAYMENT_SAGEPAY_PAYMENT_OPRAND_LBL"/>
                <field name="payment_price" type="text" size="30" default=""
                       label="PLG_RS_PAYMENT_SAGEPAY_PAYMENT_PRICE_LBL"/>
                <field name="debug_mode" type="radio" default="1" label="PLG_RS_PAYMENT_SAGEPAY_DEBUG_MODE_LBL"
                       class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="payment_discount_is_percent" type="radio" default="1"
                       label="PLG_RS_PAYMENT_SAGEPAY_PAYMENT_DISCOUNT_IS_PERCENT_LBL" class="btn-group btn-group-yesno">
                    <option value="1">PLG_RS_PAYMENT_SAGEPAY_PERCENTAGE</option>
                    <option value="0">PLG_RS_PAYMENT_SAGEPAY_TOTAL</option>
                </field>
                <field name="payment_method" type="list" default="1"
                       label="PLG_RS_PAYMENT_SAGEPAY_PAYMENT_METHOD_LBL">
                    <option value="LIVE">PLG_RS_PAYMENT_SAGEPAY_LIVE</option>
                    <option value="TEST">PLG_RS_PAYMENT_SAGEPAY_TEST</option>
                    <option value="SIMULATOR">PLG_RS_PAYMENT_SAGEPAY_SIMULATOR</option>
                </field>
                <field name="sagepay_vendorname" type="text" default="vendorname"
                       label="PLG_RS_PAYMENT_SAGEPAY_SAGEPAY_VENDORNAME_LBL" description="PLG_RS_PAYMENT_SAGEPAY_SAGEPAY_VENDORNAME_DESC"/>
                <field name="sagepay_vendoremail" type="text" default="vendoremail"
                       label="PLG_RS_PAYMENT_SAGEPAY_SAGEPAY_VENDOREMAIL_LBL" description="PLG_RS_PAYMENT_SAGEPAY_SAGEPAY_VENDOREMAIL_DESC"/>
                <field name="sagepay_encryptpass" type="text" default=""
                       label="PLG_RS_PAYMENT_SAGEPAY_SAGEPAY_ENCRYPTPASS_LBL"/>
                <field name="sagepay_protocol" type="text" default="2.23"
                       label="PLG_RS_PAYMENT_SAGEPAY_SAGEPAY_PROTOCOL_LBL"/>
                <field name="sagepay_transactiontype" type="text" default="PAYMENT"
                       label="PLG_RS_PAYMENT_SAGEPAY_SAGEPAY_TRANSACTIONTYPE_LBL"/>
                <field name="enable_shipping" type="radio" default="1" class="btn-group btn-group-yesno"
                       label="PLG_RS_PAYMENT_SAGEPAY_ENABLE_SHIPPING_LBL" description="PLG_RS_PAYMENT_SAGEPAY_ENABLE_SHIPPING_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="verify_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="C"
                       label="PLG_RS_PAYMENT_SAGEPAY_VERIFY_STATUS_LBL"
                       description="PLG_RS_PAYMENT_SAGEPAY_VERIFY_STATUS_DESC">
                </field>
                <field name="invalid_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="P"
                       label="PLG_RS_PAYMENT_SAGEPAY_INVALID_STATUS_LBL"
                       description="PLG_RS_PAYMENT_SAGEPAY_INVALID_STATUS_DESC">
                </field>
                <field name="capture_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="S"
                       label="PLG_RS_PAYMENT_SAGEPAY_CAPTURE_STATUS_LBL"
                       description="PLG_RS_PAYMENT_SAGEPAY_CAPTURE_STATUS_DESC">
                </field>
                <field name="extrafield_payment" type="extrafieldpayment" label="PLG_RS_PAYMENT_SAGEPAY_EXTRAFIELD_PAYMENT_LBL"
                       description="PLG_RS_PAYMENT_SAGEPAY_EXTRAFIELD_PAYMENT_DESC"/>
                <field type="spacer"/>
            </fieldset>
            <fieldset name="advanced">
                <field name="private_person" type="radio" default="1" class="btn-group btn-group-yesno"
                       label="PLG_RS_PAYMENT_SAGEPAY_PRIVATE_PERSON_LBL">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="business" type="radio" default="1" label="PLG_RS_PAYMENT_SAGEPAY_BUSINESS_LBL"
                       class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="is_creditcard" type="hidden" default="0" value="0"/>
                <field name="economic_payment_terms_id" type="text" default=""
                       label="PLG_RS_PAYMENT_SAGEPAY_ECONOMIC_PAYMENT_TERMS_ID_LBL"/>
                <field name="economic_design_layout" type="text" default=""
                       label="PLG_RS_PAYMENT_SAGEPAY_ECONOMIC_DESIGN_LAYOUT_LBL"/>
                <field name="shopper_group_id" type="shoppergrouplist" default="0"
                       label="PLG_RS_PAYMENT_SAGEPAY_SHOPPER_GROUP_ID_LBL"
                       description="PLG_RS_PAYMENT_SAGEPAY_SHOPPER_GROUP_ID_DESC"/>
            </fieldset>
        </fields>
    </config>
</extension>
