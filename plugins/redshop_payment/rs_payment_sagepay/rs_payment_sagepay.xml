<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" client="site" type="plugin" group="redshop_payment" method="upgrade">
    <name>PLG_RS_PAYMENT_SAGEPAY</name>
    <version>1.1.1</version>
    <creationDate>27th July 2012</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>http://www.redcomponent.com</authorUrl>
    <copyright>redCOMPONENT.com</copyright>
    <license>GNU General Public License v2</license>
    <description>This plugin enables standard SagePay payments
    </description>

    <files>
        <filename plugin="rs_payment_sagepay">rs_payment_sagepay.php</filename>
        <folder>rs_payment_sagepay</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_sagepay.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_sagepay.sys.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.plg_redshop_payment_rs_payment_sagepay.ini</language>
        <language tag="da-DK">language/da-DK/da-DK.plg_redshop_payment_rs_payment_sagepay.sys.ini</language>
    </languages>
    <config addfieldpath="/administrator/components/com_redshop/elements">
        <fields name="params">
            <fieldset name="basic">

                <field name="payment_oprand" type="text" size="10" default="-"
                       label="Payment operand" description="Payment Operand"/>
                <field name="payment_price" type="text" size="30" default=""
                       label="Payment price" description="Payment price"/>
                <field name="debug_mode" type="radio" default="1" label="Debug Mode: "
                       description="Debug Mode">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="payment_discount_is_percent" type="radio" default="1"
                       label="Discount Type: " description="Discount Type">
                    <option value="1">Percentage</option>
                    <option value="0">Total</option>
                </field>
                <field name="payment_method" type="list" default="1"
                       label="SAGEPAY_CONNECT_TO" description="SAGEPAY_CONNECT_TO">
                    <option value="LIVE">LIVE</option>
                    <option value="TEST">TEST</option>
                    <option value="SIMULATOR">SIMULATOR</option>
                </field>
                <field name="sagepay_vendorname" type="text" default="vendorname"
                       label="Vendor name" description=" SagePay Vendor Name"/>
                <field name="sagepay_vendoremail" type="text" default="vendoremail"
                       label="Vendor Email" description=" SagePay Vendor Email"/>
                <field name="sagepay_encryptpass" type="text" default=""
                       label="Encryption Password" description=" "/>
                <field name="sagepay_protocol" type="text" default="2.23"
                       label="Sagepay protocol" description=" "/>
                <field name="sagepay_transactiontype" type="text" default="PAYMENT"
                       label="Sagepay transaction type" description=" "/>
                <field name="enable_shipping" type="radio" default="1"
                       label="Sagepay Shipping Enable" description="Enable Shipping">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="verify_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="C"
                       label="Order Status for successful transactions"
                       description="Select the order status to which the actual order is set, if the payment transaction was successful.">
                </field>
                <field name="invalid_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="P"
                       label="Order Status for failed transactions"
                       description="Select an order status for failed payment transactions.">
                </field>
                <field name="capture_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="S"
                       label="Capture Payment Status"
                       description="Select an capture status for capturing payment."></field>
                <field name="extrafield_payment" type="extrafieldpayment" label="Select Extra Field"
                       description="Displays on checkout"/>
                <field type="spacer"/>
            </fieldset>
            <fieldset name="advanced">
                <field name="private_person" type="radio" default="1"
                       label="Show on Private Person" description="Show on Private Person">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="business" type="radio" default="1" label="Show on Business"
                       description="Show on Business">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="is_creditcard" type="hidden" default="0" value="0"/>
                <field name="economic_payment_terms_id" type="text" default=""
                       label="Enter E-conomic Payment Conditions ID"/>
                <field name="economic_design_layout" type="text" default=""
                       label="Enter E-conomic Design and Layout ID"/>
                <field name="shopper_group_id" type="plugins" default="0"
                       label="Select Shopper Group" description="Displays the shopper groups"/>
            </fieldset>
        </fields>
    </config>
</extension>
