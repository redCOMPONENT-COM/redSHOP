<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="redshop_payment" method="upgrade">
    <name>PLG_RS_PAYMENT_BBS</name>
    <version>1.3.5</version>
    <redshop>1.5</redshop>
    <creationDate>April 2013</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>http://www.redcomponent.com</authorUrl>
    <copyright>redCOMPONENT.com</copyright>
    <license>GNU General Public License v2</license>
    <description>This plugin enables standard BBS payments</description>

    <files>
        <filename plugin="rs_payment_bbs">rs_payment_bbs.php</filename>
        <folder>rs_payment_bbs</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_bbs.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_bbs.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="payment_oprand" type="text" size="10" default="-"
                       label="PLG_RS_PAYMENT_BBS_PAYMENT_OPERAND"
                       description="PLG_RS_PAYMENT_BBS_PAYMENT_OPERAND_DESC"/>
                <field name="payment_price" type="text" size="30" default=""
                       label="PLG_RS_PAYMENT_BBS_PAYMENT_PRICE"
                       description="PLG_RS_PAYMENT_BBS_PAYMENT_PRICE_DESC"/>
                <field name="payment_discount_is_percent" type="radio" default="1"
                       label="PLG_RS_PAYMENT_BBS_PAYMENT_DISCOUNT_IS_PERCENT"
                       description="PLG_RS_PAYMENT_BBS_PAYMENT_DISCOUNT_IS_PERCENT_DESC">
                    <option value="1">PLG_RS_PAYMENT_BBS_PAYMENT_PERCENTAGE</option>
                    <option value="0">PLG_RS_PAYMENT_BBS_PAYMENT_TOTAL</option>
                </field>
                <field name="is_test" type="list" default="TRUE"
                       label="PLG_RS_PAYMENT_BBS_IS_TEST"
                       description="PLG_RS_PAYMENT_BBS_IS_TEST_DESC">
                    <option value="FALSE">JNO</option>
                    <option value="TRUE">JYES</option>
                </field>
                <field name="access_id" type="text" default=""
                       label="PLG_RS_PAYMENT_BBS_ACCESS_ID"
                       description="PLG_RS_PAYMENT_BBS_ACCESS_ID_DESC"/>
                <field name="token_id" type="text" default=""
                       label="PLG_RS_PAYMENT_BBS_TOKEN_ID"
                       description="PLG_RS_PAYMENT_BBS_TOKEN_ID_DESC"/>
                <field name="auth_type" type="list" default="0"
                       label="PLG_RS_PAYMENT_BBS_AUTH_TYPE"
                       description="PLG_RS_PAYMENT_BBS_AUTH_TYPE_DESC">
                    <option value="AUTH">PLG_RS_PAYMENT_BBS_AUTH_CAPTURE</option>
                    <option value="SALE">PLG_RS_PAYMENT_BBS_AUTH_ONLY</option>
                </field>
                <field name="verify_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="C"
                       label="PLG_RS_PAYMENT_BBS_VERIFY_STATUS"
                       description="PLG_RS_PAYMENT_BBS_VERIFY_STATUS_DESC">
                </field>
                <field name="invalid_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="P"
                       label="PLG_RS_PAYMENT_BBS_INVALID_STATUS"
                       description="PLG_RS_PAYMENT_BBS_INVALID_STATUS_DESC"
                        >
                </field>
                <field name="capture_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="S"
                       label="PLG_RS_PAYMENT_BBS_CAPTURE_STATUS"
                       description="PLG_RS_PAYMENT_BBS_CAPTURE_STATUS_DESC">
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="private_person" type="radio" default="1"
                       label="PLG_RS_PAYMENT_BBS_PRIVATE_PERSON"
                       description="PLG_RS_PAYMENT_BBS_PRIVATE_PERSON_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="business" type="radio" default="1"
                       label="PLG_RS_PAYMENT_BBS_BUSINESS"
                       description="PLG_RS_PAYMENT_BBS_BUSINESS_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="is_creditcard" type="hidden" default="0" value="0"/>
                <field name="economic_payment_terms_id" type="text" default=""
                       label="PLG_RS_PAYMENT_BBS_ECONOMIC_PAYMENT_TERMS_ID"/>
                <field name="economic_design_layout" type="text" default=""
                       label="PLG_RS_PAYMENT_BBS_ECONOMIC_DESIGN_LAYOUT"/>
                <field name="shopper_group_id" type="shoppergrouplist" multiple="multiple" default="0"
                       label="PLG_RS_PAYMENT_BBS_SHOPPER_GROUP_ID"
                       description="PLG_RS_PAYMENT_BBS_SHOPPER_GROUP_ID_DESC"
                       addfieldpath="/administrator/components/com_redshop/elements"/>
                <field name="order_status_capture" type="sql"
                       query="SELECT order_status_code AS value, order_status_name AS title FROM #__redshop_order_status "
                       default="S" key_field="value" value_field="title"
                       label="PLG_RS_PAYMENT_BBS_ORDER_STATUS_CAPTURE"
                       description="PLG_RS_PAYMENT_BBS_ORDER_STATUS_CAPTURE_DESC">
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
