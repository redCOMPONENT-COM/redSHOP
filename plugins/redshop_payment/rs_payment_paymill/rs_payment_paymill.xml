<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="redshop_payment" method="upgrade">
    <name>PLG_RS_PAYMENT_PAYMILL</name>
    <version>2.0.0</version>
    <redshop>2.0</redshop>
    <creationDate>Sep 2016</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>http://www.redcomponent.com</authorUrl>
    <copyright>redCOMPONENT.com</copyright>
    <license>GNU General Public License v2</license>
    <description>PLG_RS_PAYMENT_PAYMILL_DESC</description>
    <files>
        <filename plugin="rs_payment_paymill">rs_payment_paymill.php</filename>
        <filename>index.html</filename>
        <folder>language</folder>
        <folder>layouts</folder>
        <folder>library</folder>
    </files>
    <media destination="plg_redshop_payment_rs_payment_paymill" folder="media">
        <folder>css</folder>
        <folder>images</folder>
        <folder>js</folder>
    </media>
    <config addfieldpath="/libraries/redshop/form/fields">
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="payment_oprand"
                        type="text"
                        size="10"
                        default="-"
                        label="PLG_RS_PAYMENT_PAYMILL_PAYMENT_OPRAND_LBL"
                />
                <field
                        name="payment_price"
                        type="text"
                        size="30"
                        default=""
                        label="PLG_RS_PAYMENT_PAYMILL_PAYMENT_PRICE_LBL"
                />
                <field
                        name="payment_discount_is_percent"
                        type="radio"
                        default="1"
                        class="btn-group"
                        label="PLG_RS_PAYMENT_PAYMILL_PAYMENT_DISCOUNT_IS_PERCENT_LBL">
                    <option value="1">PLG_RS_PAYMENT_PAYMILL_PERCENTAGE</option>
                    <option value="0">PLG_RS_PAYMENT_PAYMILL_TOTAL</option>
                </field>
                <field
                        name="environment"
                        type="list"
                        default="sandbox"
                        label="PLG_RS_PAYMENT_PAYMILL_ENVIRONMENT_LBL"
                        description="PLG_RS_PAYMENT_PAYMILL_ENVIRONMENT_DESC">
                    <option value="sandbox">PLG_RS_PAYMENT_PAYMILL_SANDBOX</option>
                    <option value="production">PLG_RS_PAYMENT_PAYMILL_PRODUCTION</option>
                </field>
                <field
                        name="paymill_public_key"
                        type="text"
                        default=""
                        label="PLG_RS_PAYMENT_PAYMILL_PAYMILL_PUBLIC_KEY_LBL"
                        description="PLG_RS_PAYMENT_PAYMILL_PAYMILL_PUBLIC_KEY_DESC"
                />
                <field
                        name="paymill_private_key"
                        type="text"
                        default=""
                        label="PLG_RS_PAYMENT_PAYMILL_PAYMILL_PRIVATE_KEY_LBL"
                        description="PLG_RS_PAYMENT_PAYMILL_PAYMILL_PRIVATE_KEY_DESC"
                />
                <field
                        name="verify_status"
                        type="sql"
                        query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                        key_field="st_value"
                        value_field="st_title"
                        default="C"
                        label="PLG_RS_PAYMENT_PAYMILL_VERIFY_STATUS_LBL"
                        description="PLG_RS_PAYMENT_PAYMILL_VERIFY_STATUS_DESC"
                />
                <field
                        name="invalid_status"
                        type="sql"
                        query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                        key_field="st_value"
                        value_field="st_title"
                        default="P"
                        label="PLG_RS_PAYMENT_PAYMILL_INVALID_STATUS_LBL"
                        description="PLG_RS_PAYMENT_PAYMILL_INVALID_STATUS_DESC"
                />
                <field
                        name="capture_status"
                        type="sql"
                        query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                        key_field="st_value"
                        value_field="st_title"
                        default="S"
                        label="PLG_RS_PAYMENT_PAYMILL_CAPTURE_STATUS_LBL"
                        description="PLG_RS_PAYMENT_PAYMILL_CAPTURE_STATUS_DESC"
                />
            </fieldset>
            <fieldset name="advanced">
                <field
                        name="private_person"
                        type="radio"
                        default="1"
                        label="PLG_RS_PAYMENT_PAYMILL_PRIVATE_PERSON_LBL"
                        class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="business"
                        type="radio"
                        default="1"
                        label="PLG_RS_PAYMENT_PAYMILL_BUSINESS_LBL"
                        class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="is_creditcard"
                        type="hidden"
                        default="0"
                        value="0"
                />
                <field
                        name="preloader"
                        type="hidden"
                        default="0"
                        value="0"
                />
                <field
                        name="economic_payment_terms_id"
                        type="text"
                        default="2"
                        label="PLG_RS_PAYMENT_PAYMILL_ECONOMIC_PAYMENT_TERMS_ID_LBL"
                />
                <field
                        name="economic_design_layout"
                        type="text"
                        default=""
                        label="PLG_RS_PAYMENT_PAYMILL_ECONOMIC_DESIGN_LAYOUT_LBL"
                />
                <field
                        name="shopper_group_id"
                        type="shoppergrouplist"
                        multiple="multiple"
                        default="0"
                        label="PLG_RS_PAYMENT_PAYMILL_SHOPPER_GROUP_ID_LBL"
                        description="PLG_RS_PAYMENT_PAYMILL_SHOPPER_GROUP_ID_DESC"
                />
            </fieldset>
        </fields>
    </config>
</extension>
