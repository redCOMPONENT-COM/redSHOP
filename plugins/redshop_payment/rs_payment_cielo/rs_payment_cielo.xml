<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" client="site" type="plugin" group="redshop_payment"
           method="upgrade">
    <name>PLG_RS_PAYMENT_CIELO</name>
    <version>1.5.1</version>
    <redshop>1.5</redshop>
    <creationDate>April 2013</creationDate>
    <author>redCOMPONENT.com</author>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>http://www.redcomponent.com</authorUrl>
    <copyright>redCOMPONENT.com</copyright>
    <license>GNU General Public License v2</license>
    <description>PLG_RS_PAYMENT_CIELO_DESC</description>

    <files>
        <filename plugin="rs_payment_cielo">rs_payment_cielo.php</filename>
        <filename>index.html</filename>
        <folder>rs_payment_cielo</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_cielo.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_cielo.sys.ini</language>
    </languages>
    <config addfieldpath="/administrator/components/com_redshop/elements">
        <fields name="params">
            <fieldset name="basic">

                <field name="payment_oprand" type="text" size="10" default="-"
                       label="PLG_RS_PAYMENT_CIELO_PAYMENT_OPRAND_LBL"/>
                <field name="payment_price" type="text" size="30" default=""
                       label="PLG_RS_PAYMENT_CIELO_PAYMENT_PRICE_LBL"/>
                <field name="payment_discount_is_percent" type="radio" default="1"
                       class="btn-group"
                       label="PLG_RS_PAYMENT_CIELO_PAYMENT_DISCOUNT_IS_PERCENT_LBL">
                    <option value="1">PLG_RS_PAYMENT_CIELO_PERCENTAGE</option>
                    <option value="0">PLG_RS_PAYMENT_CIELO_TOTAL</option>
                </field>
                <field name="debug_mode" type="radio" default="1"
                       class="btn-group btn-group-yesno"
                       label="PLG_RS_PAYMENT_CIELO_DEBUG_MODE_LBL">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="accepted_credict_card" type="creditcards" default="0"
                       label="PLG_RS_PAYMENT_CIELO_ACCEPTED_CREDICT_CARD_LBL" description="PLG_RS_PAYMENT_CIELO_ACCEPTED_CREDICT_CARD_DESC"/>
                <field name="cielo_loja_id" type="text" default=""
                       label="PLG_RS_PAYMENT_CIELO_CIELO_LOJA_ID_LBL"/>
                <field name="cielo_loja_chave" type="text" default=""
                       label="PLG_RS_PAYMENT_CIELO_CIELO_LOJA_CHAVE_LBL"/>
                <field name="tipoParcelamento" type="list" default="2"
                       label="PLG_RS_PAYMENT_CIELO_TIPOPARCELAMENTO_LBL">
                    <option value="2">PLG_RS_PAYMENT_CIELO_SHOP</option>
                    <option value="3">PLG_RS_PAYMENT_CIELO_ADMINISTRADOR</option>
                </field>
                <field name="tentarAutenticar" type="list" default="nao"
                       label="PLG_RS_PAYMENT_CIELO_TENTARAUTENTICAR_LBL">
                    <option value="sim">JYES</option>
                    <option value="nao">JNO</option>
                </field>
                <field name="indicadorAutorizacao" type="list" default="3"
                       label="PLG_RS_PAYMENT_CIELO_INDICADORAUTORIZACAO_LBL" description="PLG_RS_PAYMENT_CIELO_INDICADORAUTORIZACAO_DESC">
                    <option value="3">PLG_RS_PAYMENT_CIELO_ALLOW_DIRECT</option>
                    <option value="2">PLG_RS_PAYMENT_CIELO_ALLOW_AUTHENTICATED_AND_UNAUTHENTICATED</option>
                    <option value="0">PLG_RS_PAYMENT_CIELO_ONLY_AUTHENTICATE_THE_TRANSACTION</option>
                    <option value="1">PLG_RS_PAYMENT_CIELO_AUTHORIZE_ONLY_IF_CERTIFIED</option>
                </field>
                <field name="capturarAutomaticamente" type="list" default="true"
                       label="PLG_RS_PAYMENT_CIELO_CAPTURARAUTOMATICAMENTE_LBL" description="PLG_RS_PAYMENT_CIELO_CAPTURARAUTOMATICAMENTE_DESC">
                    <option value="true">JYES</option>
                    <option value="false">JNO</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="verify_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="C"
                       label="PLG_RS_PAYMENT_CIELO_VERIFY_STATUS_LBL"
                       description="PLG_RS_PAYMENT_CIELO_VERIFY_STATUS_DESC">
                </field>
                <field name="invalid_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="P"
                       label="PLG_RS_PAYMENT_CIELO_INVALID_STATUS_LBL"
                       description="PLG_RS_PAYMENT_CIELO_INVALID_STATUS_DESC">
                </field>
                <field name="capture_status" type="sql"
                       query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
                       key_field="st_value" value_field="st_title" default="S"
                       label="PLG_RS_PAYMENT_CIELO_CAPTURE_STATUS_LBL" description="PLG_RS_PAYMENT_CIELO_CAPTURE_STATUS_DESC">
                </field>
                <field name="private_person" type="radio" default="1"
                       class="btn-group btn-group-yesno"
                       label="PLG_RS_PAYMENT_CIELO_PRIVATE_PERSON_LBL">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="business" type="radio" default="1" label="PLG_RS_PAYMENT_CIELO_BUSINESS_LBL"
                       class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="is_creditcard" type="hidden" default="1" value="1"/>
                <field name="economic_payment_terms_id" type="text" default=""
                       label="PLG_RS_PAYMENT_CIELO_ECONOMIC_PAYMENT_TERMS_ID_LBL"/>
                <field name="economic_design_layout" type="text" default=""
                       label="PLG_RS_PAYMENT_CIELO_ECONOMIC_DESIGN_LAYOUT_LBL"/>
                <field name="shopper_group_id" type="shoppergrouplist" multiple="multiple" default="0"
                       label="PLG_RS_PAYMENT_CIELO_SHOPPER_GROUP_ID_LBL"
                       description="PLG_RS_PAYMENT_CIELO_SHOPPER_GROUP_ID_DESC"/>
            </fieldset>
        </fields>
    </config>
</extension>
