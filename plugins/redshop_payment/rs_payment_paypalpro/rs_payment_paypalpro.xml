<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" client="site" type="plugin" group="redshop_payment"
		   method="upgrade">
	<name>PLG_RS_PAYMENT_PAYPALPRO</name>
	<version>1.5.0.6</version>
	<redshop>1.5.0.6</redshop>
	<creationDate>April 2013</creationDate>
	<author>redCOMPONENT.com</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<authorUrl>http://www.redcomponent.com</authorUrl>
	<copyright>redCOMPONENT.com</copyright>
	<license>GNU General Public License v2</license>
	<description>PLG_RS_PAYMENT_PAYPALPRO_DESC</description>

	<files>
		<filename plugin="rs_payment_paypalpro">rs_payment_paypalpro.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_paypalpro.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_paypalpro.sys.ini</language>
	</languages>
	<config addfieldpath="/libraries/redshop/form/fields">
		<fields name="params">
			<fieldset name="basic">
				<field name="payment_oprand" type="text" size="10" default="-"
					   label="PLG_RS_PAYMENT_PAYPALPRO_PAYMENT_OPRAND_LBL"/>
				<field name="payment_price" type="text" size="30" default=""
					   label="PLG_RS_PAYMENT_PAYPALPRO_PAYMENT_PRICE_LBL"/>
				<field name="payment_discount_is_percent" type="radio" default="1"
					   class="btn-group"
					   label="PLG_RS_PAYMENT_PAYPALPRO_PAYMENT_DISCOUNT_IS_PERCENT_LBL">
					<option value="1">PLG_RS_PAYMENT_PAYPALPRO_PERCENTAGE</option>
					<option value="0">PLG_RS_PAYMENT_PAYPALPRO_TOTAL</option>
				</field>
				<field name="debug_mode" type="radio" default="1" label="PLG_RS_PAYMENT_PAYPALPRO_DEBUG_MODE_LBL"
					   class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="is_test" type="list" default="1" label="PLG_RS_PAYMENT_PAYPALPRO_IS_TEST_LBL"
					   description="PLG_RS_PAYMENT_PAYPALPRO_IS_TEST_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="user_cvv" type="list" default="1" label="PLG_RS_PAYMENT_PAYPALPRO_USER_CVV_LBL"
					   description="PLG_RS_PAYMENT_PAYPALPRO_USER_CVV_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="api_username" type="text" default=""
					   label="PLG_RS_PAYMENT_PAYPALPRO_API_USERNAME_LBL"
					   description="PLG_RS_PAYMENT_PAYPALPRO_API_USERNAME_DESC"/>
				<field name="api_password" type="text" default="" label="PLG_RS_PAYMENT_PAYPALPRO_API_PASSWORD_LBL"
					   description="PLG_RS_PAYMENT_PAYPALPRO_API_PASSWORD_DESC"/>
				<field name="api_signature" type="text" default="" label="PLG_RS_PAYMENT_PAYPALPRO_API_SIGNATURE_LBL"
					   description="PLG_RS_PAYMENT_PAYPALPRO_API_SIGNATURE_DESC"/>
				<field name="paypal_email_address" type="text" default=""
					   label="PLG_RS_PAYMENT_PAYPALPRO_PAYPAL_EMAIL_ADDRESS_LBL"
					   description="PLG_RS_PAYMENT_PAYPALPRO_PAYPAL_EMAIL_ADDRESS_DESC"/>
				<field name="sales_auth_only" type="list" default="1"
					   label="PLG_RS_PAYMENT_PAYPALPRO_SALES_AUTH_ONLY_LBL"
					   description="PLG_RS_PAYMENT_PAYPALPRO_SALES_AUTH_ONLY_DESC">
					<option value="Sale">PLG_RS_PAYMENT_PAYPALPRO_SALES</option>
					<option value="Authorization">PLG_RS_PAYMENT_PAYPALPRO_AUTHORIZE_ONLY</option>
				</field>
				<field name="verify_status" type="sql"
					   query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
					   key_field="st_value" value_field="st_title" default="C"
					   label="PLG_RS_PAYMENT_PAYPALPRO_VERIFY_STATUS_LBL"
					   description="PLG_RS_PAYMENT_PAYPALPRO_VERIFY_STATUS_DESC">
				</field>
				<field name="invalid_status" type="sql"
					   query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
					   key_field="st_value" value_field="st_title" default="P"
					   label="PLG_RS_PAYMENT_PAYPALPRO_INVALID_STATUS_LBL"
					   description="PLG_RS_PAYMENT_PAYPALPRO_INVALID_STATUS_DESC">
				</field>
				<field name="capture_status" type="sql"
					   query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status"
					   key_field="st_value" value_field="st_title" default="S"
					   label="PLG_RS_PAYMENT_PAYPALPRO_CAPTURE_STATUS_LBL"
					   description="PLG_RS_PAYMENT_PAYPALPRO_CAPTURE_STATUS_DESC">
				</field>
				<field name="extrafield_payment" type="extrafields" field_section="18" multiple="multiple"
					   label="PLG_RS_PAYMENT_PAYPALPRO_EXTRAFIELD_PAYMENT_LBL"
					   description="PLG_RS_PAYMENT_PAYPALPRO_EXTRAFIELD_PAYMENT_DESC"/>
			</fieldset>
			<fieldset name="advanced">
				<field name="private_person" type="radio" default="1"
					   class="btn-group btn-group-yesno"
					   label="PLG_RS_PAYMENT_PAYPALPRO_PRIVATE_PERSON_LBL">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="business" type="radio" default="1" label="PLG_RS_PAYMENT_PAYPALPRO_BUSINESS_LBL"
					   class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="is_creditcard" type="hidden" default="1" value="1"/>
				<field name="accepted_credict_card" type="creditcards" default="0"
					   label="PLG_RS_PAYMENT_PAYPALPRO_ACCEPTED_CREDICT_CARD_LBL"
					   description="PLG_RS_PAYMENT_PAYPALPRO_ACCEPTED_CREDICT_CARD_DESC"/>
				<field name="economic_payment_terms_id" type="text" default=""
					   label="PLG_RS_PAYMENT_PAYPALPRO_ECONOMIC_PAYMENT_TERMS_ID_LBL"/>
				<field name="economic_design_layout" type="text" default=""
					   label="PLG_RS_PAYMENT_PAYPALPRO_ECONOMIC_DESIGN_LAYOUT_LBL"/>
				<field name="shopper_group_id" type="shoppergrouplist" multiple="multiple" default="0"
					   label="PLG_RS_PAYMENT_PAYPALPRO_SHOPPER_GROUP_ID_LBL"
					   description="PLG_RS_PAYMENT_PAYPALPRO_SHOPPER_GROUP_ID_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>
